@page "/UpdateInvoice/{InvoiceId}"

<EditForm Model="model" OnValidSubmit="SubmitEditInvoice">
    <DataAnnotationsValidator />
    
<div class="manual-invoice-card">
    <div class="card-header">
        <div class="card-title">
            <i class="fas fa-file-invoice"></i> <span>@GeneralUIResources.UpdateInvoice</span>
        </div>
    </div>

    <div class="card-content">
        <div class="invoice-topbar">
            <div class="invoice-form-group">
                <label>@GeneralUIResources.Currency</label>
                <InputSelect class="invoice-select" @bind-Value="model.CurrencyCode" @bind-Value:after="OnCurrencyChangedAfter">
                    <option value="USD">USD</option>
                    <option value="EGP">EGP</option>
                    <option value="SAR">SAR</option>
                </InputSelect>
                <ValidationMessage For="@(() => model.CurrencyCode)" />
            </div>
            <div class="invoice-form-group">
                <label>@GeneralUIResources.LocalTotalCalculated</label>
                <InputNumber class="invoice-input" step="0.01" @bind-Value="model.FinalTotalLocal" @bind-Value:after="DistributeTotalProportionally" />
                <ValidationMessage For="@(() => model.FinalTotalLocal)" />
            </div>
            <div class="invoice-form-group">
                <label>@GeneralUIResources.PaymentMethod</label>
                <InputSelect class="invoice-select" @bind-Value="model.PaymentMethodId">
                    <option value="0">Select</option>
                    @if (paymentMethods?.Count > 0)
                    {
                        @foreach (var pm in paymentMethods)
                        {
                            <option value="@pm.MethodId">@pm.Name</option>
                        }
                    }
                    else
                    {
                        <option value="0">@GeneralResources.Loading...</option>
                    }
                </InputSelect>
                <ValidationMessage For="@(() => model.PaymentMethodId)" />
            </div>
            <div class="invoice-form-group">
                <label>@GeneralUIResources.AdvertisingMethod</label>
                <InputSelect class="invoice-select" @bind-Value="model.AdvertisingMethodId">
                    <option value="">Select</option>
                    @if (advertisingMethods?.Count > 0)
                    {
                        @foreach (var ad in advertisingMethods)
                        {
                            <option value="@ad.Id">@ad.Name</option>
                        }
                    }
                    else
                    {
                        <option value="">@GeneralUIResources.NoAdvertisingMethods</option>
                    }
                </InputSelect>
                <ValidationMessage For="@(() => model.AdvertisingMethodId)" />
            </div>
            <div class="invoice-form-group">
                <label>@GeneralUIResources.InvoiceDateUtc</label>
                <InputDate class="invoice-input" Type="InputDateType.DateTimeLocal" @bind-Value="invoiceDateLocal" />
                <ValidationMessage For="@(() => model.InvoiceDateUtc)" />
            </div>
        </div>

        <!-- Tabs -->
        <div class="invoice-tabs-wrapper">
            <button type="button" class="invoice-tab-button @(activeTab == "courses" ? "active" : "")"
                    @onclick="@(() => SetTab("courses"))">
                <i class="fas fa-book"></i> @AdminResources.Courses
            </button>

            <button type="button" class="invoice-tab-button @(activeTab == "packages" ? "active" : "")"
                    @onclick="@(() => SetTab("packages"))">
                <i class="fas fa-box"></i> @AdminResources.Diplomas
            </button>
        </div>

        <div class="invoice-grid">
            <div>
                <!-- Courses Tab -->
                @if (activeTab == "courses")
                {
                    <div class="invoice-section">
                        <div class="invoice-section-title"><i class="fas fa-search"></i> @ActionsResources.Search @AdminResources.Courses</div>
                        <div class="invoice-search-box">
                            <input placeholder="@($"{ActionsResources.Search} {FormResources.Name}...")" value="@searchTerm" @oninput="(e) => { searchTerm = e.Value?.ToString() ?? string.Empty; ApplyFilter(); }" />
                        </div>
                        <div class="invoice-table-wrapper">
                            <table class="invoice-data-table">
                                <thead>
                                    <tr>
                                        <th>@FormResources.Image</th>
                                        <th>@FormResources.Name</th>
                                        <th>@FormResources.Price</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (isLoading)
                                    {
                                        <tr><td colspan="4" class="invoice-empty-state"><i class="fas fa-spinner fa-spin"></i> @GeneralResources.Loading...</td></tr>
                                    }
                                    else if (filteredCourses == null || filteredCourses.Count == 0)
                                    {
                                        <tr><td colspan="4" class="invoice-empty-state"><i class="fas fa-inbox"></i> @GeneralUIResources.NoResults</td></tr>
                                    }
                                    else
                                    {
                                        @foreach (var c in filteredCourses)
                                        {
                                            <tr>
                                                <td><img src="@c.Image" alt="@c.TitleAr" class="invoice-table-image" /></td>
                                                <td>@c.TitleAr</td>
                                                <td>@(c.Prices.Where(c => c.Currency == model.CurrencyCode).FirstOrDefault().SalesPrice.ToString("F2")) @model.CurrencyCode</td>
                                                <td>
                                                    <button type="button" class="invoice-btn" @onclick="() => AddCourseToCart(c)">
                                                        <i class="fas fa-cart-plus"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                }
                <!-- Packages Tab -->
                @if (activeTab == "packages")
                {
                    <div class="invoice-section">
                        <div class="invoice-section-title"><i class="fas fa-filter"></i> @GeneralUIResources.ChooseDiploma</div>
                        <div class="invoice-form-group">
                            <select class="invoice-select" @onchange="OnDiplomaChanged">
                                <option value="">@GeneralUIResources.SelectDiploma</option>
                                @if (diplomas?.Count > 0)
                                {
                                    @foreach (var diploma in diplomas)
                                    {
                                        <option value="@diploma.CategoryId">@diploma.TitleAr</option>
                                    }
                                }
                            </select>
                        </div>

                        @if (isLoadingPackages)
                        {
                            <div class="invoice-empty-state">
                                <i class="fas fa-spinner fa-spin"></i>
                                <p>@($"{GeneralResources.Loading} {AdminResources.Diplomas}...")</p>
                            </div>
                        }
                        else if (packages == null || packages.Count == 0)
                        {
                            <div class="invoice-empty-state">
                                <i class="fas fa-box-open"></i>
                                <p>@GeneralUIResources.NoDiplomasAvailable</p>
                            </div>
                        }
                        else
                        {
                            <div class="invoice-table-wrapper">
                                <table class="invoice-data-table">
                                    <thead>
                                        <tr>
                                            <th>@FormResources.Name</th>
                                            <th>@GeneralUIResources.Rank</th>
                                            <th>@FormResources.Price</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var pkg in packages)
                                        {
                                            var priceInfo = pkg.Prices?.Where(p => p.Currency == model.CurrencyCode).FirstOrDefault();
                                            <tr>
                                                <td>@pkg.TitleAr</td>
                                                <td><span class="badge">@pkg.Rank</span></td>
                                                <td>
                                                    @if (priceInfo != null)
                                                    {
                                                        <span>@priceInfo.Price.ToString("F2") @model.CurrencyCode</span>
                                                    }
                                                    else
                                                    {
                                                        <span>--</span>
                                                    }
                                                </td>
                                                <td>
                                                    <button type="button" class="invoice-btn" @onclick="() => AddPackageToCart(pkg)">
                                                        <i class="fas fa-cart-plus"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                    </div>
                }
            </div>

            <div class="invoice-section">
                <div class="invoice-cart-header">
                    <i class="fas fa-shopping-cart"></i> @GeneralUIResources.Cart
                </div>
                @if (cart.Count == 0)
                {
                    <div class="invoice-cart-empty">
                        <i class="fas fa-cart-empty"></i>
                        <p>@GeneralUIResources.EmptyCart</p>
                    </div>
                }
                else
                {
                    @foreach (var item in cart)
                    {
                        <div class="invoice-cart-item">
                            <span class="invoice-cart-item-name">@item.Name</span>
                            <input class="invoice-input"
                                   type="number"
                                   step="0.01"
                                   @bind="@item.UnitPrice"
                                   @bind:after="() => SyncCartToModel()"
                                   style="width:30%;" />
                            <button type="button" class="invoice-cart-item-remove" @onclick="() => RemoveFromCart(item.Id)">
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>
                    }
                }

                <div class="invoice-section-title" style="margin-top:1.5rem;">
                    <i class="fas fa-cog"></i> @GeneralUIResources.InvoiceSettings
                </div>
                <div class="invoice-form-grid">

                    <div class="invoice-form-group">
                        <label>@GeneralUIResources.LocalTotalCalculated</label>
                        <InputNumber class="invoice-input" step="0.01" @bind-Value="model.FinalTotalLocal" @bind-Value:after="DistributeTotalProportionally" />
                        <ValidationMessage For="@(() => model.FinalTotalLocal)" />
                    </div>

                    <div class="invoice-form-group">
                        <div class="invoice-checkbox-group">
                            <InputCheckbox id="applyPromo" @bind-Value="model.ApplyPromo" />
                            <label for="applyPromo">@GeneralUIResources.ApplyPromoQuestion</label>
                        </div>
                    </div>
                    <div class="invoice-form-group">
                        <label>@GeneralUIResources.PromoCode</label>
                        <InputText class="invoice-input" placeholder="@GeneralUIResources.EnterCode" @bind-Value="model.PromoCode" />
                    </div>
                    <div class="invoice-form-group">
                        <div class="invoice-checkbox-group">
                            <InputCheckbox id="applyGolden" @bind-Value="model.ApplyGoldenCrowns" />
                            <label for="applyGolden">@GeneralUIResources.ApplyGoldenCrown</label>
                        </div>
                    </div>
                    <div class="invoice-form-group">
                        <div class="invoice-checkbox-group">
                            <InputCheckbox id="applySilver" @bind-Value="model.ApplySilverCrowns" />
                            <label for="applySilver">@GeneralUIResources.ApplySilverCrown</label>
                        </div>
                    </div>

                    <div class="invoice-form-group invoice-form-grid-full">
                        <label>@GeneralUIResources.AdminNotes</label>
                        <InputTextArea class="invoice-textarea" rows="3" @bind-Value="model.AdminNotes"></InputTextArea>
                    </div>
                </div>

                <div class="invoice-actions">
                    <button type="submit" class="invoice-btn invoice-btn-primary" disabled="@isSubmitting">
                        @if (isSubmitting)
                        {
                            <i class="fas fa-spinner fa-spin"></i>
                            <span>@NotifiAndAlertsResources.Processing</span>
                        }
                        else
                        {
                            <i class="fas fa-save"></i>
                            <span>@ActionsResources.Save</span>
                        }
                    </button>
                </div>
            </div>
        </div>
    </div>
    </div>
</EditForm>
