@namespace Dashboard.Pages.User.UserDetails.Components
@using Resources
@using Common.Enumeration

<PageTitle>@AdminResources.Packages</PageTitle>

@if (isLoading)
{
    <div class="loading-spinner">
        <div class="spinner-border text-primary" role="status"></div>
    </div>
}
else
{
    <div class="packages-container">
        <div class="packages-header">
            <h3 class="packages-title">
                <i class="fas fa-box"></i>
                @AdminResources.Packages
            </h3>
        </div>

        @if (packages != null && packages.Any())
        {
            <div class="table-responsive">
                <table class="packages-table">
                    <thead>
                        <tr>
                            <th>@AdminResources.PackageName</th>
                            <th>@AdminResources.lbPaymentValue</th>
                            <th>@AdminResources.EnrollmentDate</th>
                            <th>@GeneralUIResources.Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var package in packages)
                        {
                            <tr>
                                <td>@package.ItemNameEn (@package.SubItemNameEn)</td>
                                <td>@package.PaymentValue.ToString("N2")</td>
                                <td>@package.InvoiceDateUtc.ToString("yyyy-MM-dd HH:mm")</td>
                                <td>
                                    <button class="btn btn-sm btn-outline-danger" @onclick='() => NavigationManager.NavigateTo($"/AddRefund/{package.Id}/Package")'>
                                        @GeneralUIResources.AddRefund
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="no-data">
                <i class="fas fa-box-open"></i>
                <p>@AdminResources.NoPackages</p>
            </div>
        }
    </div>
}

<style>
    .loading-spinner {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 3rem;
    }

    .packages-container {
        background: #fff;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    }

    .packages-header {
        padding: 1.5rem;
        border-bottom: 2px solid #f0f0f0;
        background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
    }

    .packages-title {
        margin: 0;
        font-size: 1.5rem;
        font-weight: 700;
        color: #333;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

        .packages-title i {
            color: #10b981;
            font-size: 1.75rem;
        }

    .table-responsive {
        overflow-x: auto;
    }

    .packages-table {
        width: 100%;
        border-collapse: collapse;
        font-size: 0.95rem;
    }

        .packages-table thead {
            background: #f8f9fa;
            border-bottom: 2px solid #dee2e6;
        }

            .packages-table thead th {
                padding: 1rem;
                text-align: right;
                font-weight: 700;
                color: #495057;
                border-right: 1px solid #dee2e6;
            }

                .packages-table thead th:first-child {
                    border-right: none;
                }

        .packages-table tbody tr {
            border-bottom: 1px solid #dee2e6;
            transition: background-color 0.2s ease;
        }

            .packages-table tbody tr:hover {
                background-color: #f8f9fa;
            }

        .packages-table tbody td {
            padding: 1rem;
            color: #495057;
            border-right: 1px solid #dee2e6;
        }

            .packages-table tbody td:first-child {
                border-right: none;
                font-weight: 600;
                color: #333;
            }

    .text-center {
        text-align: center;
    }

    .no-data {
        text-align: center;
        padding: 3rem;
        color: #6c757d;
    }

        .no-data i {
            font-size: 3rem;
            margin-bottom: 1rem;
            opacity: 0.5;
        }

        .no-data p {
            font-size: 1.125rem;
        }
</style>