@namespace Dashboard.Pages.User.Student.StudentDetails.Components
@using Resources
@using Shared.DTOs.Refund
@using Common.Enumeration

<PageTitle>@AdminResources.Refunds</PageTitle>

@if (isLoading)
{
    <div class="loading-spinner">
        <div class="spinner-border text-primary" role="status"></div>
    </div>
}
else
{
    <div class="invoices-modern-container">
        <div class="invoices-header">
            <h3 class="invoices-title">
                <i class="fas fa-undo"></i>
                @AdminResources.Refunds
            </h3>
        </div>

        @if (refunds != null && refunds.Any())
        {
            <div class="invoices-table-wrapper">
                <table class="invoices-table">
                    <thead>
                        <tr>
                            <th class="col-date">
                                <i class="fas fa-calendar"></i>
                                @GeneralUIResources.RefundDate
                            </th>
                            <th class="col-method">
                                <i class="fas fa-credit-card"></i>
                                @GeneralUIResources.PaymentMethod
                            </th>
                            <th class="col-reason">
                                <i class="fas fa-comment-alt"></i>
                                @GeneralUIResources.RefundReason
                            </th>
                            <th class="col-amount">
                                <i class="fas fa-money-bill-wave"></i>
                                @GeneralUIResources.RefundValue
                            </th>
                            <th class="col-status">
                                <i class="fas fa-info-circle"></i>
                                @AdminResources.Status
                            </th>
                            <th class="col-actions">
                                <i class="fas fa-cog"></i>
                                @ActionsResources.Actions
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var refund in refunds)
                        {
                            var refundIndex = refunds.IndexOf(refund);
                            var isExpanded = expandedRefunds.Contains(refundIndex);

                            <tr class="invoice-row @(isExpanded ? "expanded" : "")">
                                <td class="date-cell">
                                    <div class="date-wrapper">
                                        <span class="date-primary">@refund.CreatedDate.ToString("dd MMM yyyy")</span>
                                        <span class="date-time">@refund.CreatedDate.ToString("hh:mm tt")</span>
                                    </div>
                                </td>
                                <td class="method-cell">
                                    <div class="method-badge">
                                        <i class="fas fa-wallet"></i>
                                        <span>@refund.PaymentMethodName</span>
                                    </div>
                                </td>
                                <td class="reason-cell">
                                    <span>@refund.RefundReasonName</span>
                                </td>
                                <td class="amount-cell">
                                    <div class="amount-wrapper">
                                        <span class="amount-value">@refund.RefundValue.ToString("N2")</span>
                                    </div>
                                </td>
                                <td class="status-cell">
                                    <span class="status-badge @GetStatusClass(refund.RefundState)">
                                        @GetStatusText(refund.RefundState)
                                    </span>
                                </td>
                                <td class="actions-cell">
                                    <div class="action-buttons">
                                        <button class="btn-action btn-edit"
                                                title="@ActionsResources.Edit"
                                                @onclick="() => EditRefund(refund.Id)">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button class="btn-action btn-delete"
                                                title="@ActionsResources.Delete"
                                                @onclick="() => DeleteRefund(refund.Id)">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                        <button class="btn-action btn-view"
                                                title="@ActionsResources.View"
                                                @onclick="() => ToggleRefundItems(refundIndex)">
                                            <i class="fas @(isExpanded ? "fa-chevron-up" : "fa-chevron-down")"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>

                            var refundItems = GetRefundItems(refund);
                            
                            @if (isExpanded && refundItems != null && refundItems.Any())
                            {
                                <tr class="items-row">
                                    <td colspan="6">
                                        <div class="items-container">
                                            <div class="items-grid">
                                                @foreach (var item in refundItems)
                                                {
                                                    <div class="item-card">
                                                        <div class="item-header">
                                                            <span class="item-type @GetItemTypeClass(item.Scope)">
                                                                @GetItemTypeIcon(item.Scope)
                                                                @GetItemTypeLabel(item.Scope)
                                                            </span>
                                                        </div>
                                                        <div class="item-body">
                                                            <h5 class="item-name">@item.ItemName</h5>
                                                        </div>
                                                        <div class="item-footer">
                                                            <span class="refund-amount">
                                                                <i class="fas fa-undo"></i>
                                                                @item.RefundValue.ToString("N2")
                                                            </span>
                                                        </div>
                                                    </div>
                                                }
                                            </div>
                                            @if (!string.IsNullOrEmpty(refund.Comment))
                                            {
                                                <div class="refund-comment">
                                                    <h6><i class="fas fa-comment-alt"></i> @GeneralUIResources.Comment:</h6>
                                                    <p>@refund.Comment</p>
                                                </div>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="no-data">
                <i class="fas fa-undo"></i>
                <p>@NotifiAndAlertsResources.PageNotFound</p>
            </div>
        }
    </div>
}

