@page "/ManageReviews/ItemReviews"
@page "/ManageReviews/ItemReviews/{id:guid}"
@using Common.Enumerations.Review
@* 
@using Common.Enumerations.User
@using Shared.DTOs.Review
@inherits BaseListPage<ResponseItemReviewDto>
@attribute [Authorize(Roles = nameof(UserRole.Admin))] *@
@inherits LocalizedComponentBase
<PageTitle>@ECommerceResources.ReviewManagement</PageTitle>

<style>
    .cursor-pointer {
        cursor: pointer;
        user-select: none;
    }

        .cursor-pointer:hover {
            background-color: rgba(0, 0, 0, 0.05);
        }

    .rating-stars {
        color: #ffc107;
        font-size: 1.1rem;
    }

    .review-status-badge {
        font-size: 0.75rem;
        padding: 0.25rem 0.75rem;
    }
</style>

<div class="container-fluid p-0">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white py-3 d-flex justify-content-between align-items-center">
            <h5 class="mb-0 fw-semibold text-white">⭐ @ECommerceResources.ItemReviews</h5>
        </div>
        <div class="card-body">
            <div class="dt-responsive table-responsive">
                <!-- Filtration start -->
                <ul class="navbar-nav d-flex flex-row align-items-center gap-3 mb-2 px-0 w-100">
                    <li class="nav-item col-md-6 w-auto d-flex flex-row align-items-center gap-3">
                        <EditForm Model="searchModel" OnSubmit="@Search">
                            <!-- Search Box -->
                            <div class="search-container">
                                <div class="input-group search-box">
                                    <input type="text"
                                           @bind="searchModel.SearchTerm"
                                           id="searchInput"
                                           class="form-control search-input"
                                           placeholder="@ActionsResources.Search" />
                                    <button type="submit"
                                            class="btn btn-search">
                                        <i class="fas fa-search"></i>
                                    </button>
                                </div>
                            </div>
                        </EditForm>

                        <!-- Page Size -->
                        <div class="d-flex align-items-center gap-2">
                            <select class="form-select rounded-3 shadow-sm border-light text-primary fw-bold text-center custom-dropdown"
                                    style="width: 130px; height: 40px; padding-right: 30px;"
                                    @onchange="OnPageSizeChanged">
                                <option value="10">10</option>
                                <option value="15">15</option>
                                <option value="20">20</option>
                                <option value="30">30</option>
                            </select>
                        </div>
                    </li>
                    <li class="nav-item ms-auto d-flex flex-row align-items-center gap-2">
                        <!-- Filter by Status -->
                        <div class="dropdown">
                            <button class="btn btn-outline-primary" type="button" id="statusFilter" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-filter mx-1"></i>
                                <span class="fw-bold">@ActionsResources.Filter: @selectedStatus</span>
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="statusFilter">
                                <li><a class="dropdown-item @(selectedStatus == "All" ? "active" : "")" href="javascript:void(0)" @onclick='() => FilterByStatus(null)'>@GeneralResources.All</a></li>
                                <li><a class="dropdown-item @(selectedStatus == "Pending" ? "active" : "")" href="javascript:void(0)" @onclick='() => FilterByStatus(ReviewStatus.Pending)'>@ECommerceResources.Pending</a></li>
                                <li><a class="dropdown-item @(selectedStatus == "Approved" ? "active" : "")" href="javascript:void(0)" @onclick='() => FilterByStatus(ReviewStatus.Approved)'>@ECommerceResources.Approved</a></li>
                                <li><a class="dropdown-item @(selectedStatus == "Rejected" ? "active" : "")" href="javascript:void(0)" @onclick='() => FilterByStatus(ReviewStatus.Rejected)'>@ECommerceResources.Rejected</a></li>
                            </ul>
                        </div>

                        <!-- Export Buttons -->
                        <div class="dropdown">
                            <button class="btn btn-info" type="button" id="exportDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-file-export mx-1"></i>
                                <span class="fw-bold">@ActionsResources.Export</span>
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="exportDropdown">
                                <li><a class="dropdown-item" href="javascript:void(0)" @onclick="ExportToExcel"><i class="far fa-file-excel mx-2"></i>@GeneralResources.Excel</a></li>
                                <li><a class="dropdown-item" href="javascript:void(0)" @onclick="ExportToPrint"><i class="fas fa-print mx-2"></i>@ActionsResources.Print</a></li>
                            </ul>
                        </div>
                    </li>
                </ul>

                <div class="d-none d-md-block">
                    <!-- Table -->
                    <div class="table-responsive table-container border rounded-3">
                        <table id="review-table" class="table table-striped table-hover mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="cursor-pointer" @onclick='() => SortByColumn("ReviewNumber")'>
                                        @ECommerceResources.ReviewNumber
                                        <i class="@GetSortIconClass("ReviewNumber") ms-1"></i>
                                    </th>

                                    <th class="cursor-pointer" @onclick='() => SortByColumn("CustomerEmail")'>
                                        @ECommerceResources.CustomerEmail
                                        <i class="@GetSortIconClass("CustomerEmail") ms-1"></i>
                                    </th>
                                    <th class="text-center">@ECommerceResources.Rating</th>
                                    <th class="text-center">@ECommerceResources.HelpfulVotes</th>
                                    <th class="cursor-pointer" @onclick='() => SortByColumn("ReviewTitle")'>
                                        @ECommerceResources.ReviewTitle
                                        <i class="@GetSortIconClass("ReviewTitle") ms-1"></i>
                                    </th>
                                    <th class="text-center">@ECommerceResources.Reports</th>
                                    <th class="text-center" style="width: 30%;">@ECommerceResources.Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (items != null && items.Count() != 0)
                                {
                                    @foreach (var item in items)
                                    {
                                        <tr class="cursor-pointer">
                                            <td class="text-center">
                                                <span class="badge bg-secondary">@item.ReviewNumber</span>
                                            </td>

                                            <td>
                                                @if (!string.IsNullOrEmpty(item.CustomerName))
                                                {
                                                    <span>@item.CustomerName</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                <div class="rating-stars">
                                                    @for (int i = 1; i <= 5; i++)
                                                    {
                                                        <i class="@(i <= item.Rating ? "fas fa-star text-warning" : "far fa-star text-muted")"></i>
                                                    }
                                                    <span class="ms-1 text-muted">(@item.Rating)</span>
                                                </div>
                                            </td>
                                            <td class="text-center">
                                                <span class="badge bg-info">
                                                    <i class="fas fa-thumbs-up me-1"></i>
                                                    @item.HelpfulVoteCount
                                                </span>
                                            </td>
                                            <td>
                                                @* <div class="fw-bold">@item.ReviewTitle</div> *@
                                                <small class="text-muted">@item.ReviewText?.Substring(0, Math.Min(50, item.ReviewText.Length))...</small>
                                            </td>
                                            <td>
                                                @* <div class="fw-bold">@item.ReviewTitle</div> *@
                                                <small class="text-muted">@item.CountReport</small>
                                            </td>
                                            <td class="text-center align-middle">
                                                <!-- زر التفاصيل -->
                                                <button class="btn btn-info btn-sm" @onclick="() => ViewDetails(item.Id)">
                                                    <i class="feather icon-eye me-2"></i>
                                                    <span class="d-none d-md-inline">@ActionsResources.Details</span>
                                                </button>

                                                <!-- زر الموافقة -->
                                                @* <button class="btn btn-success btn-sm" @onclick="() => ApproveReview(item.Id)">
                                                    <i class="fas fa-check me-2"></i>
                                                    <span class="d-none d-md-inline">@ECommerceResources.Approve</span>
                                                </button> *@

                                                <!-- زر الرفض -->
                                                <button class="btn btn-danger btn-sm" @onclick="() => RejectReview(item.Id)">
                                                    <i class="fas fa-times me-2"></i>
                                                    <span class="d-none d-md-inline">@ECommerceResources.Reject</span>
                                                </button>

                                                @* <!-- زر الحذف -->
                                                <button class="btn btn-danger btn-sm" @onclick="() => Delete(item.Id)">
                                                    <i class="feather icon-trash-2 me-2"></i>
                                                    <span class="d-none d-md-inline">@ActionsResources.Delete</span>
                                                </button> *@
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="6" class="p-0">
                                            <div class="d-flex flex-column justify-content-center align-items-center text-center" style="height: 500px;">
                                                <i class="fas fa-comment-slash text-muted" style="font-size: 60px;"></i>
                                                <p class="text-muted mt-3" style="font-size: 18px;">
                                                    @NotifiAndAlertsResources.NoDataFound
                                                </p>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- MOBILE VIEW: Reviews Cards -->
                <div class="d-md-none mt-3">
                    @if (items != null && items.Any())
                    {
                        foreach (var item in items)
                        {
                            <div class="card border-0 shadow-sm rounded-3 mb-3">
                                <div class="card-body p-3">
                                    <!-- Review Title -->
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <h6 class="fw-bold text-primary mb-0">@item.ReviewTitle</h6>
                                        <span class="badge bg-info">
                                            <i class="fas fa-thumbs-up me-1"></i>
                                            @item.HelpfulVoteCount
                                        </span>
                                    </div>

                                    <!-- Review Text Preview -->
                                    <p class="text-muted small mb-2">
                                        @item.ReviewText?.Substring(0, Math.Min(100, item.ReviewText.Length))...
                                    </p>

                                    <!-- Customer Email -->
                                    <p class="text-muted small mb-1">
                                        <i class="fas fa-envelope text-info me-1"></i>
                                        @if (!string.IsNullOrEmpty(item.CustomerName))
                                        {
                                            <span>@item.CustomerName</span>
                                        }
                                        else
                                        {
                                            <span>-</span>
                                        }
                                    </p>

                                    <!-- Rating -->
                                    <div class="rating-stars mb-2">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            <i class="@(i <= item.Rating ? "fas fa-star text-warning" : "far fa-star text-muted")"></i>
                                        }
                                        <span class="ms-1 text-muted small">(@item.Rating)</span>
                                    </div>

                                    <!-- Review Number -->
                                    <p class="text-muted small mb-3">
                                        <i class="fas fa-hashtag text-secondary me-1"></i>
                                        @item.ReviewNumber
                                    </p>

                                    <!-- Action Buttons -->
                                    <div class="d-flex gap-1 flex-wrap">
                                        <button class="btn btn-info btn-sm flex-fill" @onclick="() => ViewDetails(item.Id)">
                                            <i class="feather icon-eye me-1"></i>@ActionsResources.Details
                                        </button>

                                        <button class="btn btn-success btn-sm" @onclick="() => ApproveReview(item.Id)">
                                            <i class="fas fa-check"></i>
                                        </button>

                                        <button class="btn btn-warning btn-sm" @onclick="() => RejectReview(item.Id)">
                                            <i class="fas fa-times"></i>
                                        </button>

                                        <button class="btn btn-danger btn-sm" @onclick="() => Delete(item.Id)">
                                            <i class="feather icon-trash-2"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-comment-slash text-muted" style="font-size: 55px;"></i>
                            <p class="mt-3 text-muted">@NotifiAndAlertsResources.NoDataFound</p>
                        </div>
                    }
                </div>

                <style>
                    .rating-stars i {
                        font-size: 1rem;
                    }

                    .rating-stars .fa-star {
                        margin-right: 2px;
                    }

                    .review-status-badge {
                        font-size: 0.75rem;
                        padding: 0.25rem 0.5rem;
                    }
                </style>
                <!-- Pagination -->
                <div class="pagination-wrapper d-flex flex-column justify-content-end flex-grow-1">
                    <div class="d-flex flex-wrap align-items-center justify-content-between gap-3 mt-4 pagination-container" dir="ltr">
                        <div class="text-muted small">
                            @string.Format(
                            ActionsResources.ShowingEntries,
                                                        ((currentPage - 1) * searchModel.PageSize + 1),
                                                        Math.Min(currentPage * searchModel.PageSize, totalRecords),
                                                        totalRecords
                                                        )
                        </div>

                        <nav aria-label="Pagination">
                            <ul class="pagination pagination-sm mb-0 shadow-sm rounded-3 overflow-hidden">
                                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                    <a class="page-link" @onclick="() => GoToPage(1)" title="@ActionsResources.First">
                                        <i class="fas fa-angle-double-left"></i>
                                    </a>
                                </li>

                                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                    <a class="page-link" @onclick="() => GoToPage(currentPage - 1)">
                                        <i class="fas fa-angle-left"></i>
                                    </a>
                                </li>

                                @{
                                                                const int maxVisiblePages = 5;
                                int startPage = Math.Max(1, currentPage - 2);
                                int endPage = Math.Min(totalPages, startPage + maxVisiblePages - 1);
                                if (endPage - startPage + 1 < maxVisiblePages)
                                {
                                    startPage = Math.Max(1, endPage - maxVisiblePages + 1);
                                }
                                                                }

                                @if (startPage > 1)
                                {
                                    <li class="page-item disabled"><span class="page-link">...</span></li>
                                }

                                @for (int pag = startPage; pag <= endPage; pag++)
                                {
                                    int pageNumber = pag;
                                    <li class="page-item @(pag == currentPage ? "active" : "")">
                                        <a class="page-link fw-bold" @onclick="() => GoToPage(pageNumber)">@pag</a>
                                    </li>
                                }

                                @if (endPage < totalPages)
                                {
                                    <li class="page-item disabled"><span class="page-link">...</span></li>
                                }

                                <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                                    <a class="page-link" @onclick="() => GoToPage(currentPage + 1)">
                                        <i class="fas fa-angle-right"></i>
                                    </a>
                                </li>

                                <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                                    <a class="page-link" @onclick="() => GoToPage(totalPages)" title="@ActionsResources.Last">
                                        <i class="fas fa-angle-double-right"></i>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>