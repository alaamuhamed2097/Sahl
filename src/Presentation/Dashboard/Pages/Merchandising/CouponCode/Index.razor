@page "/couponCodes"
@attribute [Authorize(Roles = nameof(UserRole.Admin))]
@using Common.Enumerations
@using Common.Enumerations.FieldType
@using Common.Enumerations.Order
@using Common.Enumerations.User
@using Shared.DTOs.Merchandising.CouponCode
@using Shared.DTOs.Order.CouponCode
@using Shared.DTOs.User
@inherits BaseListPage<CouponCodeDto>

<PageTitle>@CouponCodeResources.PromoCodes</PageTitle>

<div class="container-fluid p-0">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white py-3 d-flex justify-content-between align-items-center">
            <h5 class="mb-0 fw-semibold text-white">🏷️ @CouponCodeResources.PromoCodes</h5>
        </div>
        <div class="card-body">
            <div class="dt-responsive table-responsive">
                <!-- Filtration start -->
                <ul class="navbar-nav d-flex flex-row align-items-center gap-3 mb-2 px-0 w-100">
                    <li class="nav-item col-md-6 w-auto d-flex flex-row align-items-center gap-3">
                        <EditForm Model="searchModel" OnSubmit="@(async () => await Search())">
                            <div class="search-container">
                                <div class="input-group search-box">
                                    <input type="text"
                                           @bind="searchModel.SearchTerm"
                                           id="searchInput"
                                           class="form-control search-input"
                                           placeholder="@ActionsResources.Search" />
                                    <button type="submit"
                                            class="btn btn-search">
                                        <i class="fas fa-search"></i>
                                    </button>
                                </div>
                            </div>
                        </EditForm>

                        <!-- Page Size -->
                        <div class="d-flex align-items-center gap-2 ms-auto">
                            <select class="form-select rounded-3 shadow-sm border-light text-primary fw-bold text-center custom-dropdown"
                                    style="width: 100px; height: 40px; padding-right: 30px;"
                                    @onchange="OnPageSizeChanged">
                                <option value="10" selected="@(searchModel.PageSize == 10)">10</option>
                                <option value="15" selected="@(searchModel.PageSize == 15)">15</option>
                                <option value="20" selected="@(searchModel.PageSize == 20)">20</option>
                                <option value="30" selected="@(searchModel.PageSize == 30)">30</option>
                            </select>
                        </div>
                    </li>
                    <li class="nav-item ms-auto d-flex flex-row align-items-center gap-2">
                        <div class="dropdown">
                            <button class="btn btn-info" type="button" id="exportDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-file-export mx-1"></i>
                                <span class="fw-bold">@ActionsResources.Export</span>
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="exportDropdown">
                                <li><a class="dropdown-item" href="javascript:void(0)" @onclick="ExportToExcel"><i class="far fa-file-excel mx-2"></i>@ActionsResources.Download</a></li>
                                <li><a class="dropdown-item" href="javascript:void(0)" @onclick="ExportToPrint"><i class="fas fa-print mx-2"></i>@ActionsResources.Print</a></li>
                            </ul>
                        </div>

                        <button class="btn btn-success" @onclick="Add">
                            <i class="feather icon-plus-circle mx-1"></i>
                            <span class="fw-bold">@ActionsResources.Add</span>
                        </button>
                    </li>
                </ul>

                <!-- Desktop View -->
                <div class="d-none d-md-block">
                    <div style="overflow-x: auto;">
                        <table id="simpletable" class="text-center table table-sm table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th style="min-width: 100px;">@CouponCodeResources.Code</th>
                                    <th style="min-width: 120px;">@FormResources.Title</th>
                                    <th style="min-width: 100px;">@CouponCodeResources.Type</th>
                                    <th style="min-width: 80px;">@CouponCodeResources.Value</th>
                                    <th style="min-width: 130px;">@FormResources.Date</th>
                                    <th style="min-width: 110px;">@CouponCodeResources.Usage</th>
                                    <th style="min-width: 120px;">@CouponCodeResources.Status</th>
                                    <th style="min-width: 140px;" class="text-center">@ActionsResources.Edit</th>
                                </tr>
                            </thead>
                            <tbody class="fs-7">
                                @if (items != null && items.Any())
                                {
                                    @foreach (var item in items)
                                    {
                                        <tr>
                                            <td class="text-center p-1">
                                                <span class="badge bg-primary">@item.Code</span>
                                            </td>
                                            <td class="text-center p-1">@item.TitleAr</td>
                                            <td class="text-center p-1">
                                                <span class="badge @GetPromoTypeBadgeClass(item.PromoType)">
                                                    @GetPromoTypeDisplay(item.PromoType)
                                                </span>
                                            </td>
                                            <td class="text-center p-1" dir="ltr">
                                                @(((item.DiscountValue - Convert.ToInt32(item.DiscountValue)) > 0) ? item.DiscountValue.ToString("F2") : Convert.ToInt32(item.DiscountValue).ToString())
                                                @(item.DiscountType == DiscountType.Percentage ? "%" : " LE")
                                            </td>
                                            <td class="text-center p-2">
                                                <div class="d-flex flex-column align-items-center">
                                                    <small class="text-muted d-block">@CouponCodeResources.StartDate</small>
                                                    <span class="small">@DateTimeService.FormatToEgyptianDate(item.StartDate)</span>
                                                    <hr class="my-1" style="width: 80%;" />
                                                    <small class="text-muted d-block">@CouponCodeResources.EndDate</small>
                                                    <span class="small">@DateTimeService.FormatToEgyptianDate(item.ExpiryDate)</span>
                                                </div>
                                            </td>
                                            <td class="text-center p-2">
                                                <div class="d-flex flex-column align-items-center gap-1">
                                                    <div>
                                                        <small class="text-muted d-block">@CouponCodeResources.UsageLimit</small>
                                                        <span class="badge bg-secondary">@(item.UsageLimit?.ToString() ?? CouponCodeResources.UnlimitedUsage)</span>
                                                    </div>
                                                    <div>
                                                        <small class="text-muted d-block">@CouponCodeResources.UsageCount</small>
                                                        <span class="badge bg-info">@item.UsageCount</span>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="text-center p-1">
                                                @if (item.IsActive)
                                                {
                                                    <span class="badge bg-success">@GeneralResources.Active</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning text-dark">@GeneralResources.Inactive</span>
                                                }
                                            </td>
                                            <td class="text-center p-1">
                                                <div class="d-flex gap-1 justify-content-center">
                                                    <button class="btn btn-primary btn-sm" @onclick="() => Edit(item)" title="@ActionsResources.Edit">
                                                        <i class="feather icon-edit"></i>
                                                    </button>
                                                    <button class="btn btn-danger btn-sm" @onclick="() => Delete(item.Id)" title="@ActionsResources.Delete">
                                                        <i class="feather icon-trash-2"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="8" class="p-0">
                                            <div class="d-flex flex-column justify-content-center align-items-center text-center" style="height: 500px;">
                                                <i class="fas fa-database text-muted" style="font-size: 60px;"></i>
                                                <p class="text-muted mt-3" style="font-size: 18px;">
                                                    @NotifiAndAlertsResources.NoDataFound
                                                </p>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Pagination -->
                    <div class="pagination-wrapper d-flex flex-column justify-content-end flex-grow-1">
                        <div class="d-flex flex-wrap align-items-center justify-content-between gap-3 mt-4 pagination-container" dir="ltr">
                            <div class="text-muted small">
                                @string.Format(
                                    ActionsResources.ShowingEntries,
                                    ((currentPage - 1) * searchModel.PageSize + 1),
                                    Math.Min(currentPage * searchModel.PageSize, totalRecords),
                                    totalRecords
                                )
                            </div>

                            <nav aria-label="Pagination">
                                <ul class="pagination pagination-sm mb-0 shadow-sm rounded-3 overflow-hidden">
                                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                        <a class="page-link" href="javascript:void(0)" @onclick="() => GoToPage(1)" title="@ActionsResources.First">
                                            <i class="fas fa-angle-double-left"></i>
                                        </a>
                                    </li>
                                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                        <a class="page-link" href="javascript:void(0)" @onclick="() => GoToPage(currentPage - 1)">
                                            <i class="fas fa-angle-left"></i>
                                        </a>
                                    </li>

                                    @{
                                        const int maxVisiblePages = 5;
                                        int startPage = Math.Max(1, currentPage - 2);
                                        int endPage = Math.Min(totalPages, startPage + maxVisiblePages - 1);
                                        if (endPage - startPage + 1 < maxVisiblePages)
                                        {
                                            startPage = Math.Max(1, endPage - maxVisiblePages + 1);
                                        }
                                    }

                                    @if (startPage > 1)
                                    {
                                        <li class="page-item disabled"><span class="page-link">...</span></li>
                                    }

                                    @for (int pag = startPage; pag <= endPage; pag++)
                                    {
                                        int pageNumber = pag;
                                        <li class="page-item @(pag == currentPage ? "active" : "")">
                                            <a class="page-link fw-bold" href="javascript:void(0)" @onclick="() => GoToPage(pageNumber)">@pag</a>
                                        </li>
                                    }

                                    @if (endPage < totalPages)
                                    {
                                        <li class="page-item disabled"><span class="page-link">...</span></li>
                                    }

                                    <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                                        <a class="page-link" href="javascript:void(0)" @onclick="() => GoToPage(currentPage + 1)">
                                            <i class="fas fa-angle-right"></i>
                                        </a>
                                    </li>
                                    <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                                        <a class="page-link" href="javascript:void(0)" @onclick="() => GoToPage(totalPages)" title="@ActionsResources.Last">
                                            <i class="fas fa-angle-double-right"></i>
                                        </a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>

                <!-- MOBILE VIEW -->
                <div class="d-md-none">
                    @if (items != null && items.Any())
                    {
                        foreach (var item in items)
                        {
                            <div class="card border-0 shadow-sm rounded-3 mb-3">
                                <div class="card-body p-3">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div>
                                            <h6 class="fw-bold text-primary mb-1">🏷️ @item.Code</h6>
                                            <p class="text-muted small mb-1">@item.TitleAr</p>
                                            <small class="text-muted">
                                                @(item.StartDate.ToString("yyyy-MM-dd") ?? "-") → @(item.ExpiryDate?.ToString("yyyy-MM-dd") ?? "-")
                                            </small>
                                        </div>
                                        <div class="d-flex gap-1">
                                            <button class="btn btn-primary btn-sm" @onclick="() => Edit(item)">
                                                <i class="feather icon-edit"></i>
                                            </button>
                                            <button class="btn btn-danger btn-sm" @onclick="() => Delete(item.Id)">
                                                <i class="feather icon-trash-2"></i>
                                            </button>
                                        </div>
                                    </div>
                                    <hr class="my-2" />
                                    <div class="row small">
                                        <div class="col-6 mb-1">
                                            <i class="fas fa-tag text-info me-1"></i>
                                            <strong>@CouponCodeResources.Type:</strong>
                                            <span class="badge @GetPromoTypeBadgeClass(item.PromoType)">
                                                @GetPromoTypeDisplay(item.PromoType)
                                            </span>
                                        </div>
                                        <div class="col-6 mb-1">
                                            <i class="fas fa-percentage text-info me-1"></i>
                                            <strong>@CouponCodeResources.Value:</strong>
                                            @(((item.DiscountValue - Convert.ToInt32(item.DiscountValue)) > 0)
                                                ? item.DiscountValue.ToString("F2")
                                                : Convert.ToInt32(item.DiscountValue).ToString())
                                            @(item.DiscountType == DiscountType.Percentage ? "%" : " SAR")
                                        </div>
                                        <div class="col-6 mb-1">
                                            <i class="fas fa-repeat text-secondary me-1"></i>
                                            <strong>@CouponCodeResources.UsageLimit:</strong>
                                            @(item.UsageLimit?.ToString() ?? CouponCodeResources.UnlimitedUsage)
                                        </div>
                                        <div class="col-6 mb-1">
                                            <i class="fas fa-chart-line text-success me-1"></i>
                                            <strong>@CouponCodeResources.UsageCount:</strong>
                                            @item.UsageCount
                                        </div>
                                        <div class="col-12 mt-1">
                                            @if (item.IsActive)
                                            {
                                                <span class="badge bg-success w-100 py-2">@CouponCodeResources.Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning text-dark w-100 py-2">@CouponCodeResources.InActive</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-tags text-muted" style="font-size: 55px;"></i>
                            <p class="mt-3 text-muted">@NotifiAndAlertsResources.NoDataFound</p>
                            <button class="btn btn-success mt-2" @onclick="Add">
                                <i class="feather icon-plus-circle me-1"></i>@ActionsResources.Add
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
