@code {
    [Parameter]
    public List<ItemDto> SelectedItems { get; set; } = new();

    [Parameter]
    public EventCallback<List<ItemDto>> SelectedItemsChanged { get; set; }

    [Inject]
    protected Dashboard.Contracts.ECommerce.Item.IItemService ItemService { get; set; } = null!;

    protected List<ItemDto> AllItems = new();
    protected List<ItemDto> FilteredItems = new();
    protected List<ItemDto> PaginatedItems = new();
    protected string SearchQuery = string.Empty;
    protected bool ShowDropdown = false;
    protected bool IsLoadingItems = false;

    // Pagination
    protected int CurrentPage = 1;
    protected int PageSize = 10;
    protected int TotalPages => Math.Max(1, (FilteredItems.Count + PageSize - 1) / PageSize);

    protected override async Task OnInitializedAsync()
    {
        await LoadAvailableItems();
    }

    protected async Task LoadAvailableItems()
    {
        try
        {
            IsLoadingItems = true;
            // Note: Ideally, we should use a search endpoint if available. 
            // For now, we load all (or top N) and filter client-side as per request context
            var response = await ItemService.GetAllAsync();
            if (response.Success && response.Data != null)
            {
                AllItems = response.Data.ToList();
                FilterItems();
            }
        }
        finally
        {
            IsLoadingItems = false;
        }
    }

    protected override async Task OnParametersSetAsync()
    {
        FilterItems();
        await base.OnParametersSetAsync();
    }

    protected void OnSearchInputChanged(KeyboardEventArgs e)
    {
        CurrentPage = 1; 
        FilterItems();

        ShowDropdown = true;
        StateHasChanged();
    }

    protected void FilterItems()
    {
        if (string.IsNullOrWhiteSpace(SearchQuery))
        {
            FilteredItems = AllItems
                .Where(i => !SelectedItems.Any(s => s.Id == i.Id))
                .OrderBy(i => i.TitleEn)
                .ToList();
        }
        else
        {
            var query = SearchQuery.ToLower();
            FilteredItems = AllItems
                .Where(i => !SelectedItems.Any(s => s.Id == i.Id) &&
                           (i.TitleEn.ToLower().Contains(query) ||
                            i.TitleAr.ToLower().Contains(query) ||
                            (i.SKU != null && i.SKU.ToLower().Contains(query))))
                .OrderBy(i => i.TitleEn)
                .ToList();
        }

        UpdatePaginatedItems();
    }

    protected void UpdatePaginatedItems()
    {
        var skip = (CurrentPage - 1) * PageSize;
        PaginatedItems = FilteredItems.Skip(skip).Take(PageSize).ToList();
    }

    protected void NextPage()
    {
        if (CurrentPage < TotalPages)
        {
            CurrentPage++;
            UpdatePaginatedItems();
        }
    }

    protected void PreviousPage()
    {
        if (CurrentPage > 1)
        {
            CurrentPage--;
            UpdatePaginatedItems();
        }
    }

    protected void ClearSearch()
    {
        SearchQuery = string.Empty;
        CurrentPage = 1;
        FilterItems();
    }

    protected void ToggleDropdown()
    {
        ShowDropdown = !ShowDropdown;
        if (ShowDropdown && FilteredItems.Count == 0)
        {
            FilterItems();
        }
    }

    protected async Task SelectItem(ItemDto item)
    {
        if (!SelectedItems.Any(s => s.Id == item.Id))
        {
            SelectedItems.Add(item);
            await SelectedItemsChanged.InvokeAsync(SelectedItems);
            FilterItems();
        }
    }

    protected async Task RemoveItem(Guid itemId)
    {
        SelectedItems.RemoveAll(i => i.Id == itemId);
        await SelectedItemsChanged.InvokeAsync(SelectedItems);
        FilterItems();
    }
}
