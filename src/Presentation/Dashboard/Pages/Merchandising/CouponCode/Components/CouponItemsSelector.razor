@using Resources
@using Shared.DTOs.Catalog.Item

<div class="coupon-items-selector">
    <div class="mb-3">
        <label class="form-label fw-bold">Select Items <span class="text-danger">*</span></label>
        <div class="input-group mb-3">
            <input type="text" class="form-control" placeholder="Search items by name or SKU..."
                   @bind="SearchQuery" @bind:event="oninput" @onkeyup="OnSearchInputChanged" />
            <button class="btn btn-outline-secondary" type="button" @onclick="ClearSearch" title="Clear search">
                <i class="feather icon-x"></i>
            </button>
            <button class="btn btn-primary" type="button" @onclick="ToggleDropdown">
                <i class="feather @(ShowDropdown ? "icon-chevron-up" : "icon-chevron-down")"></i>
            </button>
        </div>

        @if (ShowDropdown)
        {
            <div class="dropdown-menu show w-100 d-block items-dropdown">
                <!-- Search Results Info -->
                <div class="dropdown-header d-flex justify-content-between align-items-center">
                    <span>
                        @if (IsLoadingItems)
                        {
                            <span>Loading...</span>
                        }
                        else if (FilteredItems?.Count == 0 && !string.IsNullOrWhiteSpace(SearchQuery))
                        {
                            <span>No items found matching "<strong>@SearchQuery</strong>"</span>
                        }
                        else if (FilteredItems?.Count == 0)
                        {
                            <span>No items available</span>
                        }
                        else
                        {
                            <span>@FilteredItems.Count items found</span>
                        }
                    </span>
                </div>

                @if (IsLoadingItems)
                {
                    <div class="dropdown-item text-center py-4">
                        <div class="spinner-border spinner-border-sm mb-2" role="status"></div>
                        <div>Loading items...</div>
                    </div>
                }
                else if (FilteredItems?.Count > 0)
                {
                    <div class="items-list-container">
                        @foreach (var item in PaginatedItems)
                        {
                            <button class="dropdown-item item-row d-flex align-items-center gap-3" type="button"
                                    @onclick='() => SelectItem(item)'
                                    title="Click to select this item">
                                <div class="item-image">
                                    @if (!string.IsNullOrEmpty(item.ThumbnailImage))
                                    {
                                        <img src="@item.ThumbnailImage" alt="@item.TitleEn" />
                                    }
                                    else
                                    {
                                        <div class="placeholder-image"></div>
                                    }
                                </div>
                                <div class="item-info flex-grow-1">
                                    <div class="fw-bold item-title">@item.TitleEn</div>
                                    <small class="text-muted d-block">@item.TitleAr</small>
                                    @if (!string.IsNullOrEmpty(item.SKU))
                                    {
                                        <small class="text-secondary d-block">SKU: @item.SKU</small>
                                    }
                                </div>
                                <div class="item-price">
                                    <strong>@(item.BaseSalesPrice ?? item.BasePrice ?? 0) @ECommerceResources.CurrencySymbol</strong>
                                </div>
                            </button>
                        }
                    </div>

                    <!-- Pagination Controls -->
                    @if (TotalPages > 1)
                    {
                        <div class="dropdown-divider"></div>
                        <div class="d-flex justify-content-between align-items-center px-3 py-2">
                            <small class="text-muted">
                                Page @CurrentPage of @TotalPages
                            </small>
                            <div class="btn-group btn-group-sm" role="group">
                                <button type="button" class="btn btn-outline-secondary"
                                        @onclick="PreviousPage" disabled="@(CurrentPage <= 1)">
                                    <i class="feather icon-chevron-left"></i>
                                </button>
                                <button type="button" class="btn btn-outline-secondary"
                                        @onclick="NextPage" disabled="@(CurrentPage >= TotalPages)">
                                    <i class="feather icon-chevron-right"></i>
                                </button>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="dropdown-item text-center text-muted py-4">
                        @if (string.IsNullOrWhiteSpace(SearchQuery))
                        {
                            <span>No items available</span>
                        }
                        else
                        {
                            <span>No items match your search</span>
                        }
                    </div>
                }
            </div>
        }
    </div>

    <!-- Selected Items Display -->
    <div class="selected-items mt-4">
        <h6 class="mb-3">Selected Items <span class="badge bg-primary">@SelectedItems.Count</span></h6>
        @if (SelectedItems.Count == 0)
        {
            <div class="alert alert-info mb-0">
                <i class="feather icon-info me-2"></i>No items selected yet
            </div>
        }
        else
        {
            <div class="list-group">
                @foreach (var (item, index) in SelectedItems.Select((i, idx) => (i, idx)))
                {
                    <div class="list-group-item d-flex align-items-center justify-content-between">
                        <div class="d-flex align-items-center gap-3 flex-grow-1">
                            <div class="selected-item-image">
                                @if (!string.IsNullOrEmpty(item.ThumbnailImage))
                                {
                                    <img src="@item.ThumbnailImage" alt="@item.TitleEn" />
                                }
                                else
                                {
                                    <div class="placeholder-image"></div>
                                }
                            </div>
                            <div class="flex-grow-1">
                                <div class="fw-bold">@item.TitleEn</div>
                                <small class="text-muted">@item.TitleAr</small>
                                <div class="small text-primary mt-1">@(item.BaseSalesPrice ?? item.BasePrice ?? 0) @ECommerceResources.CurrencySymbol</div>
                            </div>
                            <div class="order-badge">
                                <span class="badge bg-secondary">#@(index + 1)</span>
                            </div>
                        </div>
                        <button type="button" class="btn btn-sm btn-outline-danger ms-2"
                                @onclick="() => RemoveItem(item.Id)"
                                title="Remove item">
                            <i class="feather icon-trash-2"></i>
                        </button>
                    </div>
                }
            </div>
        }
    </div>
</div>

