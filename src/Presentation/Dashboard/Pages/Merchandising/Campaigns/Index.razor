@page "/campaigns"
@using Resources
@using Shared.DTOs.Campaign
@using Dashboard.Contracts.Campaign
@inherits BaseListPage<CampaignDto>

<PageTitle>@MerchandisingResources.CampaignsTitle</PageTitle>
<div class="container-fluid p-0">
    <div class="card shadow-sm border-0">

        <div class="card-header bg-primary text-white py-3 d-flex justify-content-between align-items-center">
            <h5 class="mb-0 fw-semibold text-white">@MerchandisingResources.CampaignsTitle</h5>
           
            
        </div>

        <div class="card-body p-4">
            <div class="dt-responsive">

                <!-- Filtration start -->
                <div class="d-flex flex-wrap align-items-center gap-3 mb-4">
                    <EditForm class="d-flex flex-wrap" Model="searchModel" OnSubmit="@Search">
                        <!-- Search Box -->
                        <div class="search-container">
                            <div class="input-group search-box">
                                <input type="text"
                                       @bind="searchModel.SearchTerm"
                                       id="searchInput"
                                       class="form-control search-input"
                                       placeholder="@ActionsResources.Search" />
                                <button type="submit"
                                        class="btn btn-search">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </div>
                        <div>
  <select class="form-select rounded-3 shadow-sm border-light text-primary fw-bold text-center custom-dropdown"
                                    style="width: 100px; height: 40px; padding-right: 30px;"
                                    @onchange="OnPageSizeChanged">
                                <option value="10" selected="@(searchModel.PageSize == 10)">10</option>
                                <option value="15" selected="@(searchModel.PageSize == 15)">15</option>
                                <option value="20" selected="@(searchModel.PageSize == 20)">20</option>
                                <option value="30" selected="@(searchModel.PageSize == 30)">30</option>
                            </select>
                        </div>

                    </EditForm>
                    
                    <!-- Status Filter -->
                    <div class="d-flex align-items-center gap-2">
                        <select class="form-select rounded-3 shadow-sm border-light text-primary fw-bold text-center custom-dropdown"
                                style="width: 140px; height: 40px; padding-right: 30px;"
                                @onchange="@((ChangeEventArgs e) => OnStatusFilterChanged(e.Value?.ToString() ?? string.Empty))">
                            <option value="">@MerchandisingResources.AllStatus</option>
                            <option value="active">@MerchandisingResources.Active</option>
                            <option value="inactive">@MerchandisingResources.Inactive</option>
                        </select>
                    </div>
                    
                    <!-- Type Filter -->
                    <div class="d-flex align-items-center gap-2">
                        <select class="form-select rounded-3 shadow-sm border-light text-primary fw-bold text-center custom-dropdown"
                                style="width: 160px; height: 40px; padding-right: 30px;"
                                @onchange="@((ChangeEventArgs e) => OnTypeFilterChanged(e.Value?.ToString() ?? string.Empty))">
                            <option value="">@MerchandisingResources.AllTypes</option>
                            <option value="flash">@MerchandisingResources.FlashSale</option>
                            <option value="regular">@MerchandisingResources.Regular</option>
                        </select>
                    </div>
                    
                    <!-- Page Size -->
                    <div class="d-flex align-items-center gap-2 ms-auto">
                       
                         <div class="dropdown">
                <button class="btn btn-info" type="button" id="exportDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-file-export mx-1"></i>
                    <span class="fw-bold">@ActionsResources.Export</span>
                </button>
                <ul class="dropdown-menu" aria-labelledby="exportDropdown">
                    <li><a class="dropdown-item" href="javascript:void(0)" @onclick="ExportToExcel"><i class="far fa-file-excel mx-2"></i>@ActionsResources.Download</a></li>
                    <li><a class="dropdown-item" href="javascript:void(0)" @onclick="ExportToPrint"><i class="fas fa-print mx-2"></i>@ActionsResources.Print</a></li>
                </ul>
            </div>
            <AuthorizeView>
                <Authorized>
                                <button class="btn btn-success rounded-pill px-3 shadow-sm" @onclick="Add">
                        <i class="feather icon-plus-circle"></i>
                        <span class="fw-bold">@MerchandisingResources.AddCampaign</span>
                    </button>
                </Authorized>
            </AuthorizeView>
                    </div>
                </div>

                <!-- Desktop Table View -->
                <div class="table-responsive border rounded-3 overflow-hidden d-none d-md-block">
                    @if (items == null)
                    {
                        <div class="text-center p-5">
                            <div class="spinner-border text-primary" role="status">
                                <span class="sr-only">Loading...</span>
                            </div>
                        </div>
                    }
                    else if (!items.Any())
                    {
                        <div class="text-center p-5">
                            <i class="fas fa-inbox text-muted" style="font-size: 60px;"></i>
                            <p class="text-muted mt-3" style="font-size: 16px;">@MerchandisingResources.NoCampaignsFound</p>
                        </div>
                    }
                    else
                    {
                        <table class="table table-hover mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="text-center p-3 align-middle cursor-pointer"  @onclick='() => SortByColumn("CampaignName")'>
                                        @MerchandisingResources.CampaignName
                                        <i class="@GetSortIconClass("CampaignName") ms-1"></i>
                                        </th>
                                    <th class="text-center p-3 align-middle cursor-pointer"  @onclick='() => SortByColumn("Type")'>
                                        @MerchandisingResources.Type
                                        <i class="@GetSortIconClass("Type") ms-1"></i>
                                    </th>
                                    <th class="text-center p-3 align-middle cursor-pointer"  @onclick='() => SortByColumn("StartDate")'>
                                        @MerchandisingResources.StartDate
                                        <i class="@GetSortIconClass("StartDate") ms-1"></i>
                                    </th>
                                    <th class="text-center p-3 align-middle cursor-pointer" @onclick='() => SortByColumn("EndDate")'>@MerchandisingResources.EndDate
                                        <i class="@GetSortIconClass("EndDate") ms-1"></i>
                                    </th>
                                    <th class="text-center p-3 align-middle cursor-pointer"  @onclick='() => SortByColumn("Items")'>@MerchandisingResources.Items
                                        <i class="@GetSortIconClass("Items") ms-1"></i>
                                    </th>
                                    <th class="text-center p-3 align-middle">@MerchandisingResources.Status</th>
                                    <th class="text-center p-3 align-middle" style="width: 150px;">@MerchandisingResources.Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var campaign in items)
                                {
                                    <tr class="align-middle">
                                        <td class="text-center p-3">
                                            <div class="fw-semibold text-primary">@campaign.NameEn</div>
                                            <small class="text-muted">@campaign.NameAr</small>
                                        </td>
                                        <td class="text-center p-3">
                                            @if (campaign.IsFlashSale)
                                            {
                                                <span class="badge bg-danger">
                                                    <i class="fas fa-bolt"></i> Flash Sale
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-info">
                                                    <i class="fas fa-calendar-alt"></i> Regular
                                                </span>
                                            }
                                        </td>
                                        <td class="text-center p-3">
                                            <small>@campaign.StartDate.ToString("MMM dd, yyyy")</small>
                                        </td>
                                        <td class="text-center p-3">
                                            <small>@campaign.EndDate.ToString("MMM dd, yyyy")</small>
                                        </td>
                                        <td class="text-center p-3">
                                            <span class="badge bg-light-primary">@campaign.TotalItems</span>
                                        </td>
                                        <td class="text-center p-3">
                                            @if (campaign.IsActive)
                                            {
                                                <span class="badge bg-success">
                                                    <i class="fas fa-check-circle"></i> Active
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">
                                                    <i class="fas fa-times-circle"></i> Inactive
                                                </span>
                                            }
                                        </td>
                                        <td class="text-center p-3">
                                            <button class="btn btn-primary btn-sm mx-1" title="@MerchandisingResources.EditCampaign" @onclick="() => Edit(campaign)">
                                                <i class="fas fa-pencil-alt m-0"></i>
                                            </button>
                                            <button class="btn btn-danger btn-sm mx-1" title="@MerchandisingResources.DeleteCampaign" @onclick="() => Delete(campaign.Id)">
                                                <i class="feather icon-trash-2 m-0"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>

                <!-- Mobile View (Card Layout) -->
                <div class="d-md-none">
                    @if (items == null)
                    {
                        <div class="text-center p-5">
                            <div class="spinner-border text-primary" role="status">
                                <span class="sr-only">Loading...</span>
                            </div>
                        </div>
                    }
                    else if (!items.Any())
                    {
                        <div class="text-center p-5">
                            <i class="fas fa-inbox text-muted" style="font-size: 60px;"></i>
                            <p class="text-muted mt-3" style="font-size: 16px;">@MerchandisingResources.NoCampaignsFound</p>
                        </div>
                    }
                    else
                    {
                        @foreach (var campaign in items)
                        {
                            <div class="card mb-3 border-0 shadow-sm">
                                <div class="card-body p-3">
                                    <div class="d-flex justify-content-between align-items-start mb-3">
                                        <div class="flex-grow-1 me-2">
                                            <h6 class="mb-1 fw-bold text-primary">@campaign.NameEn</h6>
                                            <small class="text-muted">@campaign.NameAr</small>
                                        </div>
                                        <div>
                                            @if (campaign.IsActive)
                                            {
                                                <span class="badge bg-success">
                                                    <i class="fas fa-check-circle"></i> Active
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">
                                                    <i class="fas fa-times-circle"></i> Inactive
                                                </span>
                                            }
                                        </div>
                                    </div>

                                    <div class="row mb-3">
                                        <div class="col-6">
                                            <small class="text-muted d-block">Type</small>
                                            <span class="fw-semibold">@(campaign.IsFlashSale ? "Flash Sale" : "Regular")</span>
                                        </div>
                                        <div class="col-6">
                                            <small class="text-muted d-block">Items</small>
                                            <span class="fw-semibold">@campaign.TotalItems</span>
                                        </div>
                                    </div>

                                    <div class="row mb-3">
                                        <div class="col-6">
                                            <small class="text-muted d-block">Start Date</small>
                                            <small class="fw-semibold">@campaign.StartDate.ToString("MMM dd, yyyy")</small>
                                        </div>
                                        <div class="col-6">
                                            <small class="text-muted d-block">End Date</small>
                                            <small class="fw-semibold">@campaign.EndDate.ToString("MMM dd, yyyy")</small>
                                        </div>
                                    </div>

                                    <div class="d-flex gap-2">
                                        <button class="btn btn-primary btn-sm flex-grow-1" @onclick="() => Edit(campaign)">
                                            <i class="fas fa-pencil-alt me-1"></i> @MerchandisingResources.Edit
                                        </button>
                                        <button class="btn btn-danger btn-sm flex-grow-1" @onclick="() => Delete(campaign.Id)">
                                            <i class="fas fa-trash-alt me-1"></i> @MerchandisingResources.Delete
                                        </button>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>

                <!-- Pagination -->
                @if (items != null && items.Any() && totalPages > 1)
                {
                    <nav aria-label="Page navigation" class="mt-4">
                        <ul class="pagination justify-content-center">
                            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                <button class="page-link" @onclick="@(() => GoToPage(currentPage - 1))" disabled="@(currentPage == 1)">
                                    Previous
                                </button>
                            </li>

                            @for (int i = 1; i <= totalPages; i++)
                            {
                                int pageNum = i;
                                <li class="page-item @(currentPage == pageNum ? "active" : "")">
                                    <button class="page-link" @onclick="@(() => GoToPage(pageNum))">
                                        @pageNum
                                    </button>
                                </li>
                            }

                            <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                                <button class="page-link" @onclick="@(() => GoToPage(currentPage + 1))" disabled="@(currentPage == totalPages)">
                                    Next
                                </button>
                            </li>
                        </ul>
                    </nav>
                    
                    <!-- Pagination Info -->
                    <div class="text-center text-muted small mt-2">
                        @MerchandisingResources.Showing @StartRecord @MerchandisingResources.Of @EndRecord of @totalRecords @MerchandisingResources.Campaigns
                    </div>
                }
            </div>
        </div>
    </div>
</div>
