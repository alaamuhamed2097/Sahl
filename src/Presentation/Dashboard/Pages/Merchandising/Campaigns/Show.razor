@page "/campaigns/show/{CampaignId}"

@using Common.Enumerations.User
@using Dashboard.Contracts.Campaign
@using Microsoft.AspNetCore.Components
@using Shared.DTOs.Campaign
@using Shared.GeneralModels
@using Resources

@attribute [Authorize(Roles = nameof(UserRole.Admin))]
@implements IDisposable

<PageTitle>@MerchandisingResources.CampaignItems</PageTitle>

<div class="container-fluid p-0">
    <!-- Header Card -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-primary">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h4 class="text-white mb-1">
                        <i class="fas fa-list mx-2"></i>@MerchandisingResources.CampaignItems
                    </h4>
                    @if (!string.IsNullOrEmpty(CampaignName))
                    {
                        <small class="text-white-50">
                            <i class="fas fa-tag me-1"></i>@CampaignName
                        </small>
                    }
                </div>
                <div class="d-flex gap-2">
                    <button type="button" class="btn btn-light btn-sm" @onclick="BackToCampaigns">
                        <i class="fas fa-arrow-left mx-1"></i>@ActionsResources.Back
                    </button>
                    @* <button type="button" class="btn btn-success btn-sm" @onclick="AddNewItem">
                        <i class="fas fa-plus mx-1"></i>@ActionsResources.AddItem
                    </button> *@
                </div>
            </div>
        </div>
    </div>

    <!-- Loading State -->
    @if (IsLoading)
    {
        <div class="card shadow-sm border-0">
            <div class="card-body text-center py-5">
                <div class="spinner-border text-primary" role="status">
                    <span class="sr-only">Loading...</span>
                </div>
                <p class="mt-3 text-muted">@MerchandisingResources.Loading</p>
            </div>
        </div>
    }
    else
    {
        <!-- Search and Filters -->
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-body">
                <div class="d-flex flex-wrap align-items-center gap-3">
                    <EditForm class="d-flex flex-wrap" Model="searchModel" OnSubmit="@Search">
                        <!-- Search Box -->
                        <div class="search-container">
                            <div class="input-group search-box">
                                <input type="text"
                                       @bind="searchModel.SearchTerm"
                                       id="searchInput"
                                       class="form-control search-input"
                                       placeholder="@ActionsResources.Search" />
                                <button type="submit"
                                        class="btn btn-search btn-primary">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </EditForm>

                    <!-- Page Size -->
                    <div>
                        <select class="form-select rounded-3 shadow-sm border-light text-primary fw-bold text-center custom-dropdown"
                                style="width: 100px; height: 40px; padding-right: 30px;"
                                @onchange="OnPageSizeChanged">
                            <option value="10" selected="@(searchModel.PageSize == 10)">10</option>
                            <option value="15" selected="@(searchModel.PageSize == 15)">15</option>
                            <option value="20" selected="@(searchModel.PageSize == 20)">20</option>
                            <option value="30" selected="@(searchModel.PageSize == 30)">30</option>
                        </select>
                    </div>

                    <!-- Status Filter -->
                    <div class="d-flex align-items-center gap-2">
                        <select class="form-select rounded-3 shadow-sm border-light text-primary fw-bold text-center custom-dropdown"
                                style="width: 140px; height: 40px; padding-right: 30px;"
                                @onchange="@((ChangeEventArgs e) => OnStatusFilterChanged(e.Value?.ToString() ?? string.Empty))">
                            <option value="">@MerchandisingResources.AllStatus</option>
                            <option value="1">@MerchandisingResources.Active</option>
                            <option value="0">@MerchandisingResources.Inactive</option>
                        </select>
                    </div>

                    <!-- Export Button -->
                    <div class="ms-auto">
                        <div class="dropdown">
                            <button class="btn btn-info" type="button" id="exportDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-file-export mx-1"></i>
                                <span class="fw-bold">@ActionsResources.Export</span>
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="exportDropdown">
                                <li><a class="dropdown-item" href="javascript:void(0)" @onclick="ExportToExcel"><i class="far fa-file-excel mx-2"></i>@ActionsResources.Download</a></li>
                                <li><a class="dropdown-item" href="javascript:void(0)" @onclick="ExportToPrint"><i class="fas fa-print mx-2"></i>@ActionsResources.Print</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Items Table -->
        <div class="card shadow-sm border-0">
            <div class="card-body p-0">
                @if (IsSearching)
                {
                    <div class="text-center py-4">
                        <div class="spinner-border spinner-border-sm text-primary" role="status">
                            <span class="sr-only">Searching...</span>
                        </div>
                        <span class="ms-2 text-muted">@MerchandisingResources.Loading</span>
                    </div>
                }
                else if (!CampaignItems.Any())
                {
                    <!-- Empty State -->
                    <div class="text-center py-5">
                        <i class="fas fa-inbox fa-4x text-muted mb-3"></i>
                        <h5 class="text-muted">@MerchandisingResources.NoItemsFound</h5>
                        @if (string.IsNullOrEmpty(searchModel.SearchTerm))
                        {
                            <p class="text-muted">@MerchandisingResources.AddItemsToGetStarted</p>
                            <button type="button" class="btn btn-primary mt-3" @onclick="AddNewItem">
                                <i class="fas fa-plus mx-2"></i>@ActionsResources.AddFirstItem
                            </button>
                        }
                        else
                        {
                            <p class="text-muted">Try different search terms</p>
                            <button type="button" class="btn btn-primary mt-3" @onclick="ClearSearch">
                                <i class="fas fa-times mx-2"></i>Clear Search
                            </button>
                        }
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th style="width: 80px;" class="text-center">
                                        @MerchandisingResources.Image
                                    </th>
                                    <th>@MerchandisingResources.ItemNameEn</th>
                                    <th>@MerchandisingResources.ItemNameAr</th>
                                    <th style="width: 120px;" class="text-center">
                                        @MerchandisingResources.Status
                                    </th>
                                    <th style="width: 150px;">
                                        @MerchandisingResources.CreatedDate
                                    </th>
                                    <th style="width: 120px;" class="text-center">
                                        @MerchandisingResources.Actions
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in CampaignItems)
                                {
                                    <tr>
                                        <td class="text-center">
                                            @* @if (!string.IsNullOrEmpty(item.ItemImageUrl))
                                            {
                                                <img src="@item.ItemImageUrl"
                                                     alt="@item.ItemNameEn"
                                                     class="img-thumbnail rounded"
                                                     style="width: 60px; height: 60px; object-fit: cover; cursor: pointer;"
                                                     @onclick="() => ShowImagePreview(item.ItemImageUrl)"
                                                     onerror="this.src='/images/placeholder.jpg'" />
                                            }
                                            else
                                            {
                                                <div class="bg-light d-flex align-items-center justify-content-center rounded"
                                                     style="width: 60px; height: 60px;">
                                                    <i class="fas fa-image fa-2x text-muted"></i>
                                                </div>
                                            } *@
                                        </td>
                                        <td>
                                            <strong class="d-block">@item.ItemNameEn</strong>
                                        </td>
                                        <td>
                                            <strong class="d-block">@item.ItemNameAr</strong>
                                        </td>
                                        <td class="text-center">
                                            @if (item.IsActive)
                                            {
                                                <span class="badge bg-success px-3 py-2">
                                                    <i class="fas fa-check-circle me-1"></i>
                                                    @MerchandisingResources.Active
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary px-3 py-2">
                                                    <i class="fas fa-times-circle me-1"></i>
                                                    @MerchandisingResources.Inactive
                                                </span>
                                            }
                                        </td>
                                        <td>
                                            <div class="text-muted small">
                                                <i class="fas fa-calendar me-1"></i>
                                                @item.CreatedDateUtc.ToString("dd/MM/yyyy")
                                            </div>
                                            <div class="text-muted small">
                                                <i class="fas fa-clock me-1"></i>
                                                @item.CreatedDateUtc.ToString("HH:mm:ss")
                                            </div>
                                        </td>
                                        <td class="text-center">
                                            <div class="btn-group" role="group">
                                                @* <button type="button"
                                                        class="btn btn-sm btn-outline-primary"
                                                        @onclick="() => ViewItemDetails(item.Id)"
                                                        title="@MerchandisingResources.ViewDetails">
                                                    <i class="fas fa-eye"></i>
                                                </button> *@
                                                <button type="button"
                                                        class="btn btn-sm btn-outline-danger"
                                                        @onclick="() => Delete(item.Id)"
                                                        disabled="@IsRemoving"
                                                        title="@MerchandisingResources.RemoveFromCampaign">
                                                    @if (IsRemoving)
                                                    {
                                                        <span class="spinner-border spinner-border-sm"></span>
                                                    }
                                                    else
                                                    {
                                                        <i class="fas fa-trash-alt"></i>
                                                    }
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Pagination -->
                    @if (TotalPages > 1)
                    {
                        <div class="card-footer bg-light">
                            <div class="row align-items-center">
                                <div class="col-md-6">
                                    <small class="text-muted">
                                        @MerchandisingResources.Showing
                                        @((searchModel.PageNumber - 1) * searchModel.PageSize + 1)-@Math.Min(searchModel.PageNumber * searchModel.PageSize, TotalRecords)
                                        @MerchandisingResources.Of @TotalRecords @MerchandisingResources.Items
                                    </small>
                                </div>
                                <div class="col-md-6">
                                    <nav aria-label="Page navigation">
                                        <ul class="pagination pagination-sm justify-content-end mb-0">
                                            <li class="page-item @(searchModel.PageNumber == 1 ? "disabled" : "")">
                                                <button class="page-link" @onclick="PreviousPage" disabled="@(searchModel.PageNumber == 1)">
                                                    <i class="fas fa-chevron-left"></i>
                                                </button>
                                            </li>

                                            @for (int i = Math.Max(1, searchModel.PageNumber - 2); i <= Math.Min(TotalPages, searchModel.PageNumber + 2); i++)
                                            {
                                                var page = i;
                                                <li class="page-item @(searchModel.PageNumber == page ? "active" : "")">
                                                    <button class="page-link" @onclick="() => GoToPage(page)"></button>
                                                </li>
                                            }

                                            <li class="page-item @(searchModel.PageNumber == TotalPages ? "disabled" : "")">
                                                <button class="page-link" @onclick="NextPage" disabled="@(searchModel.PageNumber == TotalPages)">
                                                    <i class="fas fa-chevron-right"></i>
                                                </button>
                                            </li>
                                        </ul>
                                    </nav>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    }
</div>

<!-- Image Preview Modal -->
@if (!string.IsNullOrEmpty(PreviewImageUrl))
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@MerchandisingResources.ImagePreview</h5>
                    <button type="button" class="btn-close" @onclick="CloseImagePreview"></button>
                </div>
                <div class="modal-body text-center">
                    <img src="@PreviewImageUrl" class="img-fluid" alt="Preview" />
                </div>
            </div>
        </div>
    </div>
}

<style>
    .search-container {
        flex: 1;
        min-width: 250px;
        max-width: 400px;
    }

    .search-box {
        border-radius: 0.5rem;
        overflow: hidden;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    }

    .search-input {
        border: 1px solid #e0e0e0;
        border-right: none;
    }

    .search-input:focus {
        border-color: #0d6efd;
        box-shadow: none;
    }

    .btn-search {
        border: 1px solid #e0e0e0;
        border-left: none;
        background: white;
    }

    .btn-search:hover {
        background: #f8f9fa;
    }

    .custom-dropdown {
        cursor: pointer;
    }

    .custom-dropdown:hover {
        background-color: #f8f9fa;
    }
</style>