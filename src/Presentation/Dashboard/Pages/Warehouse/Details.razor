@page "/warehouse/platform/add"
@page "/warehouse/vendor/add"
@page "/warehouse/{type}/{id:guid}"

@using Common.Enumerations.User
@using Resources
@attribute [Authorize(Roles = nameof(UserRole.Admin))]

<PageTitle>@PageTitle Warehouse</PageTitle>

<div class="container-fluid p-0">
    <div class="card shadow-sm border-0">
        <div class="card-header d-flex justify-content-between bg-primary align-items-center">
            <h4 class="modal-title text-white mb-0">
                <i class="fas fa-@(IsPlatformWarehouse ? "building" : "store") me-2"></i>
                @PageTitle @(IsPlatformWarehouse ? "Platform" : "Vendor") Warehouse
            </h4>
            <span class="badge bg-light text-primary">
                @(IsPlatformWarehouse ? "Platform" : "Vendor") Warehouse
            </span>
        </div>

        <EditForm Model="@Model" OnValidSubmit="Save">
            <DataAnnotationsValidator />

            <div class="card-body p-4">

                <!-- Warehouse Type Info (Read-only for edit) -->
                @if (Model.Id != Guid.Empty)
                {
                    <div class="alert alert-info mb-4">
                        <i class="fas fa-info-circle me-2"></i>
                        This is a <strong>@(IsPlatformWarehouse ? "Platform" : "Vendor")</strong> warehouse
                    </div>
                }
              
                <!-- Vendor Selection (Only for Vendor Warehouses and Only for Add Mode) -->
                @if (IsVendorWarehouse)
                {
                    @if (!IsEditMode)
                    {
                        <!-- Add Mode: Show Vendor Select -->
                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <label class="form-label">
                                    <i class="fas fa-store me-2"></i>
                                    Vendor: <span class="text-danger">*</span>
                                </label>
                                <select class="form-select" @onchange="OnVendorSelectionChanged">
                                    <option value="">-- Select Vendor --</option>
                                    @if (vendors != null && vendors.Any())
                                    {
                                        @foreach (var vendor in vendors)
                                        {
                                            <option value="@vendor.VendorId" selected="@(selectedVendorId == vendor.VendorId)">
                                                @vendor.UserName - @vendor.Email
                                            </option>
                                        }
                                    }
                                </select>
                                @if (showVendorValidation)
                                {
                                    <div class="text-danger small mt-1">Please select a vendor</div>
                                }
                            </div>
                        </div>
                        @* <div class="col-md-6">
                            <div class="form-group">
                                <label>@ECommerceResources.Category</label>
                                <select id="parentCategorySelect"
                                        class="form-control select2-parent select2-bootstrap"
                                        value="@(.VendorId.ToString() ?? Guid.Empty.ToString())"
                                        @onchange="OnParentCategoryChanged">
                                    <option value="@Guid.Empty.ToString()">@($"{FormResources.Select} {ECommerceResources.CategoryParent}")</option>
                                    @foreach (var item in Model.Where(p => p.Id != Model.Id))
                                    {
                                        <option value="@item.Id.ToString()" selected="@(Model.VendorId == item.Id)">@item.Title</option>
                                    }
                                </select>
                            </div>
                        </div> *@
                    }
                    else
                    {
                        <!-- Edit Mode: Show Email (Read-only) -->
                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <label class="form-label">
                                    <i class="fas fa-envelope me-2"></i>
                                    Vendor Email:
                                </label>
                                <InputText class="form-control"
                                           @bind-Value="Model.Email"
                                           type="email"
                                           readonly />
                                <ValidationMessage For="@(() => Model.Email)" />
                            </div>
                        </div>
                    }
                }

                <!-- Address -->
                <div class="row">
                    <div class="col-md-12 mb-3">
                        <label class="form-label">
                            <i class="fas fa-map-marker-alt me-2"></i>
                            @FormResources.Address:
                        </label>
                        <InputTextArea class="form-control"
                                       @bind-Value="Model.Address"
                                       rows="3"
                                       placeholder="@String.Format(FormResources.Placeholder, FormResources.Address)" />
                        <ValidationMessage For="@(() => Model.Address)" />
                    </div>
                </div>

                <!-- Additional Info for Existing Records -->
                @if (Model.Id != Guid.Empty)
                {
                    <hr class="my-4" />

                    <div class="row">
                        <div class="col-md-6">
                            <div class="card bg-light border-0">
                                <div class="card-body">
                                    <h6 class="card-subtitle mb-2 text-muted">
                                        <i class="fas fa-info-circle me-2"></i>
                                        Warehouse Information
                                    </h6>
                                    <p class="card-text mb-1">
                                        <strong>Type:</strong>
                                        <span class="badge bg-@(IsPlatformWarehouse ? "primary" : "info")">
                                            @(IsPlatformWarehouse ? "Platform" : "Vendor")
                                        </span>
                                    </p>
                                    <p class="card-text mb-0">
                                        <strong>Status:</strong>
                                        <span class="badge bg-@(Model.IsActive ? "success" : "secondary")">
                                            @(Model.IsActive ? "Active" : "Inactive")
                                        </span>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="card-footer bg-light py-3 d-flex justify-content-end gap-2">
                <button type="button"
                        class="btn btn-secondary"
                        @onclick="CloseModal"
                        disabled="@isSaving">
                    <i class="fas fa-times me-2"></i>
                    @ActionsResources.Cancel
                </button>

                <button type="submit"
                        class="btn btn-primary"
                        disabled="@isSaving">
                    @if (isSaving)
                    {
                        <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                        <span>@FormResources.Saving...</span>
                    }
                    else
                    {
                        <i class="fas fa-save me-2"></i>
                        @ActionsResources.Save
                    }
                </button>
            </div>
        </EditForm>
    </div>
</div>

<style>
    .badge {
        font-size: 0.85rem;
        padding: 0.5rem 1rem;
    }

    .form-check-input:checked {
        background-color: #198754;
        border-color: #198754;
    }

    .alert-info {
        background-color: #e7f3ff;
        border-color: #b6d4fe;
        color: #084298;
    }
</style>
