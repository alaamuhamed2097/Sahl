@page "/warehouses"

@using Common.Enumerations.User
@using Resources
@using Resources.Enumerations
@using Shared.DTOs.Warehouse
@attribute [Authorize(Roles = nameof(UserRole.Admin))]
@inherits BaseListPage<WarehouseDto>

<PageTitle>Warehouse Management</PageTitle>

<div class="container-fluid p-0">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white py-3">
            <h5 class="mb-0 fw-semibold text-white">
                <i class="fas fa-warehouse me-2"></i>
                Warehouse Management
            </h5>
        </div>

        <div class="card-body p-0">

            <!-- Tabs Navigation -->
            <ul class="nav nav-tabs px-3 pt-3" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link @(activeTab == "platform" ? "active" : "")"
                            type="button"
                            @onclick="SwitchToPlatform">
                        <i class="fas fa-building me-2"></i>
                        Platform Warehouse Details
                    </button>
                </li>

                @if (isMultiVendorEnabled)
                {
                    <li class="nav-item" role="presentation">
                        <button class="nav-link @(activeTab == "vendor" ? "active" : "")"
                                type="button"
                                @onclick="SwitchToVendor">
                            <i class="fas fa-store me-2"></i>
                            Vendor Warehouses
                        </button>
                    </li>
                }
            </ul>

            <!-- Tab Content -->
            <div class="tab-content p-3">
                <!-- Platform Tab - Details View -->
                @if (activeTab == "platform")
                {
                    <div class="tab-pane fade show active" role="tabpanel">
                        @if (platformWarehouse != null)
                        {
                            <!-- Warehouse Details Card -->
                            <div class="card shadow-sm">
                                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                                    <h6 class="mb-0">
                                        <i class="fas fa-info-circle me-2"></i>
                                        Platform Warehouse Information
                                    </h6>
                                    <button class="btn btn-sm btn-primary" @onclick="() => Edit(platformWarehouse)">
                                        <i class="feather icon-edit me-1"></i>
                                        Edit Details
                                    </button>
                                </div>

                                <div class="card-body">
                                    <div class="row g-4">
                                        <!-- Address Section -->
                                        <div class="col-md-12">
                                            <div class="border rounded p-3 bg-light">
                                                <h6 class="text-muted mb-3">
                                                    <i class="fas fa-map-marker-alt me-2"></i>
                                                    Address
                                                </h6>
                                                <p class="mb-0 fs-5">
                                                    @(platformWarehouse.Address ?? "No address specified")
                                                </p>
                                            </div>
                                        </div>

                                        <!-- Status Section -->
                                        <div class="col-md-6">
                                            <div class="border rounded p-3">
                                                <h6 class="text-muted mb-3">
                                                    <i class="fas fa-toggle-on me-2"></i>
                                                    Status
                                                </h6>
                                                <div class="d-flex align-items-center justify-content-between">
                                                    <span class="badge bg-@(platformWarehouse.IsActive ? "success" : "secondary") fs-6 px-3 py-2">
                                                        <i class="fas fa-@(platformWarehouse.IsActive ? "check" : "times")-circle me-1"></i>
                                                        @(platformWarehouse.IsActive ? "Active" : "Inactive")
                                                    </span>
                                                    <button class="btn btn-sm btn-@(platformWarehouse.IsActive ? "warning" : "success")"
                                                            @onclick="() => ToggleStatus(platformWarehouse)">
                                                        <i class="feather icon-power me-1"></i>
                                                        @(platformWarehouse.IsActive ? "Deactivate" : "Activate")
                                                    </button>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Additional Info Section (if needed) -->
                                        <div class="col-md-6">
                                            <div class="border rounded p-3">
                                                <h6 class="text-muted mb-3">
                                                    <i class="fas fa-info-circle me-2"></i>
                                                    Additional Information
                                                </h6>
                                                <p class="mb-1">
                                                    <strong>Warehouse Type:</strong> Platform
                                                </p>
                                                <p class="mb-0">
                                                    <strong>ID:</strong> @platformWarehouse.Id
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        else if (isLoading)
                        {
                            <!-- Loading State -->
                            <div class="text-center py-5">
                                <div class="spinner-border text-primary" role="status">
                                    <span class="visually-hidden">Loading...</span>
                                </div>
                                <p class="mt-3 text-muted">Loading warehouse details...</p>
                            </div>
                        }
                        else
                        {
                            <!-- No Warehouse State -->
                            <div class="text-center py-5">
                                <i class="fas fa-warehouse fa-3x text-muted mb-3"></i>
                                <p class="text-muted mb-3">No platform warehouse found</p>
                                <button class="btn btn-success" @onclick="CreatePlatformWarehouse">
                                    <i class="feather icon-plus-circle me-1"></i>
                                    Create Platform Warehouse
                                </button>
                            </div>
                        }
                    </div>
                }

                <!-- Vendor Tab -->
                @if (activeTab == "vendor")
                {
                    <div class="tab-pane fade show active" role="tabpanel">
                        <!-- Filtration Section -->
                        <div class="row mb-3 g-2 align-items-center">
                            <!-- Search Box -->
                            <div class="col-md-3">
                                <EditForm Model="vendorSearchModel" OnSubmit="@(() => Search())">
                                    <div class="input-group">
                                        <input type="text"
                                               @bind="vendorSearchModel.SearchTerm"
                                               class="form-control"
                                               placeholder="Search by address..." />
                                        <button type="submit" class="btn btn-danger">
                                            <i class="fas fa-search"></i>
                                        </button>
                                    </div>
                                </EditForm>
                            </div>

                            <!-- Vendor Filter -->
                            <div class="col-md-2">
                                <select class="form-select" @onchange="OnVendorFilterChanged" value="@(selectedVendorId?.ToString() ?? "")">
                                    <option value="">All Vendors</option>
                                    @if (vendors != null)
                                    {
                                        @foreach (var vendor in vendors)
                                        {

                                        }
                                    }
                                </select>
                            </div>

                            <!-- Status Filter -->
                            <div class="col-md-2">
                                <select class="form-select" @onchange="OnFilterChanged" value="@(vendorSearchModel.IsActive.HasValue ? (vendorSearchModel.IsActive.Value ? "active" : "inactive") : "")">
                                    <option value="">All Status</option>
                                    <option value="active">Active Only</option>
                                    <option value="inactive">Inactive Only</option>
                                </select>
                            </div>

                            <!-- Page Size -->
                            <div class="col-md-2">
                                <select class="form-select" @onchange="OnPageSizeChanged" value="@vendorSearchModel.PageSize">
                                    <option value="10">10 per page</option>
                                    <option value="15">15 per page</option>
                                    <option value="20">20 per page</option>
                                    <option value="30">30 per page</option>
                                </select>
                            </div>

                            <!-- Action Buttons -->
                            <div class="col-md-3 ms-auto text-end">
                                <div class="btn-group">
                                    <!-- Export Dropdown -->
                                    <div class="dropdown">
                                        <button class="btn btn-info dropdown-toggle"
                                                type="button"
                                                data-bs-toggle="dropdown">
                                            <i class="fas fa-file-export me-1"></i>
                                            Export
                                        </button>
                                        <ul class="dropdown-menu">
                                            <li>
                                                <a class="dropdown-item" href="javascript:void(0)" @onclick="ExportToExcel">
                                                    <i class="far fa-file-excel me-1"></i>Excel
                                                </a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item" href="javascript:void(0)" @onclick="ExportToPrint">
                                                    <i class="fas fa-print me-1"></i>Print
                                                </a>
                                            </li>
                                        </ul>
                                    </div>

                                    <!-- Add Button -->
                                    <button class="btn btn-success" @onclick="AddWarehouse">
                                        <i class="feather icon-plus-circle me-1"></i>
                                        Add
                                    </button>
                                </div>
                            </div>
                        </div>

                        @* Vendor Table Content *@
                        @RenderTable(vendorItems, vendorCurrentPage, vendorSearchModel.PageSize, vendorTotalRecords, showVendorColumn: true)
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@code {
    private RenderFragment RenderTable(IEnumerable<WarehouseDto> items, int currentPage, int pageSize, int totalRecords, bool showVendorColumn = false) => __builder =>
    {
        <!-- Desktop Table -->
        <div class="d-none d-md-block">
            <div class="table-responsive border rounded-3">
                <table class="table table-striped table-hover mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="text-center">#</th>
                            @if (showVendorColumn)
                            {
                                <th class="text-center">Vendor</th>
                            }
                            <th class="text-center">Address</th>
                            <th class="text-center">Status</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (items != null && items.Any())
                        {
                            int i = (currentPage - 1) * pageSize;
                            @foreach (var item in items)
                            {
                                <tr>
                                    <td class="text-center align-middle">@(++i)</td>

                                    @if (showVendorColumn)
                                    {
                                        <td class="text-center align-middle">
                                        </td>
                                    }

                                    <td class="text-center align-middle">
                                        @(item.Address ?? "-")
                                    </td>

                                    <td class="text-center align-middle">
                                        <span class="badge bg-@(item.IsActive ? "success" : "secondary")">
                                            <i class="fas fa-@(item.IsActive ? "check" : "times")-circle me-1"></i>
                                            @(item.IsActive ? "Active" : "Inactive")
                                        </span>
                                    </td>

                                    <td class="text-center align-middle">
                                        <div class="btn-group" role="group">
                                            <button class="btn btn-sm btn-primary"
                                                    @onclick="() => Edit(item)">
                                                <i class="feather icon-edit"></i>
                                            </button>

                                            <button class="btn btn-sm btn-@(item.IsActive ? "warning" : "success")"
                                                    @onclick="() => ToggleStatus(item)">
                                                <i class="feather icon-power"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="@(showVendorColumn ? "5" : "4")" class="text-center py-5">
                                    <div class="text-muted">
                                        <i class="fas fa-warehouse fa-3x mb-3"></i>
                                        <p class="mb-0">No warehouses found</p>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Mobile Cards -->
        <div class="d-block d-md-none">
            @if (items != null && items.Any())
            {
                @foreach (var item in items)
                {
                    <div class="card shadow-sm mb-3">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                @if (showVendorColumn)
                                {
                                    <h6 class="mb-0">
                                    </h6>
                                }
                                <span class="badge bg-@(item.IsActive ? "success" : "secondary")">
                                    @(item.IsActive ? "Active" : "Inactive")
                                </span>
                            </div>

                            <p class="mb-2">
                                <i class="fas fa-map-marker-alt text-danger me-2"></i>
                                @(item.Address ?? "---")
                            </p>

                            <div class="d-flex gap-2">
                                <button class="btn btn-primary btn-sm flex-fill"
                                        @onclick="() => Edit(item)">
                                    <i class="feather icon-edit me-1"></i>Edit
                                </button>

                                <button class="btn btn-@(item.IsActive ? "warning" : "success") btn-sm flex-fill"
                                        @onclick="() => ToggleStatus(item)">
                                    <i class="feather icon-power me-1"></i>
                                    @(item.IsActive ? "Deactivate" : "Activate")
                                </button>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-warehouse fa-3x text-muted mb-3"></i>
                    <p class="text-muted">No warehouses found</p>
                </div>
            }
        </div>

        <!-- Pagination -->
        @if (items != null && items.Any())
        {
            int startRecord = totalRecords == 0 ? 0 : ((currentPage - 1) * pageSize) + 1;
            int endRecord = Math.Min(currentPage * pageSize, totalRecords);
            int totalPages = (int)Math.Ceiling((double)totalRecords / pageSize);
            bool canGoToPrevious = currentPage > 1;
            bool canGoToNext = currentPage < totalPages;

            <div class="d-flex justify-content-between align-items-center mt-4">
                <div class="text-muted small">
                    Showing @startRecord to @endRecord of @totalRecords entries
                </div>

                <nav>
                    <ul class="pagination pagination-sm mb-0">
                        <li class="page-item @(!canGoToPrevious ? "disabled" : "")">
                            <a class="page-link" @onclick="() => GoToPage(1)">
                                <i class="fas fa-angle-double-left"></i>
                            </a>
                        </li>

                        <li class="page-item @(!canGoToPrevious ? "disabled" : "")">
                            <a class="page-link" @onclick="() => GoToPage(currentPage - 1)">
                                <i class="fas fa-angle-left"></i>
                            </a>
                        </li>

                        @{
                            const int maxVisiblePages = 5;
                            int startPage = Math.Max(1, currentPage - 2);
                            int endPage = Math.Min(totalPages, startPage + maxVisiblePages - 1);
                            if (endPage - startPage + 1 < maxVisiblePages)
                            {
                                startPage = Math.Max(1, endPage - maxVisiblePages + 1);
                            }
                        }

                        @for (int pag = startPage; pag <= endPage; pag++)
                        {
                            int pageNumber = pag;
                            <li class="page-item @(pag == currentPage ? "active" : "")">
                                <a class="page-link" @onclick="() => GoToPage(pageNumber)">@pag</a>
                            </li>
                        }

                        <li class="page-item @(!canGoToNext ? "disabled" : "")">
                            <a class="page-link" @onclick="() => GoToPage(currentPage + 1)">
                                <i class="fas fa-angle-right"></i>
                            </a>
                        </li>

                        <li class="page-item @(!canGoToNext ? "disabled" : "")">
                            <a class="page-link" @onclick="() => GoToPage(totalPages)">
                                <i class="fas fa-angle-double-right"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        }
    };
}
