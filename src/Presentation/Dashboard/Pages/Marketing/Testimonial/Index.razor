@page "/testimonials"

@using Common.Enumerations
@using Common.Enumerations.User
@using Resources
@using Resources.Enumerations
@using Shared.DTOs.Testimonial
@attribute [Authorize(Roles = nameof(UserRole.Admin))]
@inherits BaseListPage<TestimonialDto>

<PageTitle>@TestimonialResources.TestimonialManagement</PageTitle>

<div class="container-fluid p-0">
    <div class="card shadow-sm border-0">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h4 class="mb-0">ðŸ’¬ @TestimonialResources.TestimonialManagement</h4>
        </div>
        <div class="card-body">
            <div class="dt-responsive table-responsive">
                <!-- Filtration start -->
                <ul class="navbar-nav d-flex flex-row align-items-center gap-3 mb-2 px-0 w-100">
                    <li class="nav-item col-md-6 w-auto d-flex flex-row align-items-center gap-3">
                        <EditForm Model="searchModel" OnSubmit="@Search">
                            <!-- Search Box -->
                            <div class="input-group rounded-3 border" style="width: 170px; height: 38px;">
                                <InputText @bind-Value="searchModel.SearchTerm"
                                           id="searchInput"
                                           class="form-control rounded-end-3 text-center border-0"
                                           placeholder="@ActionsResources.Search"
                                           style="height: 38px;" />
                                <button type="submit"
                                        class="btn btn-danger rounded-start-3 d-flex align-items-center justify-content-center border-0"
                                        style="width: 40px; height: 38px;">
                                    <i class="fas fa-search text-white m-0"></i>
                                </button>
                            </div>
                        </EditForm>

                        <!-- Page Size -->
                        <div class="d-flex align-items-center gap-2">
                            <!-- <label class="form-label fw-semibold mb-0">@ActionsResources.Show</label> -->
                            <select class="form-select rounded-3 shadow-sm border-light text-primary fw-bold text-center"
                                    style="width: 100px; height: 38px; padding-right: 16px;"
                                    @onchange="OnPageSizeChanged">
                                <option value="10" selected="@(searchModel.PageSize == 10)">10</option>
                                <option value="15" selected="@(searchModel.PageSize == 15)">15</option>
                                <option value="20" selected="@(searchModel.PageSize == 20)">20</option>
                                <option value="30" selected="@(searchModel.PageSize == 30)">30</option>
                            </select>
                        </div>
                    </li>
                    <li class="nav-item ms-auto d-flex flex-row align-items-center gap-2">
                        <!-- Add Testimonial Button -->
                        <button class="btn btn-success" @onclick="Add">
                            <i class="fas fa-plus me-2"></i>
                            <span class="fw-bold">@TestimonialResources.AddTestimonial</span>
                        </button>

                        <!-- Export Buttons -->
                        <div class="dropdown">
                            <button class="btn btn-info" type="button" id="exportDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-file-export me-2"></i>
                                <span class="fw-bold">@ActionsResources.Export</span>
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="exportDropdown">
                                <li><a class="dropdown-item" href="javascript:void(0)" @onclick="ExportToExcel"><i class="far fa-file-excel mx-2"></i>@GeneralResources.Excel</a></li>
                                <li><a class="dropdown-item" href="javascript:void(0)" @onclick="ExportToPrint"><i class="fas fa-print mx-2"></i>@ActionsResources.Print</a></li>
                            </ul>
                        </div>
                    </li>
                </ul>
                
                <!-- Table -->
                <div class="table-responsive border rounded-3 overflow-hidden">
                    <table class="table table-hover mb-0 d-none d-md-table">
                        <thead class="bg-light">
                            <tr>
                                <th class="text-center align-middle" style="width: 6%;">#</th>
                                <th class="text-center align-middle" style="width: 8%;">@TestimonialResources.CustomerPhoto</th>
                                <th class="text-center align-middle" style="width: 15%;">@ECommerceResources.CustomerName</th>
                                <th class="text-center align-middle" style="width: 15%;">@TestimonialResources.CustomerTitle</th>
                                <th class="text-center align-middle" style="width: 8%;">@GeneralResources.DisplayOrder</th>
                                <th class="text-center align-middle" style="width: 8%;">@ECommerceResources.Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (items != null && items.Any())
                            {
                                int i = (currentPage - 1) * searchModel.PageSize;
                                @foreach (var item in items)
                                {
                                    <tr class="align-middle">
                                        <td class="text-center p-3">@(++i)</td>
                                        <td class="text-center align-middle">
                                            @{
                                                var imageSrc = GetImageSourceForDisplay(item.CustomerImagePath);
                                            }
                                            @if (!string.IsNullOrEmpty(imageSrc))
                                            {
                                                <img src="@imageSrc" alt="@item.CustomerName" class="rounded-circle" style="width: 40px; height: 40px; object-fit: cover;" />
                                            }
                                            else
                                            {
                                                <div class="bg-secondary rounded-circle d-flex align-items-center justify-content-center text-white" style="width: 40px; height: 40px;">
                                                    <i class="fas fa-user"></i>
                                                </div>
                                            }
                                        </td>
                                        <td class="text-center align-middle">
                                            <div class="fw-bold text-truncate" style="max-width: 120px;" title="@item.CustomerName">@item.CustomerName</div>
                                        </td>
                                        <td class="text-center align-middle">
                                            <div class="text-muted text-truncate" style="max-width: 120px;" title="@item.CustomerTitle">@item.CustomerTitle</div>
                                        </td>
                                        <td class="text-center align-middle">
                                            <span class="badge bg-info">@item.DisplayOrder</span>
                                        </td>
                                        <td class="text-center align-middle">
                                            <div class="d-flex gap-1 justify-content-center">
                                                <button class="btn btn-primary btn-sm" @onclick="() => Edit(item)" title="@ActionsResources.Edit">
                                                    <i class="fas fa-edit"></i>
                                                </button>
                                                <button class="btn btn-info btn-sm" @onclick="() => Preview(item)" title="@TestimonialResources.PreviewTestimonial">
                                                    <i class="fas fa-eye"></i>
                                                </button>
                                                <button class="btn btn-danger btn-sm" @onclick="() => Delete(item.Id)" title="@ActionsResources.Delete">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="8" class="text-center">
                                        @TestimonialResources.NoTestimonialsFound
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    <!-- Mobile Responsive Cards -->
                    <div class="d-md-none">
                        @if (items != null && items.Any())
                        {
                            @foreach (var item in items)
                            {
                                <div class="card mb-3 border-0 shadow-sm">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <div class="d-flex align-items-center gap-2">
                                                @{
                                                    var mobileImageSrc = GetImageSourceForDisplay(item.CustomerImagePath);
                                                }
                                                @if (!string.IsNullOrEmpty(mobileImageSrc))
                                                {
                                                    <img src="@mobileImageSrc" alt="@item.CustomerName" class="rounded-circle" style="width: 30px; height: 30px; object-fit: cover;" />
                                                }
                                                else
                                                {
                                                    <div class="bg-secondary rounded-circle d-flex align-items-center justify-content-center text-white" style="width: 30px; height: 30px;">
                                                        <i class="fas fa-user" style="font-size: 0.8rem;"></i>
                                                    </div>
                                                }
                                                <h6 class="card-title mb-0 fw-bold">@item.CustomerName</h6>
                                            </div>
                                            <span class="badge bg-info">@item.DisplayOrder</span>
                                        </div>
                                        <p class="card-text text-muted mb-2">@item.CustomerTitle</p>
                                        <p class="card-text mb-2">@item.TestimonialText</p>
                                        <p class="card-text"><small class="text-muted">Created: @item.CreatedDateUtc.ToString("dd/MM/yyyy")</small></p>
                                        <div class="d-flex gap-1">
                                            <button class="btn btn-primary btn-sm" @onclick="() => Edit(item)">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            <button class="btn btn-info btn-sm" @onclick="() => Preview(item)">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                            <button class="btn btn-danger btn-sm" @onclick="() => Delete(item.Id)">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="text-center p-4">
                                <i class="fas fa-comment-alt fa-3x text-muted mb-3"></i>
                                <p class="text-muted">@TestimonialResources.NoTestimonialsFound</p>
                            </div>
                        }
                    </div>
                </div>

                <!-- Pagination -->
                <div class="d-flex justify-content-between mt-3" dir="ltr">
                    <div class="d-flex align-items-center">
                        <span class="text-muted">
                            @string.Format(ActionsResources.ShowingEntries, StartRecord, EndRecord, totalRecords)
                        </span>
                    </div>
                    <nav>
                        <ul class="pagination mb-0">
                            <!-- First Button -->
                            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                <a class="page-link" @onclick="() => GoToPage(1)" title="@ActionsResources.First">
                                    <i class="fas fa-angle-double-left"></i>
                                </a>
                            </li>

                            <!-- Previous Button -->
                            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                <a class="page-link" @onclick="() => GoToPage(currentPage - 1)">
                                    @ActionsResources.Previous
                                </a>
                            </li>

                            <!-- Dynamic Page Numbers -->
                            @{
                                const int maxVisiblePages = 5;
                                int startPage = Math.Max(1, currentPage - 2);
                                int endPage = Math.Min(totalPages, startPage + maxVisiblePages - 1);
                                if (endPage - startPage + 1 < maxVisiblePages)
                                {
                                    startPage = Math.Max(1, endPage - maxVisiblePages + 1);
                                }
                            }
                            @if (startPage > 1)
                            {
                                <li class="page-item disabled">
                                    <a class="page-link">...</a>
                                </li>
                            }
                            @for (int pag = startPage; pag <= endPage; pag++)
                            {
                                int pageNumber = pag;
                                <li class="page-item @(pag == currentPage ? "active":"")">
                                    <a class="page-link" @onclick="() => GoToPage(pageNumber)">@pag</a>
                                </li>
                            }
                            @if (endPage < totalPages)
                            {
                                <li class="page-item disabled">
                                    <a class="page-link">...</a>
                                </li>
                            }

                            <!-- Next Button -->
                            <li class="page-item @(CanGoToNextPage ? "" : "disabled")">
                                <a class="page-link" @onclick="() => GoToPage(currentPage + 1)">
                                    @ActionsResources.Next
                                </a>
                            </li>

                            <!-- Last Button -->
                            <li class="page-item @(CanGoToNextPage ? "" : "disabled")">
                                <a class="page-link" @onclick="() => GoToPage(totalPages)" title="@ActionsResources.Last">
                                    <i class="fas fa-angle-double-right"></i>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Testimonial Preview Modal -->
<div class="modal fade" id="testimonialPreviewModal" tabindex="-1" aria-labelledby="testimonialPreviewModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="testimonialPreviewModalLabel">@TestimonialResources.TestimonialPreview</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="@ActionsResources.Close"></button>
            </div>
            <div class="modal-body" id="testimonialPreviewContent">
                <!-- Content will be populated by JavaScript -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">@ActionsResources.Close</button>
            </div>
        </div>
    </div>
</div>