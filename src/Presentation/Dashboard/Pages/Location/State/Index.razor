@* @page "/states"
@using Common.Enumerations.User
@attribute [Authorize(Roles = nameof(UserRole.Admin))]
@inherits BaseListPage<StateDto>

<PageTitle>@ECommerceResources.State</PageTitle>

<div class="container-fluid p-0">
    <div class="card shadow-sm border-0">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h4 class="mb-3">@ECommerceResources.States</h4>
        </div>
        <div class="card-body">
            <div class="dt-responsive table-responsive">
            <!-- Filtration start -->
            <ul class="navbar-nav d-flex flex-row align-items-center gap-3 mb-2 px-0 w-100">
                <li class="nav-item col-md-6 w-auto d-flex flex-row align-items-center gap-3">
                    <EditForm Model="searchModel" OnSubmit="@Search">
                        <!-- Search Box -->
                            <div class="input-group rounded" style="width: 170px; height: 38px;">
                                <input type="text" @bind="searchModel.SearchTerm"
                                       id="searchInput"
                                       class="form-control text-center border-0 @(ResourceManager.CurrentLanguage == Language.Arabic ? "rounded-end" : "rounded-start")"
                                       placeholder="@ActionsResources.Search"
                                       style="height: 38px;" />
                                <button type="submit"
                                        class="btn btn-danger d-flex align-items-center justify-content-center border-0 @(ResourceManager.CurrentLanguage == Language.Arabic ? "rounded-start" : "rounded-end")"
                                        style="width: 40px; height: 38px;">
                                    <i class="fas fa-search text-white m-0"></i>
                                </button>
                            </div>
                    </EditForm>

                    <!-- Page Size -->
                    <div class="d-flex align-items-center gap-2">
                        <label class="form-label fw-semibold mb-0">@ActionsResources.Show</label>
                        <select class="form-select rounded-3 shadow-sm border-light text-primary fw-bold text-center"
                        style="width: 100px; height: 38px; padding-right: 16px;"
                                @onchange="OnPageSizeChanged">
                            <option value="10">10</option>
                            <option value="15">15</option>
                            <option value="20">20</option>
                            <option value="30">30</option>
                        </select>
                    </div>
                </li>
                <li class="nav-item ms-auto d-flex flex-row align-items-center gap-2">
                    <!-- Export Buttons -->
                    <div class="dropdown">
                        <button class="btn btn-info" type="button" id="exportDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-file-export me-2"></i>
                            <span class="fw-bold">@ActionsResources.Export</span>
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="exportDropdown">
                            <li><a class="dropdown-item" href="javascript:void(0)" @onclick="ExportToExcel"><i class="far fa-file-excel mx-2"></i>Excel</a></li>
                            <li><a class="dropdown-item" href="javascript:void(0)" @onclick="ExportToPrint"><i class="fas fa-print mx-2"></i>Print</a></li>
                        </ul>
                    </div>
                    
                    <!-- Add Button -->
                    <button class="btn btn-success" @onclick="Add">
                        <i class="feather icon-plus-circle me-2"></i>
                        <span class="fw-bold">@ActionsResources.Add</span>
                    </button>
                </li>
            </ul>
                <table id="order-table" class="table table-striped table-hover mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="text-center align-middle">@ECommerceResources.Title</th>
                            <th class="text-center align-middle">@ECommerceResources.Actions</th>
                        </tr>
                    </thead>
                    <tbody>                       
                        @if(items !=  null )
                        {

                            @foreach(var item  in items )
                            {                             
                                <tr>
                                        <td class="text-center align-middle">  @item.Title </td>
                                        <td class="d-flex gap-1 justify-content-center align-items-center">
                                            <button class="btn btn-primary"@onclick="() => Edit(item)">@ActionsResources.Edit</button>
                                            <button class="btn btn-danger"@onclick="() => Delete(item.Id)">@ActionsResources.Delete</button>
                                        </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class=" text-center">
                                    @NotifiAndAlertsResources.NoDataFound
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>

                <!-- Pagination start -->
                <div class="d-flex justify-content-end select-none align-items-center mt-3">
                    <nav>
                        <ul dir="ltr" class="pagination mb-0">
                            <!-- Previous Button -->
                            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                <a class="page-link"
                                href="javascript:void(0)"
                                   @onclick="async () => GoToPage(currentPage - 1)">
                                    @ActionsResources.Previous
                                </a>
                            </li>

                            <!-- Page Numbers -->
                            @foreach(var pag in Enumerable.Range(1,totalPages))  
                            {                               
                                <li class="page-item @(pag == currentPage ? "active":"")"><a class="page-link"@onclick="async () => GoToPage(pag)">@pag</a></li>
                            }
                            <!-- Next Button -->
                            <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                                <a class="page-link"
                                   @onclick="async () => GoToPage(currentPage + 1)">
                                    @ActionsResources.Next
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
                <!-- Pagination end -->

            </div>
        </div>
    </div>
</div> *@