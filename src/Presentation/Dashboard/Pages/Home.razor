@page "/"
@page "/home"
@page "/dashboard"

@attribute [Authorize(Roles = "Admin,Vendor")]
@using Common.Enumerations.User
@using Microsoft.AspNetCore.Components.Web.Virtualization
<PageTitle>@GeneralResources.Home</PageTitle>

<!-- [ breadcrumb ] start -->
<div class="page-header">
	<div class="page-block">
		<div class="row align-items-center">
			<div class="col-md-12">
				<div class="page-header-title">
					<h5>@GeneralResources.Home</h5>
				</div>
				<ul class="breadcrumb">
					<li class="breadcrumb-item">
						<a href="index.html">
							<i class="feather icon-home"></i>
						</a>
					</li>
					<li class="breadcrumb-item"><a href="#!">@GeneralResources.Analytics</a></li>
				</ul>
			</div>
		</div>
	</div>
</div>
<!-- [ breadcrumb ] end -->
<div class="container-fluid py-4 dashboard-page">
  <!-- ===== Summary Cards ===== -->
 <div class="container-fluid py-4 dashboard-page">
  <div class="row g-4 mb-4">

    <!-- Vehicle Count -->
    <div class="col-xl-3 col-md-6 col-sm-12">
      <div class="card border-0 rounded-4 text-center p-4 hover-card animate-fade-up">
        <div class="icon-wrapper bg-gradient-primary text-white mx-auto mb-3">
          <i class="fas fa-car fa-2x"></i>
        </div>
        <div class="text-box p-3 rounded-4">
          <h6 class="fw-bold mb-1">عدد المركبات</h6>
          <h3 class="fw-bolder text-dark mb-0">42</h3>
          <small class="text-muted">مركبة مسجلة بالنظام</small>
        </div>
      </div>
    </div>

    <!-- Maintenance Requests -->
    <div class="col-xl-3 col-md-6 col-sm-12">
      <div class="card border-0 rounded-4 text-center p-4 hover-card animate-fade-up" style="--delay: 0.1s;">
        <div class="icon-wrapper bg-gradient-warning text-white mx-auto mb-3">
          <i class="fas fa-wrench fa-2x"></i>
        </div>
        <div class="text-box p-3 rounded-4">
          <h6 class="fw-bold mb-1">طلبات الصيانة</h6>
          <h3 class="fw-bolder text-dark mb-0">8</h3>
          <small class="text-muted">قيد التنفيذ</small>
        </div>
      </div>
    </div>

    <!-- Invoices -->
    <div class="col-xl-3 col-md-6 col-sm-12">
      <div class="card border-0 rounded-4 text-center p-4 hover-card animate-fade-up" style="--delay: 0.2s;">
        <div class="icon-wrapper bg-gradient-success text-white mx-auto mb-3">
          <i class="fas fa-file-invoice-dollar fa-2x"></i>
        </div>
        <div class="text-box p-3 rounded-4">
          <h6 class="fw-bold mb-1">الفواتير الصادرة</h6>
          <h3 class="fw-bolder text-dark mb-0">125</h3>
          <small class="text-muted">خلال هذا الشهر</small>
        </div>
      </div>
    </div>

    <!-- Fuel Cost -->
    <div class="col-xl-3 col-md-6 col-sm-12">
      <div class="card border-0 rounded-4 text-center p-4 hover-card animate-fade-up" style="--delay: 0.3s;">
        <div class="icon-wrapper bg-gradient-danger text-white mx-auto mb-3">
          <i class="fas fa-gas-pump fa-2x"></i>
        </div>
        <div class="text-box p-3 rounded-4">
          <h6 class="fw-bold mb-1">تكلفة الوقود</h6>
          <h3 class="fw-bolder text-dark mb-0">34,200 EGP</h3>
          <small class="text-muted">إجمالي الشهر الحالي</small>
        </div>
      </div>
    </div>
  </div>
</div>


  <!-- ===== Charts & Alerts ===== -->
  <div class="row g-4">
    <!-- Fleet Performance -->
    <div class="col-lg-8">
      <div class="card border-0 shadow-lg rounded-4 overflow-hidden h-100">
        <div class="card-header bg-white border-0 d-flex justify-content-between align-items-center py-3 px-4">
          <h6 class="fw-bold mb-0 text-primary">
            <i class="fas fa-chart-line me-2"></i> أداء الأسطول
          </h6>
          <span class="badge bg-light text-dark small">آخر 6 أشهر</span>
        </div>
        <div class="card-body d-flex justify-content-center align-items-center flex-column text-muted">
          <i class="fas fa-chart-area fa-3x mb-3 text-secondary opacity-50"></i>
          <p class="mb-0">سيتم إضافة الرسم البياني قريبًا</p>
        </div>
      </div>
    </div>

    <!-- Alerts -->
    <div class="col-lg-4">
      <div class="card border-0 shadow-lg rounded-4 h-100">
        <div class="card-header bg-white border-0 py-3 px-4 d-flex justify-content-between align-items-center">
          <h6 class="fw-bold mb-0 text-warning">
            <i class="fas fa-bell me-2"></i> التنبيهات
          </h6>
          <span class="badge bg-light text-dark small">اليوم</span>
        </div>
        <div class="card-body p-0">
          <ul class="list-group list-group-flush">
            <li class="list-group-item px-4 py-3 border-0 d-flex align-items-center">
              <i class="fas fa-exclamation-triangle text-danger fs-5 me-3"></i>
              <div><strong>مركبة رقم 204</strong> تحتاج لصيانة عاجلة.</div>
            </li>
            <li class="list-group-item px-4 py-3 border-0 d-flex align-items-center">
              <i class="fas fa-oil-can text-info fs-5 me-3"></i>
              <div><strong>تغيير زيت</strong> مستحق لـ 5 مركبات.</div>
            </li>
            <li class="list-group-item px-4 py-3 border-0 d-flex align-items-center">
              <i class="fas fa-money-bill-wave text-success fs-5 me-3"></i>
              <div><strong>دفعة جديدة</strong> تم تسجيلها اليوم.</div>
            </li>
            <li class="list-group-item px-4 py-3 border-0 text-muted d-flex align-items-center">
              <i class="fas fa-info-circle fs-5 me-3"></i>
              <div>لا توجد تنبيهات جديدة.</div>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>


