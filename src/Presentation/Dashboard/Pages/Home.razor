@page "/"
@page "/home"
@page "/dashboard"

@attribute [Authorize(Roles = "Admin")]
@using Common.Enumerations.User
@using Microsoft.AspNetCore.Components.Authorization
@using Dashboard.Components
@using Dashboard.Components.Statistics
<PageTitle>@GeneralResources.Home</PageTitle>

<!-- [ breadcrumb ] start -->
<div class="page-header">
	<div class="page-block">
		<div class="row align-items-center">
			<div class="col-md-12">
				<div class="page-header-title">
					<h5>@GeneralResources.Home</h5>
				</div>
				<ul class="breadcrumb">
					<li class="breadcrumb-item">
						<a href="/">
							<i class="feather icon-home"></i>
						</a>
					</li>
					<li class="breadcrumb-item"><a href="#!">@GeneralResources.Analytics</a></li>
				</ul>
			</div>
		</div>
	</div>
</div>
<!-- [ breadcrumb ] end -->

<div class="container-fluid py-4 dashboard-page">
    <!-- Loading Skeleton -->
    @if (isInitialLoading)
    {
        <div class="loading-skeleton">
            <div class="row g-3">
                @for (int i = 0; i < 4; i++)
                {
                    <div class="col-lg-3 col-md-6">
                        <div class="card skeleton-card">
                            <div class="card-body">
                                <div class="skeleton-avatar"></div>
                                <div class="skeleton-text skeleton-title"></div>
                                <div class="skeleton-text skeleton-subtitle"></div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <!-- [ Main Content ] start -->
        
        <!-- Admin Section -->
        <AuthorizeView Roles="@nameof(UserRole.Admin)">
            <Authorized>
                <LazyComponent LoadingText="@GeneralResources.LoadingDots">
                    <AdminStatisticsWidget />
                </LazyComponent>
            </Authorized>
        </AuthorizeView>
        
        <!-- [ Main Content ] end -->
    }
</div>

