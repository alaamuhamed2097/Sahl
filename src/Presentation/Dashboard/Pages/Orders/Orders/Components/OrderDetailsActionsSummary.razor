@using Common.Enumerations.Order
@using Shared.DTOs.Order.OrderProcessing.AdminOrder

<div class="row g-4 mb-4">
    @if (Order.OrderStatus != OrderProgressStatus.Cancelled && CanMoveToNextStatus)
    {
        <div class="col-lg-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-gradient-warning text-white py-3">
                    <h5 class="mb-0 fw-bold d-flex align-items-center gap-2">
                        <i class="fas fa-cogs"></i>
                        @ActionsResources.Actions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <button class="btn btn-primary" @onclick="MoveToNextStatusAsync">
                            <i class="@GetNextStatusButtonIcon me-1"></i>
                            @GetNextStatusButtonText
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="col-lg-@((Order.OrderStatus != OrderProgressStatus.Cancelled && CanMoveToNextStatus) ? "6" : "12")">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-header bg-gradient-secondary text-white py-3">
                <h5 class="mb-0 fw-bold d-flex align-items-center gap-2">
                    <i class="fas fa-file-invoice-dollar"></i>
                    @OrderResources.OrderSummary
                </h5>
            </div>
            <div class="card-body">
                <div class="summary-row">
                    <span>@OrderResources.Subtotal:</span>
                    <strong dir="ltr">@FormatCurrency(Order.SubTotal)</strong>
                </div>
                @if (Order.DiscountAmount > 0)
                {
                    <div class="summary-row text-success">
                        <span>@OrderResources.Discount:</span>
                        <strong dir="ltr">-@FormatCurrency(Order.DiscountAmount)</strong>
                    </div>
                }
                <div class="summary-row">
                    <span>@OrderResources.Tax:</span>
                    <strong dir="ltr">@FormatCurrency(Order.TaxAmount)</strong>
                </div>
                <div class="summary-row">
                    <span>@OrderResources.Shipping:</span>
                    <strong dir="ltr">@FormatCurrency(Order.ShippingAmount)</strong>
                </div>
                <div class="summary-total">
                    <span>@OrderResources.TotalAmount:</span>
                    <span dir="ltr">@FormatCurrency(Order.TotalAmount)</span>
                </div>

                @if (Order.Coupon != null)
                {
                    <div class="mt-3 pt-3 border-top">
                        <small class="text-muted d-block mb-1">@OrderResources.CouponCode:</small>
                        <code class="coupon-code">@Order.Coupon.Code</code>
                    </div>
                }

                @if (!string.IsNullOrEmpty(Order.OrderNotes))
                {
                    <div class="mt-3 pt-3 border-top">
                        <small class="text-muted d-block mb-1">@FormResources.Notes:</small>
                        <p class="small mb-0">@Order.OrderNotes</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public AdminOrderDetailsDto Order { get; set; } = null!;
    [Parameter] public bool CanMoveToNextStatus { get; set; }
    [Parameter] public EventCallback MoveToNextStatusAsync { get; set; }
    [Parameter] public string GetNextStatusButtonIcon { get; set; } = string.Empty;
    [Parameter] public string GetNextStatusButtonText { get; set; } = string.Empty;
    [Parameter] public Func<decimal, string> FormatCurrency { get; set; } = null!;
}
