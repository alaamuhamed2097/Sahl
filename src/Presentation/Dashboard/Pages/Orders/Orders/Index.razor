@page "/order/orders"
@page "/orders"

@attribute [Authorize(Roles = nameof(UserRole.Admin))]
@using Common.Enumerations
@using Common.Enumerations.Order
@using Common.Enumerations.Payment
@using Common.Enumerations.User
@using Shared.DTOs.Order.OrderProcessing.AdminOrder
@inherits BaseListPage<AdminOrderListDto>

<PageTitle>@ECommerceResources.Orders</PageTitle>

<div class="container-fluid p-0">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white py-3 d-flex justify-content-between align-items-center">
            <h5 class="mb-0 fw-semibold text-white">🛒 @ECommerceResources.Orders</h5>
        </div>
        <div class="card-body">
            <div class="dt-responsive table-responsive">
                <!-- Filtration start -->
                <ul class="navbar-nav d-flex flex-row align-items-center gap-3 mb-4 px-0 w-100 flex-wrap">
                    <li class="nav-item col-md-5 w-auto d-flex flex-row align-items-center gap-2">
                        <EditForm Model="searchModel" OnSubmit="@(async () => await Search())">
                            <div class="search-container">
                                <div class="input-group search-box">
                                    <input type="text"
                                           @bind="searchModel.SearchTerm"
                                           id="searchInput"
                                           class="form-control search-input"
                                           placeholder="@ActionsResources.Search" />
                                    <button type="submit" class="btn btn-search">
                                        <i class="fas fa-search"></i>
                                    </button>
                                </div>
                            </div>
                        </EditForm>
                    </li>

                    <!-- Order Status Filter -->
                    <li class="nav-item w-auto">
                        <select class="form-select rounded-3 shadow-sm border-light text-primary fw-bold text-center custom-dropdown"
                                style="width: 140px; height: 40px; padding-right: 30px;"
                                @onchange="OnOrderStatusFilterChanged">
                            <option value="">@OrderResources.OrderStatus</option>
                            <option value="@((int)OrderProgressStatus.Pending)">@OrderResources.Pending</option>
                            <option value="@((int)OrderProgressStatus.Confirmed)">@OrderResources.Accepted</option>
                            <option value="@((int)OrderProgressStatus.Processing)">@OrderResources.InProgress</option>
                            <option value="@((int)OrderProgressStatus.Shipped)">@OrderResources.Shipping</option>
                            <option value="@((int)OrderProgressStatus.Delivered)">@OrderResources.Delivered</option>
                            <option value="@((int)OrderProgressStatus.Completed)">@OrderResources.Completed</option>
                            <option value="@((int)OrderProgressStatus.PaymentFailed)">@OrderResources.PaymentFailed</option>
                            <option value="@((int)OrderProgressStatus.Cancelled)">@OrderResources.Canceled</option>
                        </select>
                    </li>

                    <!-- Payment Status Filter -->
                    <li class="nav-item w-auto">
                        <select class="form-select rounded-3 shadow-sm border-light text-success fw-bold text-center custom-dropdown"
                                style="width: 140px; height: 40px; padding-right: 30px;"
                                @onchange="OnPaymentStatusFilterChanged">
                            <option value="">@ECommerceResources.PaymentStatus</option>
                            <option value="@((int)PaymentStatus.Pending)">@OrderResources.Pending</option>
                            <option value="@((int)PaymentStatus.Completed)">@OrderResources.Paid</option>
                            <option value="@((int)PaymentStatus.Failed)">@OrderResources.PaymentFailed</option>
                        </select>
                    </li>

                    <!-- Page Size Selector -->
                    <li class="nav-item w-auto">
                        <select class="form-select rounded-3 shadow-sm border-light text-primary fw-bold text-center custom-dropdown"
                                style="width: 100px; height: 40px; padding-right: 30px;"
                                @onchange="OnPageSizeChanged">
                            <option value="10">10</option>
                            <option value="15">15</option>
                            <option value="20">20</option>
                            <option value="30">30</option>
                            <option value="100">100</option>
                        </select>
                    </li>

                    <!-- Export Button -->
                    <li class="nav-item ms-auto d-flex flex-row align-items-center gap-2">
                        <div class="dropdown">
                            <button class="btn btn-info" type="button" id="exportDropdown" data-bs-toggle="dropdown">
                                <i class="fas fa-file-export mx-1"></i>
                                <span class="fw-bold">@ActionsResources.Export</span>
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="javascript:void(0)" @onclick="ExportToExcel"><i class="far fa-file-excel mx-2"></i>@ActionsResources.Download</a></li>
                                <li><a class="dropdown-item" href="javascript:void(0)" @onclick="ExportToPrint"><i class="fas fa-print mx-2"></i>@ActionsResources.Print</a></li>
                            </ul>
                        </div>
                    </li>
                </ul>

                <!-- Desktop View -->
                    <div style="overflow-x: auto;">
                        <table id="order-table" class="text-center table table-sm table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    @* Use API DTO property names for sorting *@
                                    <th style="min-width: 120px; cursor: pointer;" @onclick="() => SortByColumn(nameof(AdminOrderListDto.OrderNumber))">
                                        @ECommerceResources.OrderID
                                        <i class="@GetSortIconClass(nameof(AdminOrderListDto.OrderNumber))"></i>
                                    </th>
                                    <th style="min-width: 150px; cursor: pointer;" @onclick="() => SortByColumn(nameof(AdminOrderListDto.CustomerName))">
                                        @ECommerceResources.CustomerName
                                        <i class="@GetSortIconClass(nameof(AdminOrderListDto.CustomerName))"></i>
                                    </th>
                                    <th style="min-width: 150px;">@FormResources.PhoneNumber</th>
                                    <th style="min-width: 130px; cursor: pointer;" @onclick="() => SortByColumn(nameof(AdminOrderListDto.OrderDate))">
                                        @OrderResources.OrderDate
                                        <i class="@GetSortIconClass(nameof(AdminOrderListDto.OrderDate))"></i>
                                    </th>
                                    <th style="min-width: 130px; cursor: pointer;" @onclick="() => SortByColumn(nameof(AdminOrderListDto.OrderStatus))">
                                        @OrderResources.OrderStatus
                                        <i class="@GetSortIconClass(nameof(AdminOrderListDto.OrderStatus))"></i>
                                    </th>
                                    <th style="min-width: 100px; cursor: pointer;" @onclick="() => SortByColumn(nameof(AdminOrderListDto.TotalAmount))">
                                        @FormResources.Price
                                        <i class="@GetSortIconClass(nameof(AdminOrderListDto.TotalAmount))"></i>
                                    </th>
                                    <th style="min-width: 120px;">@ECommerceResources.PaymentStatus</th>
                                    <th style="min-width: 100px;">@ActionsResources.Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (items != null && items.Any())
                                {
                                    @foreach (var order in items)
                                    {
                                        <tr>
                                            @* Use API DTO properties directly *@
                                            <td>
                                                <span class="badge bg-primary">@order.OrderNumber</span>
                                            </td>
                                            <td>@order.CustomerName</td>
                                            <td>
                                                <a href="tel:@(order.CustomerPhoneCode + order.CustomerPhone)" class="text-decoration-none text-primary">@order.CustomerPhoneCode @order.CustomerPhone</a>
                                            </td>
                                            <td>
                                                <small>@order.OrderDate.ToString("dd/MM/yyyy hh:mm tt")</small>
                                            </td>
                                            <td>
                                                <span class="@GetOrderStatusClass(order.OrderStatus)">
                                                    @GetOrderStatusText(order.OrderStatus)
                                                </span>
                                            </td>
                                            <td dir="ltr">
                                                <strong>$@(order.TotalAmount % 1 == 0 ? order.TotalAmount.ToString("F0") : order.TotalAmount.ToString("F2"))</strong>
                                            </td>
                                            <td>
                                                <span class="@GetPaymentStatusClass(order.PaymentStatus)">
                                                    <strong>@GetPaymentStatusText(order.PaymentStatus)</strong>
                                                </span>
                                            </td>
                                            <td>
                                                <button class="btn btn-sm btn-primary" @onclick="() => Edit(order)" title="@ActionsResources.View">
                                                    <i class="fas fa-eye"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="9" class="text-center py-4">
                                            <i class="fas fa-inbox text-muted" style="font-size: 48px;"></i>
                                            <p class="text-muted mt-2">@NotifiAndAlertsResources.NoDataFound</p>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- Pagination -->
                    <div class="pagination-wrapper d-flex flex-column justify-content-end flex-grow-1">
                        <div class="d-flex flex-wrap align-items-center justify-content-between gap-3 mt-4 pagination-container" dir="ltr">
                            <div class="text-muted small">
                                @string.Format(
                                ActionsResources.ShowingEntries,
                                                                ((currentPage - 1) * searchModel.PageSize + 1),
                                                                Math.Min(currentPage * searchModel.PageSize, totalRecords),
                                                                totalRecords
                                                                )
                            </div>

                            <nav aria-label="Pagination">
                                <ul class="pagination pagination-sm mb-0 shadow-sm rounded-3 overflow-hidden">
                                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                        <a class="page-link" @onclick="() => GoToPage(1)" title="@ActionsResources.First">
                                            <i class="fas fa-angle-double-left"></i>
                                        </a>
                                    </li>

                                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                        <a class="page-link" @onclick="() => GoToPage(currentPage - 1)">
                                            <i class="fas fa-angle-left"></i>
                                        </a>
                                    </li>

                                    @{
                                                                        const int maxVisiblePages = 5;
                                    int startPage = Math.Max(1, currentPage - 2);
                                    int endPage = Math.Min(totalPages, startPage + maxVisiblePages - 1);
                                    if (endPage - startPage + 1 < maxVisiblePages)
                                    {
                                        startPage = Math.Max(1, endPage - maxVisiblePages + 1);
                                    }
                                                                        }

                                    @if (startPage > 1)
                                    {
                                        <li class="page-item disabled"><span class="page-link">...</span></li>
                                    }

                                    @for (int pag = startPage; pag <= endPage; pag++)
                                    {
                                        int pageNumber = pag;
                                        <li class="page-item @(pag == currentPage ? "active" : "")">
                                            <a class="page-link fw-bold" @onclick="() => GoToPage(pageNumber)">@pag</a>
                                        </li>
                                    }

                                    @if (endPage < totalPages)
                                    {
                                        <li class="page-item disabled"><span class="page-link">...</span></li>
                                    }

                                    <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                                        <a class="page-link" @onclick="() => GoToPage(currentPage + 1)">
                                            <i class="fas fa-angle-right"></i>
                                        </a>
                                    </li>

                                    <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                                        <a class="page-link" @onclick="() => GoToPage(totalPages)" title="@ActionsResources.Last">
                                            <i class="fas fa-angle-double-right"></i>
                                        </a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>

                
                

                <!-- MOBILE VIEW -->
                <div class="d-md-none">
                    @if (items != null && items.Any())
                    {
                        @foreach (var order in items)
                        {
                            <div class="card border-0 shadow-sm rounded-3 mb-3">
                                <div class="card-body p-3">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div>
                                            <h6 class="fw-bold text-primary mb-1">🛒 @order.OrderNumber</h6>
                                            <p class="text-muted small mb-1">@order.CustomerName</p>
                                            <small class="text-muted">@order.OrderDate.ToString("dd/MM/yyyy hh:mm tt")</small>
                                        </div>
                                        <div>
                                            <button class="btn btn-primary btn-sm" @onclick="() => Edit(order)">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                        </div>
                                    </div>
                                    <hr class="my-2" />
                                    <div class="row small">
                                        <div class="col-6 mb-1">
                                            <strong>@ECommerceResources.OrderStatus:</strong>
                                            <br />
                                            <span class="@GetOrderStatusClass(order.OrderStatus)">
                                                @GetOrderStatusText(order.OrderStatus)
                                            </span>
                                        </div>
                                        <div class="col-6 mb-1">
                                            <strong>@ECommerceResources.PaymentStatus:</strong>
                                            <br />
                                            <span class="@GetPaymentStatusClass(order.PaymentStatus)">
                                                @GetPaymentStatusText(order.PaymentStatus)
                                            </span>
                                        </div>
                                        <div class="col-12 mt-2">
                                            <strong>@FormResources.Price:</strong>
                                            <span dir="ltr">$@order.TotalAmount.ToString("F2")</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-database text-muted" style="font-size: 60px;"></i>
                            <p class="text-muted mt-3">@NotifiAndAlertsResources.NoDataFound</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
