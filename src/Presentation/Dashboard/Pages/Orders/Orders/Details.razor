@page "/order/orders/{id:guid}"
@page "/orders/{id:guid}"

@attribute [Authorize(Roles = nameof(UserRole.Admin))]
@using Common.Enumerations
@using Common.Enumerations.Order
@using Common.Enumerations.Payment
@using Common.Enumerations.Shipping
@using Common.Enumerations.User
@using Dashboard.Pages.Base
@using Shared.DTOs.Order.OrderProcessing.AdminOrder
@inherits LocalizedComponentBase
@inject IJSRuntime JS

<PageTitle>@OrderResources.OrderDetails - #@Order.OrderNumber</PageTitle>

@if (IsLoading)
{
    <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">@GeneralResources.Loading...</span>
        </div>
        <p class="text-muted mt-2">@GeneralResources.Loading...</p>
    </div>
}
else
{
    <div class="container-fluid p-0">
        @* Header Card *@
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-header d-flex flex-wrap justify-content-between bg-primary align-items-center py-3 gap-3">
                <h4 class="modal-title text-white mb-0 d-flex align-items-center gap-2">
                    <i class="fas fa-shopping-cart"></i>
                    <span class="d-none d-md-inline">@OrderResources.OrderDetails - </span>
                    <span class="fw-bold">#@Order.OrderNumber</span>
                </h4>
                <button type="button" class="btn btn-light btn-sm" @onclick="NavigateToList">
                    <i class="fas fa-arrow-left me-1"></i>
                    @ActionsResources.Back
                </button>
            </div>

            @* Order Info Bar *@
            <div class="order-info-bar">
                <div class="info-item">
                    <div class="info-icon">
                        <i class="fas fa-hashtag"></i>
                    </div>
                    <div class="info-content">
                        <small class="info-label">@OrderResources.OrderNumber</small>
                        <strong class="info-value text-primary">@Order.OrderNumber</strong>
                    </div>
                </div>
                <div class="info-item">
                    <div class="info-icon">
                        <i class="fas fa-calendar"></i>
                    </div>
                    <div class="info-content">
                        <small class="info-label">@FormResources.Date</small>
                        <strong class="info-value">@Order.OrderDate.ToString("dd/MM/yyyy hh:mm tt")</strong>
                    </div>
                </div>
                <div class="info-item">
                    <div class="info-icon">
                        <i class="fas fa-tasks"></i>
                    </div>
                    <div class="info-content">
                        <small class="info-label">@OrderResources.Status</small>
                        <span class="badge bg-@GetOrderStatusBadgeClass(Order.OrderStatus) fs-6">
                            @GetOrderStatusText(Order.OrderStatus)
                        </span>
                    </div>
                </div>
                <div class="info-item">
                    <div class="info-icon">
                        <i class="fas fa-credit-card"></i>
                    </div>
                    <div class="info-content">
                        <small class="info-label">@OrderResources.PaymentStatus</small>
                        <span class="badge bg-@GetPaymentStatusClass(Order.PaymentStatus) fs-6">
                            @GetPaymentStatusText(Order.PaymentStatus)
                        </span>
                    </div>
                </div>
            </div>
        </div>

        @* Actions & Summary Section (Full Width at Top) *@
        <div class="row g-4 mb-4">
            @if (Order.OrderStatus != OrderProgressStatus.Cancelled)
            {
                @* Status Control Card *@
                <div class="col-lg-6">
                    <div class="card shadow-sm border-0 h-100">
                        <div class="card-header bg-gradient-warning text-white py-3">
                            <h5 class="mb-0 fw-bold d-flex align-items-center gap-2">
                                <i class="fas fa-cogs"></i>
                                @ActionsResources.Actions
                            </h5>
                        </div>
                        <div class="card-body">
                            @* Action Buttons *@
                            <div class="d-grid gap-2">
                                @if (CanMoveToNextStatus())
                                {
                                    <button class="btn btn-primary" @onclick="MoveToNextStatusAsync">
                                        <i class="@GetNextStatusButtonIcon() me-1"></i>
                                        @GetNextStatusButtonText()
                                    </button>
                                }

                                @if (Order.OrderStatus != OrderProgressStatus.Cancelled &&
                                                        Order.OrderStatus != OrderProgressStatus.Completed)
                                {
                                    <button class="btn btn-outline-danger" @onclick="CancelOrderAsync">
                                        <i class="fas fa-times me-1"></i>
                                        @OrderResources.CancelOrder
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }

            @* Order Summary Card *@
            <div class="col-lg-@(Order.OrderStatus != OrderProgressStatus.Cancelled ? "6" : "12")">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-header bg-gradient-secondary text-white py-3">
                        <h5 class="mb-0 fw-bold d-flex align-items-center gap-2">
                            <i class="fas fa-file-invoice-dollar"></i>
                            @OrderResources.OrderSummary
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="summary-row">
                            <span>@OrderResources.Subtotal:</span>
                            <strong dir="ltr">$@Order.SubTotal.ToString("F2")</strong>
                        </div>
                        @if (Order.DiscountAmount > 0)
                        {
                            <div class="summary-row text-success">
                                <span>@OrderResources.Discount:</span>
                                <strong dir="ltr">-$@Order.DiscountAmount.ToString("F2")</strong>
                            </div>
                        }
                        <div class="summary-row">
                            <span>@OrderResources.Tax:</span>
                            <strong dir="ltr">$@Order.TaxAmount.ToString("F2")</strong>
                        </div>
                        <div class="summary-row">
                            <span>@OrderResources.Shipping:</span>
                            <strong dir="ltr">$@Order.ShippingAmount.ToString("F2")</strong>
                        </div>
                        <div class="summary-total">
                            <span>@OrderResources.TotalAmount:</span>
                            <span dir="ltr">$@Order.TotalAmount.ToString("F2")</span>
                        </div>

                        @if (Order.Coupon != null)
                        {
                            <div class="mt-3 pt-3 border-top">
                                <small class="text-muted d-block mb-1">@OrderResources.CouponCode:</small>
                                <code class="coupon-code">@Order.Coupon.Code</code>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(Order.OrderNotes))
                        {
                            <div class="mt-3 pt-3 border-top">
                                <small class="text-muted d-block mb-1">@FormResources.Notes:</small>
                                <p class="small mb-0">@Order.OrderNotes</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        @* Tabs Section (Full Width) *@
        <div class="row">
            <div class="col-12">

                @* Tabs Navigation *@
                <ul class="nav nav-tabs nav-tabs-custom mb-0" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link @(ActiveTab == "customer" ? "active" : "")"
                                type="button"
                                @onclick='() => SetActiveTab("customer")'>
                            <i class="fas fa-user me-2"></i>
                            @OrderResources.CustomerInformation
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link @(ActiveTab == "items" ? "active" : "")"
                                type="button"
                                @onclick='() => SetActiveTab("items")'>
                            <i class="fas fa-box me-2"></i>
                            @OrderResources.OrderItems
                            <span class="badge bg-primary ms-1">@Order.Items.Count</span>
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link @(ActiveTab == "shipments" ? "active" : "")"
                                type="button"
                                @onclick='() => SetActiveTab("shipments")'>
                            <i class="fas fa-shipping-fast me-2"></i>
                            @OrderResources.Shipments
                            <span class="badge bg-info ms-1">@Order.Shipments.Count</span>
                        </button>
                    </li>
                </ul>

                @* Tabs Content *@
                <div class="tab-content-wrapper">

                    @* Customer Information Tab *@
                    @if (ActiveTab == "customer")
                    {
                        <div class="tab-pane-custom active">
                            <div class="card shadow-sm border-0 mb-4">
                                <div class="card-body">
                                    <div class="row g-3">
                                        <div class="col-md-6">
                                            <div class="info-box">
                                                <label class="text-muted small mb-1 d-flex align-items-center gap-1">
                                                    <i class="fas fa-user-circle text-primary"></i>
                                                    @OrderResources.CustomerName
                                                </label>
                                                <div class="fw-bold fs-5">@Order.Customer.CustomerFullName</div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="info-box">
                                                <label class="text-muted small mb-1 d-flex align-items-center gap-1">
                                                    <i class="fas fa-envelope text-primary"></i>
                                                    @FormResources.Email
                                                </label>
                                                <div class="fw-bold">
                                                    <a href="mailto:@Order.Customer.Email" class="text-decoration-none text-primary">
                                                        @Order.Customer.Email
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="info-box">
                                                <label class="text-muted small mb-1 d-flex align-items-center gap-1">
                                                    <i class="fas fa-phone text-primary"></i>
                                                    @FormResources.PhoneNumber
                                                </label>
                                                <div class="fw-bold">
                                                    <a href="tel:@(Order.Customer.PhoneCode + Order.Customer.Phone)" class="text-decoration-none text-primary">
                                                        @Order.Customer.PhoneCode @Order.Customer.Phone
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            @* Shipping Address Card *@
                            <div class="card shadow-sm border-0 mb-4">
                                <div class="card-header bg-gradient-info text-white py-3">
                                    <h5 class="mb-0 fw-bold d-flex align-items-center gap-2">
                                        <i class="fas fa-map-marker-alt"></i>
                                        @OrderResources.ShippingInformation
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div class="row g-3">
                                        <div class="col-12">
                                            <div class="info-box">
                                                <label class="text-muted small mb-1 d-flex align-items-center gap-1">
                                                    <i class="fas fa-user text-info"></i>
                                                    @OrderResources.RecipientName
                                                </label>
                                                <div class="fw-bold">@Order.DeliveryAddress.RecipientName</div>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="info-box">
                                                <label class="text-muted small mb-1 d-flex align-items-center gap-1">
                                                    <i class="fas fa-location-arrow text-info"></i>
                                                    @FormResources.Address
                                                </label>
                                                <div class="fw-bold">@Order.DeliveryAddress.Address</div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="info-box">
                                                <label class="text-muted small mb-1">@FormResources.City</label>
                                                <div class="fw-bold">@Order.DeliveryAddress.CityNameEn</div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="info-box">
                                                <label class="text-muted small mb-1">@FormResources.State</label>
                                                <div class="fw-bold">@Order.DeliveryAddress.StateNameEn</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            @* Payment Info Card *@
                            @if (Order.PaymentInfo != null)
                            {
                                <div class="card shadow-sm border-0 mb-4">
                                    <div class="card-header bg-gradient-warning text-white py-3">
                                        <h5 class="mb-0 fw-bold d-flex align-items-center gap-2">
                                            <i class="fas fa-credit-card"></i>
                                            @OrderResources.PaymentInformation
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="row g-3">
                                            <div class="col-md-6">
                                                <label class="text-muted small">@OrderResources.PaymentMethod:</label>
                                                <div class="fw-bold">@Order.PaymentInfo.PaymentMethod</div>
                                            </div>
                                            <div class="col-md-6">
                                                <label class="text-muted small">@OrderResources.TransactionId:</label>
                                                <code>@Order.PaymentInfo.TransactionId</code>
                                            </div>
                                            @if (Order.PaymentInfo.PaymentDate.HasValue)
                                            {
                                                <div class="col-md-6">
                                                    <label class="text-muted small">@OrderResources.PaymentDate:</label>
                                                    <div>@Order.PaymentInfo.PaymentDate.Value.ToString("dd/MM/yyyy hh:mm tt")</div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }

                    @* Order Items Tab *@
                    @if (ActiveTab == "items")
                    {
                        <div class="tab-pane-custom active">
                            <div class="card shadow-sm border-0 mb-4">
                                <div class="card-body p-0">
                                    @if (Order.Items.Any())
                                    {
                                        <div class="table-responsive">
                                            <table class="table table-hover mb-0">
                                                <thead class="table-light">
                                                    <tr>
                                                        <th class="text-center" style="width: 80px;">@FormResources.Image</th>
                                                        <th>@OrderResources.Item</th>
                                                        <th class="text-center">@OrderResources.Vendor</th>
                                                        <th class="text-center">@OrderResources.Quantity</th>
                                                        <th class="text-end">@FormResources.Price</th>
                                                        <th class="text-end">@OrderResources.Subtotal</th>
                                                        <th class="text-center">@OrderResources.Status</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in Order.Items)
                                                    {
                                                        <tr>
                                                            <td class="text-center">
                                                                @if (!string.IsNullOrEmpty(item.ItemImage))
                                                                {
                                                                    <img src="@($"{BaseUrl}/{item.ItemImage}")"
                                                                         alt="@item.ItemName"
                                                                         class="rounded"
                                                                         style="width: 50px; height: 50px; object-fit: cover;" />
                                                                }
                                                                else
                                                                {
                                                                    <div class="bg-light rounded d-flex align-items-center justify-content-center"
                                                                         style="width: 50px; height: 50px;">
                                                                        <i class="fas fa-image text-muted"></i>
                                                                    </div>
                                                                }
                                                            </td>
                                                            <td>
                                                                <div class="fw-bold">@item.ItemName</div>
                                                                <small class="text-muted">@item.VendorName</small>
                                                            </td>
                                                            <td class="text-center">
                                                                <span class="badge bg-info">@item.VendorName</span>
                                                            </td>
                                                            <td class="text-center">
                                                                <span class="badge bg-secondary fs-6">@item.Quantity</span>
                                                            </td>
                                                            <td class="text-end">
                                                                <span dir="ltr">$@item.UnitPrice.ToString("F2")</span>
                                                            </td>
                                                            <td class="text-end fw-bold">
                                                                <span dir="ltr">$@item.SubTotal.ToString("F2")</span>
                                                            </td>
                                                            <td class="text-center">
                                                                <span class="@GetShipmentStatusBadgeClass(item.ShipmentStatus)">
                                                                    @GetShipmentStatusText(item.ShipmentStatus)
                                                                </span>
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                                <tfoot class="table-light">
                                                    <tr>
                                                        <td colspan="5" class="text-end fw-bold">@OrderResources.Subtotal:</td>
                                                        <td class="text-end fw-bold" dir="ltr">$@Order.SubTotal.ToString("F2")</td>
                                                        <td></td>
                                                    </tr>
                                                    @if (Order.DiscountAmount > 0)
                                                    {
                                                        <tr>
                                                            <td colspan="5" class="text-end fw-bold text-success">@OrderResources.Discount:</td>
                                                            <td class="text-end fw-bold text-success" dir="ltr">-$@Order.DiscountAmount.ToString("F2")</td>
                                                            <td></td>
                                                        </tr>
                                                    }
                                                    <tr>
                                                        <td colspan="5" class="text-end fw-bold">@OrderResources.Tax:</td>
                                                        <td class="text-end fw-bold" dir="ltr">$@Order.TaxAmount.ToString("F2")</td>
                                                        <td></td>
                                                    </tr>
                                                    <tr>
                                                        <td colspan="5" class="text-end fw-bold">@OrderResources.Shipping:</td>
                                                        <td class="text-end fw-bold" dir="ltr">$@Order.ShippingAmount.ToString("F2")</td>
                                                        <td></td>
                                                    </tr>
                                                    <tr class="table-primary">
                                                        <td colspan="5" class="text-end fw-bold fs-5">@OrderResources.TotalAmount:</td>
                                                        <td class="text-end fw-bold fs-5 text-primary" dir="ltr">$@Order.TotalAmount.ToString("F2")</td>
                                                        <td></td>
                                                    </tr>
                                                </tfoot>
                                            </table>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="text-center py-5">
                                            <i class="fas fa-box-open text-muted" style="font-size: 48px;"></i>
                                            <p class="text-muted mt-3">@NotifiAndAlertsResources.NoDataFound</p>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }

                    @* Shipments Tab *@
                    @if (ActiveTab == "shipments")
                    {
                        <div class="tab-pane-custom active">
                            @if (Order.Shipments.Any())
                            {
                                @* Shipment Cards View *@
                                <div class="row g-3">
                                    @foreach (var shipment in Order.Shipments)
                                    {
                                        <div class="col-12">
                                            <div class="card shadow-sm border-0 shipment-card">
                                                <div class="card-body">
                                                    <div class="row align-items-center g-3">
                                                        @* Shipment Number & ID *@
                                                        <div class="col-lg-3 col-md-6">
                                                            <div class="shipment-info-section">
                                                                <label class="text-muted small mb-1 d-flex align-items-center gap-1">
                                                                    <i class="fas fa-hashtag text-primary"></i>
                                                                    @OrderResources.ShipmentNumber
                                                                </label>
                                                                <div class="fw-bold text-primary mb-1">@shipment.ShipmentNumber</div>
                                                            </div>
                                                        </div>

                                                        @* Status *@
                                                        <div class="col-lg-2 col-md-6">
                                                            <div class="shipment-info-section">
                                                                <label class="text-muted small mb-1 d-flex align-items-center gap-1">
                                                                    <i class="fas fa-info-circle text-primary"></i>
                                                                    @OrderResources.Status
                                                                </label>
                                                                <span class="@GetShipmentStatusBadgeClass(shipment.Status)">
                                                                    @GetShipmentStatusText(shipment.Status)
                                                                </span>
                                                            </div>
                                                        </div>

                                                        @* Tracking Number *@
                                                        <div class="col-lg-2 col-md-6">
                                                            <div class="shipment-info-section">
                                                                <label class="text-muted small mb-1 d-flex align-items-center gap-1">
                                                                    <i class="fas fa-barcode text-primary"></i>
                                                                    @OrderResources.Tracking
                                                                </label>
                                                                @if (!string.IsNullOrWhiteSpace(shipment.TrackingNumber))
                                                                {
                                                                    <code class="tracking-code">@shipment.TrackingNumber</code>
                                                                }
                                                                else
                                                                {
                                                                    <span class="text-muted small">@OrderResources.NotAddedYet</span>
                                                                }
                                                            </div>
                                                        </div>

                                                        @* Estimated Delivery *@
                                                        <div class="col-lg-2 col-md-6">
                                                            <div class="shipment-info-section">
                                                                <label class="text-muted small mb-1 d-flex align-items-center gap-1">
                                                                    <i class="fas fa-calendar-alt text-primary"></i>
                                                                    @OrderResources.ETA
                                                                </label>
                                                                @if (shipment.EstimatedDeliveryDate.HasValue)
                                                                {
                                                                    <div class="small fw-bold">@FormatDate(shipment.EstimatedDeliveryDate)</div>
                                                                }
                                                                else
                                                                {
                                                                    <span class="text-muted small">@OrderResources.NotSpecified</span>
                                                                }
                                                            </div>
                                                        </div>

                                                        @* Actions *@
                                                        <div class="col-lg-3 col-md-12">
                                                            <div class="shipment-info-section">
                                                                <label class="text-muted small mb-1 d-flex align-items-center gap-1">
                                                                    <i class="fas fa-cogs text-primary"></i>
                                                                    @ActionsResources.Actions
                                                                </label>
                                                                <div class="d-flex gap-2 flex-wrap">
                                                                    @* Primary Action Button *@
                                                                    @if (CanShipmentMoveNext(shipment))
                                                                    {
                                                                        <button class="btn btn-sm @GetShipmentActionButtonClass(shipment)"
                                                                                @onclick="() => MoveShipmentToNextStatusAsync(shipment.ShipmentId)"
                                                                                disabled="@(ShipmentUpdatingId == shipment.ShipmentId)"
                                                                                title="@GetShipmentNextAction(shipment)">
                                                                            @if (ShipmentUpdatingId == shipment.ShipmentId)
                                                                            {
                                                                                <span class="spinner-border spinner-border-sm me-1"></span>
                                                                                <span>@OrderResources.Updating</span>
                                                                            }
                                                                            else
                                                                            {
                                                                                <i class="@GetShipmentActionIcon(shipment) me-1"></i>
                                                                                <span>@GetShipmentNextAction(shipment)</span>
                                                                            }
                                                                        </button>
                                                                    }

                                                                    @* Cancel Shipment Button - Direct *@
                                                                    @if (CanCancelShipment(shipment))
                                                                    {
                                                                        <button class="btn btn-sm btn-danger"
                                                                                @onclick="() => CancelShipmentAsync(shipment.ShipmentId)"
                                                                                disabled="@(ShipmentUpdatingId == shipment.ShipmentId)"
                                                                                title="@OrderResources.CancelShipment">
                                                                            @if (ShipmentUpdatingId == shipment.ShipmentId)
                                                                            {
                                                                                <span class="spinner-border spinner-border-sm me-1"></span>
                                                                            }
                                                                            else
                                                                            {
                                                                                <i class="fas fa-times me-1"></i>
                                                                            }
                                                                            <span class="d-none d-lg-inline">@OrderResources.Cancel</span>
                                                                        </button>
                                                                    }

                                                                    @* Mark Delivery Failed - Dropdown *@
                                                                    @if (CanMarkDeliveryFailed(shipment))
                                                                    {
                                                                        <div class="dropdown">
                                                                            <button class="btn btn-sm btn-outline-warning"
                                                                                    type="button"
                                                                                    @onclick="() => ToggleDropdown(shipment.ShipmentId)"
                                                                                    disabled="@(ShipmentUpdatingId == shipment.ShipmentId)">
                                                                                <i class="fas fa-ellipsis-v"></i>
                                                                            </button>
                                                                            @if (OpenDropdownId == shipment.ShipmentId)
                                                                            {
                                                                                <ul class="dropdown-menu dropdown-menu-end show">
                                                                                    <li>
                                                                                        <a class="dropdown-item text-warning"
                                                                                           @onclick="() => { MarkShipmentDeliveryFailedAsync(shipment.ShipmentId); CloseDropdown(); }"
                                                                                           href="javascript:void(0)">
                                                                                            <i class="fas fa-exclamation-triangle me-2"></i>
                                                                                            @OrderResources.MarkDeliveryFailed
                                                                                        </a>
                                                                                    </li>
                                                                                </ul>
                                                                            }
                                                                        </div>
                                                                    }
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>

                                                    @* Delivered Date (if exists) *@
                                                    @if (shipment.ActualDeliveryDate.HasValue)
                                                    {
                                                        <div class="row mt-3 pt-3 border-top">
                                                            <div class="col-12">
                                                                <div class="alert alert-success mb-0 py-2">
                                                                    <i class="fas fa-check-circle me-2"></i>
                                                                    <strong>@OrderResources.DeliveredSuccessfullyOn:</strong>
                                                                    <span class="ms-2">@FormatDate(shipment.ActualDeliveryDate)</span>
                                                                </div>
                                                            </div>
