@page "/WithdrawalMethods"
@using Common.Enumerations.User
@inherits LocalizedComponentBase
@attribute [Authorize(Roles = nameof(UserRole.Admin))]

<div class="container-fluid p-0">
	<div class="card shadow-sm border-0">
		<div class="card-header bg-primary text-white py-3 d-flex justify-content-between align-items-center">
            <h5 class="mb-0 fw-semibold text-white">💳 @GeneralResources.WithdrawalMethods</h5>
		</div>
         
        <div class="d-flex mt-4 ms-3 me-3 @(ResourceManager.CurrentLanguage == Language.Arabic ? "justify-content-end" : "justify-content-start") gap-2">
            <button class="btn btn-success  px-3 shadow-sm" @onclick="Add">
                <i class="feather icon-plus-circle "></i>
                <span class="fw-bold">@ActionsResources.Add</span>
            </button>
        </div>

        <div class="card-body p-4">
            <div class="row g-4">
                @if (withdrawalMethods != null && withdrawalMethods.Count() > 0)
                {
                    @foreach (var item in withdrawalMethods)
                    {
                        <div class="col-12">
                            <div class="card rounded-3 h-100 pt-3 pb-3">
                                <!-- Balanced vertical padding -->
                                <div class="card-body p-3">
                                    <!-- Added card-body with consistent padding -->
                                    <div class="row g-3 align-items-center">
                                        <!-- Reduced gutter size -->
                                        <!-- Image Column -->
                                        <div class="col-12 col-md-4 col-lg-3 col-xl-2">
                                            <div class="d-flex justify-content-center align-items-center bg-light rounded-3 p-2" style="min-height: 120px;">
                                                <img src="@baseUrl/@item.ImagePath"
                                                     alt="@item.Title"
                                                     class="img-fluid rounded-2 w-100 h-auto"
                                                     style="max-height: 100px; object-fit: contain;" />
                                            </div>
                                        </div>

                                        <!-- Title Column -->
                                        <div class="col-12 col-md-5 col-lg-6 col-xl-7 ps-md-4">
                                            <!-- Added left padding on medium+ -->
                                            <h2 class="fw-bold mb-0 fs-5 fs-md-4">
                                                <!-- Responsive font size -->
                                                @item.Title
                                            </h2>
                                        </div>

                                        <!-- Actions Column -->
                                        <div class="col-12 col-md-3 col-lg-3 col-xl-3">
                                            <div class="d-flex flex-column flex-md-row gap-2 justify-content-center justify-content-md-end">
                                                <button class="btn btn-primary flex-grow-1 flex-md-grow-0"
                                                        @onclick="() => Edit(item)">
                                                    @ActionsResources.Edit
                                                </button>
                                                <button class="btn btn-danger flex-grow-1 flex-md-grow-0"
                                                        @onclick="() => Delete(item.Id)">
                                                    @ActionsResources.Delete
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12">
                        <div class="alert alert-info">
                            @ECommerceResources.NoWithdrawalMethodsAvailable
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>