@page "/inventory/movements"

@using Common.Enumerations.User
@using Resources
@using Resources.Enumerations
@using Shared.DTOs.Inventory
@attribute [Authorize(Roles = nameof(UserRole.Admin))]
@inherits BaseListPage<MoitemDto>

<PageTitle>Inventory Movements</PageTitle>

<div class="container-fluid p-0">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white py-3 d-flex justify-content-between align-items-center">
            <h5 class="mb-0 fw-semibold text-white">?? Inventory Movements</h5>
        </div>
        <div class="card-body mobil-stylest">
            <div class="dt-responsive table-responsive">
                <ul class="navbar-nav d-flex flex-row align-items-center gap-3 mb-2 px-0 w-100">
                    <li class="nav-item col-md-6 w-auto d-flex flex-row align-items-center gap-3">
                        <EditForm Model="searchModel" OnSubmit="@Search">
                            <div class="input-group rounded search-box">
                                <input type="text" @bind="searchModel.SearchTerm"
                                       class="form-control text-center border-0"
                                       placeholder="@ActionsResources.Search" />
                                <button type="submit" class="btn btn-danger d-flex align-items-center justify-content-center border-0">
                                    <i class="fas fa-search text-white m-0"></i>
                                </button>
                            </div>
                        </EditForm>

                        <div class="d-flex align-items-center gap-2">
                            <select class="form-select rounded-3 shadow-sm border-light text-primary fw-bold text-center"
                                    style="width: 130px;" @onchange="OnPageSizeChanged">
                                <option value="10" selected="@(searchModel.PageSize == 10)">10</option>
                                <option value="15" selected="@(searchModel.PageSize == 15)">15</option>
                                <option value="20" selected="@(searchModel.PageSize == 20)">20</option>
                            </select>
                        </div>

                        <div class="d-flex align-items-center gap-2">
                            <select class="form-select rounded-3 shadow-sm border-light text-primary fw-bold text-center"
                                    style="width: 200px;" @onchange="OnFilterChanged">
                                <option value="">All Movements</option>
                                <option value="IN">Incoming</option>
                                <option value="OUT">Outgoing</option>
                                <option value="TRANSFER">Transfer</option>
                            </select>
                        </div>
                    </li>
                    <li class="nav-item ms-auto d-flex flex-row align-items-center gap-2">
                        <div class="dropdown">
                            <button class="btn btn-info" type="button" data-bs-toggle="dropdown">
                                <i class="fas fa-file-export mx-1"></i>
                                <span class="fw-bold">@ActionsResources.Export</span>
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="javascript:void(0)" @onclick="ExportToExcel"><i class="far fa-file-excel mx-1"></i>Excel</a></li>
                                <li><a class="dropdown-item" href="javascript:void(0)" @onclick="ExportToPrint"><i class="fas fa-print mx-1"></i>Print</a></li>
                            </ul>
                        </div>
                        <button class="btn btn-success" @onclick="Add">
                            <i class="feather icon-plus-circle"></i>
                            <span class="fw-bold">@ActionsResources.Add</span>
                        </button>
                    </li>
                </ul>

                <div class="d-none d-md-block">
                    <div class="table-responsive dt-responsived table-container border rounded-3">
                        <table class="table table-striped table-hover mb-0 align-text-center">
                            <thead class="bg-light">
                                <tr>
                                    <th class="text-center align-middle">#</th>
                                    <th class="text-center align-middle">Document Number</th>
                                    <th class="text-center align-middle">Date</th>
                                    <th class="text-center align-middle">Type</th>
                                    <th class="text-center align-middle">Total Amount</th>
                                    <th class="text-center align-middle">Notes</th>
                                    <th class="text-center align-middle">@ECommerceResources.Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (items != null && items.Any())
                                {
                                    int i = (currentPage - 1) * searchModel.PageSize;
                                    @foreach (var item in items)
                                    {
                                        <tr>
                                            <td class="text-center align-middle">@(++i)</td>
                                            <td class="text-center align-middle">
                                                <strong>@item.DocumentNumber</strong>
                                            </td>
                                            <td class="text-center align-middle">
                                                @item.DocumentDate.ToString("dd/MM/yyyy")
                                            </td>
                                            <td class="text-center align-middle">
                                                <span class="badge bg-@GetMovementTypeClass(item.MovementType)">
                                                    @item.MovementType
                                                </span>
                                            </td>
                                            <td class="text-center align-middle">
                                                <strong>@item.TotalAmount.ToString("N2")</strong>
                                            </td>
                                            <td class="text-center align-middle">
                                                @(string.IsNullOrEmpty(item.Notes) ? "-" : item.Notes)
                                            </td>
                                            <td class="d-flex gap-1 justify-content-center align-items-center">
                                                <button class="btn btn-primary btn-sm mx-1" @onclick="() => Edit(item)">
                                                    <i class="feather icon-edit me-2"></i>
                                                    <span>@ActionsResources.Edit</span>
                                                </button>
                                                <button class="btn btn-danger btn-sm mx-1" @onclick="() => Delete(item.Id)">
                                                    <i class="feather icon-trash-2 me-2"></i>
                                                    <span>@ActionsResources.Delete</span>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="7" class="no-data-container p-0">
                                            <div class="d-flex flex-column justify-content-center align-items-center text-center" style="height: 52vh;">
                                                <i class="fas fa-boxes text-muted" style="font-size: 60px;"></i>
                                                <p class="text-muted mt-3" style="font-size: 18px;">No movements found</p>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Mobile Cards -->
                <div class="d-block d-md-none mt-3">
                    @if (items != null && items.Any())
                    {
                        foreach (var item in items)
                        {
                            <div class="card shadow-sm mb-3 border-0">
                                <div class="card-body">
                                    <h5 class="fw-bold">@item.DocumentNumber</h5>
                                    <p class="mb-2">
                                        <i class="fas fa-calendar text-primary me-2"></i>
                                        @item.DocumentDate.ToString("dd/MM/yyyy")
                                    </p>
                                    <p class="mb-2">
                                        <span class="badge bg-@GetMovementTypeClass(item.MovementType)">
                                            @item.MovementType
                                        </span>
                                    </p>
                                    <p class="mb-2">
                                        <i class="fas fa-dollar-sign text-success me-2"></i>
                                        @item.TotalAmount.ToString("N2")
                                    </p>
                                    <hr />
                                    <div class="d-flex gap-2">
                                        <button class="btn btn-primary w-100" @onclick="() => Edit(item)">
                                            <i class="feather icon-edit me-1"></i>@ActionsResources.Edit
                                        </button>
                                        <button class="btn btn-danger w-100" @onclick="() => Delete(item.Id)">
                                            <i class="feather icon-trash me-1"></i>@ActionsResources.Delete
                                        </button>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>

                <!-- Pagination (same as warehouse) -->
                <div class="pagination-wrapper d-flex flex-column justify-content-end flex-grow-1">
                    <div class="d-flex flex-wrap align-items-center justify-content-between gap-3 mt-4 pagination-container" dir="ltr">
                        <div class="text-muted small">
                            @string.Format(ActionsResources.ShowingEntries, StartRecord, EndRecord, totalRecords)
                        </div>
                        <nav aria-label="Pagination">
                            <ul class="pagination pagination-sm mb-0 shadow-sm rounded-3 overflow-hidden">
                                <li class="page-item @(!CanGoToPreviousPage ? "disabled" : "")">
                                    <a class="page-link" @onclick="() => GoToPage(1)"><i class="fas fa-angle-double-left"></i></a>
                                </li>
                                <li class="page-item @(!CanGoToPreviousPage ? "disabled" : "")">
                                    <a class="page-link" @onclick="() => GoToPage(currentPage - 1)"><i class="fas fa-angle-left"></i></a>
                                </li>
                                @for (int pag = 1; pag <= totalPages && pag <= 5; pag++)
                                {
                                    int pageNumber = pag;
                                    <li class="page-item @(pag == currentPage ? "active" : "")">
                                        <a class="page-link fw-bold" @onclick="() => GoToPage(pageNumber)">@pag</a>
                                    </li>
                                }
                                <li class="page-item @(!CanGoToNextPage ? "disabled" : "")">
                                    <a class="page-link" @onclick="() => GoToPage(currentPage + 1)"><i class="fas fa-angle-right"></i></a>
                                </li>
                                <li class="page-item @(!CanGoToNextPage ? "disabled" : "")">
                                    <a class="page-link" @onclick="() => GoToPage(totalPages)"><i class="fas fa-angle-double-right"></i></a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private string GetMovementTypeClass(string type)
    {
        return type switch
        {
            "IN" => "success",
            "OUT" => "danger",
            "TRANSFER" => "warning",
            _ => "secondary"
        };
    }
}
