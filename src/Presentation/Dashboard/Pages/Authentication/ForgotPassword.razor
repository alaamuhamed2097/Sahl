@page "/forgot-password"
@page "/authentication/forgot-password"

<PageTitle>@UserResources.ForgetPasswordTitle</PageTitle>
@if (ResourceManager.CurrentLanguage == Language.Arabic)
{
    <style>
        .checkbox input[type=checkbox] + .cr:before {
            margin-right: 0 !important;
            margin-left: 10px !important;
        }
    </style>
}
<div class="auth-wrapper" dir="@(ResourceManager.CurrentLanguage == Language.Arabic ? "rtl" : "ltr")">
    <div class="auth-content container">
        <div class="card">
            <div class="row align-items-center">
                <div class="col-md-6 d-none d-md-block">
                    <img src="assets/images/auth/Login.svg" alt="Forgot Password" class="img-fluid" />
                </div>
                <div class="col-md-6">
                    <div class="card-body">
                        <div class="d-flex justify-content-center">
                            <img src="assets/images/logo-dark.svg" alt="logo" class="img-fluid mb-4" />
                        </div>
                        <h4 class="mb-3 f-w-400 text-center">
                            @UserResources.ForgetPasswordTitle <span class="text-c-blue">@ECommerceResources.AdminTitle</span>
                        </h4>
                        <EditForm Model="_model" OnValidSubmit="HandleValidSubmit">
                            <DataAnnotationsValidator />
                            <div class="form-group mb-3">
                                <label class="form-label">@FormResources.Email</label>
                                <InputText type="email" class="form-control" placeholder="@UserResources.EmailOrUsernamePlaceholder" @bind-Value="_model.Identifier" />
                                <ValidationMessage For="@(() => _model.Identifier)" />
                            </div>
                            <button type="submit" class="btn btn-primary d-block mb-4 btf w-100 text-center" disabled="@_isSubmitting">
                                @if (_isSubmitting)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                }
                                else
                                {
                                    @UserResources.SendResetCodeButton
                                }
                            </button>
                            @if (!string.IsNullOrEmpty(_errorMessage))
                            {
                                <div class="alert alert-danger mt-2">@_errorMessage</div>
                            }
                            @if (!string.IsNullOrEmpty(_successMessage))
                            {
                                <div class="alert alert-success mt-2">@_successMessage</div>
                            }
                        </EditForm>
                        <div class="d-flex justify-content-end mt-2">
                            <a href="/login" class="btn btn-link p-0 text-decoration-none">@UserResources.BackToLogin</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
