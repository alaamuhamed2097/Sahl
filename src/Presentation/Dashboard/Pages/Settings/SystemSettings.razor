@page "/system-settings"
@using Common.Enumerations.User
@using Microsoft.AspNetCore.Authorization
@using Resources
@using Shared.DTOs.Setting
@inherits LocalizedComponentBase
@attribute [Authorize(Roles = nameof(UserRole.Admin))]

<PageTitle>@GeneralResources.SystemSettings</PageTitle>

<div class="container-fluid p-0">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary py-3 d-flex justify-content-between align-items-center">
            <h5 class="mb-0 fw-semibold text-white">⚙️ @GeneralResources.SystemSettings</h5>
            <div class="d-flex gap-2">
                <button type="button" class="btn btn-outline-secondary text-white" @onclick="ResetToDefaults" disabled="@IsSaving">
                    <i class="fas fa-undo me-2"></i>
                    @GeneralResources.ResetToDefaults
                </button>
                <button type="submit" form="systemSettingsForm" class="btn btn-success" disabled="@IsSaving">
                    @if (IsSaving)
                    {
                        <span class="spinner-border spinner-border-sm me-2"></span>
                        @GeneralResources.Saving
                    }
                    else
                    {
                        <i class="fas fa-save me-2"></i>
                        @ActionsResources.Save
                    }
                </button>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(ErrorMessage))
        {
            <div class="alert alert-danger mx-3 mt-3">
                <i class="fas fa-exclamation-triangle me-2"></i>
                @ErrorMessage
            </div>
        }

        @if (!string.IsNullOrEmpty(SuccessMessage))
        {
            <div class="alert alert-success mx-3 mt-3">
                <i class="fas fa-check-circle me-2"></i>
                @SuccessMessage
            </div>
        }

        @if (IsLoading)
        {
            <div class="card-body text-center">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">@GeneralResources.Loading...</span>
                </div>
                <p class="mt-3">@GeneralResources.LoadingSettings</p>
            </div>
        }
        else
        {
            <EditForm Model="@Model" id="systemSettingsForm" OnValidSubmit="SaveSettings">
                <DataAnnotationsValidator />

                <div class="card-body">
                    <!-- Navigation Tabs -->
                    <ul class="nav nav-tabs mb-4" id="systemSettingsTabs" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="@GetTabClass("tax")" @onclick='() => SetActiveTab("tax")' type="button">
                                <i class="fas fa-file-invoice-dollar me-2"></i>
                                @GeneralResources.TaxSettings
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="@GetTabClass("refund")" @onclick='() => SetActiveTab("refund")' type="button">
                                <i class="fas fa-file-invoice-dollar me-2"></i>
                                @GeneralResources.Refund
                            </button>
                        </li>
                       
                        @* <li class="nav-item" role="presentation">
                            <button class="@GetTabClass("order")" @onclick='() => SetActiveTab("order")' type="button">
                                <i class="fas fa-shopping-cart me-2"></i>
                                @GeneralResources.OrderSettings
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="@GetTabClass("payment")" @onclick='() => SetActiveTab("payment")' type="button">
                                <i class="fas fa-credit-card me-2"></i>
                                @GeneralResources.PaymentSettings
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="@GetTabClass("business")" @onclick='() => SetActiveTab("business")' type="button">
                                <i class="fas fa-briefcase me-2"></i>
                                @GeneralResources.BusinessSettings
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="@GetTabClass("notification")" @onclick='() => SetActiveTab("notification")' type="button">
                                <i class="fas fa-bell me-2"></i>
                                @GeneralResources.NotificationSettings
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="@GetTabClass("security")" @onclick='() => SetActiveTab("security")' type="button">
                                <i class="fas fa-shield-alt me-2"></i>
                                @GeneralResources.SecuritySettings
                            </button>
                        </li> *@
                    </ul>

                    <!-- Tab Content -->
                    <div class="">
                        <!-- Tax Settings Tab -->
                        <div class="@($"tab-pane {(ActiveTab == "tax" ? "show active" : "")}")" id="tax">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="card border-0 bg-light">
                                        <div class="card-header bg-transparent">
                                            <h6 class="mb-0">
                                                <i class="fas fa-percentage me-2"></i>
                                                @ECommerceResources.OrderTaxAmount
                                            </h6>
                                        </div>
                                        <div class="card-body">
                                            <div class="form-group mb-3">
                                                <label class="form-label">@ECommerceResources.OrderTaxAmount</label>
                                                <div class="input-group">
                                                    <span class="input-group-text"><i class="fas fa-percentage"></i></span>
                                                    <InputNumber class="form-control" @bind-Value="Model.OrderTaxPercentage" min="0" max="100" step="0.1" />
                                                    <span class="input-group-text">%</span>
                                                </div>
                                                <ValidationMessage For="@(() => Model.OrderTaxPercentage)" />
                                                <small class="form-text text-muted">@GeneralResources.OrderTaxPercentageHelpText</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="card border-0 bg-light">
                                        <div class="card-header bg-transparent">
                                            <h6 class="mb-0">
                                                <i class="fas fa-toggle-on me-2"></i>
                                                @GeneralResources.TaxIncludedInPrice
                                            </h6>
                                        </div>
                                        <div class="card-body">
                                            <div class="form-group mb-3">
                                                <div class="form-check form-switch">
                                                    <InputCheckbox class="form-check-input" @bind-Value="Model.TaxIncludedInPrice" id="taxIncluded" />
                                                    <label class="form-check-label" for="taxIncluded">
                                                        @GeneralResources.TaxIncludedInPrice
                                                    </label>
                                                </div>
                                                <small class="form-text text-muted">@GeneralResources.TaxIncludedHelpText</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Refund Settings Tab -->
                        <div class="@($"tab-pane {(ActiveTab == "refund" ? "show active" : "")}")" id="refund">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="card border-0 bg-light">
                                        <div class="card-header bg-transparent">
                                            <h6 class="mb-0">
                                                 <i class="fas fa-percentage me-2"></i> 
                                                RefundAllowedDays
                                            </h6>
                                        </div>
                                        <div class="card-body">
                                            <div class="form-group mb-3">
                                                <label class="form-label">RefundAllowedDays</label>
                                                <div class="input-group">
                                                    <span class="input-group-text">
                                                         <i class="fas fa-percentage"></i> 
                                                        </span>
                                                    <InputNumber class="form-control" @bind-Value="Model.RefundAllowedDays" min="0" max="100" step="0.1" />
                                                     <span class="input-group-text">%</span> 
                                                </div>
                                                <ValidationMessage For="@(() => Model.RefundAllowedDays)" />
                                                <small class="form-text text-muted">RefundAllowedDays</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                @* <div class="col-md-6">
                                    <div class="card border-0 bg-light">
                                        <div class="card-header bg-transparent">
                                            <h6 class="mb-0">
                                                <i class="fas fa-toggle-on me-2"></i>
                                                @GeneralResources.TaxIncludedInPrice
                                            </h6>
                                        </div>
                                        <div class="card-body">
                                            <div class="form-group mb-3">
                                                <div class="form-check form-switch">
                                                    <InputCheckbox class="form-check-input" @bind-Value="Model.TaxIncludedInPrice" id="taxIncluded" />
                                                    <label class="form-check-label" for="taxIncluded">
                                                        @GeneralResources.TaxIncludedInPrice
                                                    </label>
                                                </div>
                                                <small class="form-text text-muted">@GeneralResources.TaxIncludedHelpText</small>
                                            </div>
                                        </div>
                                    </div>
                                </div> *@
                            </div>
                        </div>
                       
            
            </div>
          </div>
                </EditForm>
         
       }
    </div>
</div>

<style>
    .nav-tabs .nav-link {
        border-radius: 0.5rem 0.5rem 0 0;
        border: 1px solid transparent;
        margin-right: 2px;
        position: relative;
    }

        .nav-tabs .nav-link.active {
            background-color: #f8f9fa;
            border-color: #dee2e6 #dee2e6 #f8f9fa;
        }

    .form-check-input:checked {
        background-color: #198754;
        border-color: #198754;
    }

    .card {
        transition: all 0.3s ease;
    }

        .card:hover {
            box-shadow: 0 0.125rem 0.5rem rgba(0, 0, 0, 0.1);
        }
</style>