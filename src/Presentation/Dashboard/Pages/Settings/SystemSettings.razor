@page "/system-settings"
@using Common.Enumerations.User
@using Microsoft.AspNetCore.Authorization
@using Resources
@using Shared.DTOs.Setting

@inherits LocalizedComponentBase
@attribute [Authorize(Roles = nameof(UserRole.Admin))]

<PageTitle>@GeneralResources.SystemSettings</PageTitle>

<div class="container-fluid p-0">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary py-3 d-flex justify-content-between align-items-center">
            <h5 class="mb-0 fw-semibold text-white">⚙️ @GeneralResources.SystemSettings</h5>
            <div class="d-flex gap-2">
                <button type="button" class="btn btn-outline-secondary text-white" @onclick="ResetToDefaults" disabled="@IsSaving">
                    <i class="fas fa-undo me-2"></i>
                    @GeneralResources.ResetToDefaults
                </button>
                <button type="submit" form="systemSettingsForm" class="btn btn-success" disabled="@IsSaving">
                    @if (IsSaving)
                    {
                        <span class="spinner-border spinner-border-sm me-2"></span>
                        @GeneralResources.Saving
                    }
                    else
                    {
                        <i class="fas fa-save me-2"></i>
                        @ActionsResources.Save
                    }
                </button>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(ErrorMessage))
        {
            <div class="alert alert-danger mx-3 mt-3">
                <i class="fas fa-exclamation-triangle me-2"></i>
                @ErrorMessage
            </div>
        }

        @if (!string.IsNullOrEmpty(SuccessMessage))
        {
            <div class="alert alert-success mx-3 mt-3">
                <i class="fas fa-check-circle me-2"></i>
                @SuccessMessage
            </div>
        }

        @if (IsLoading)
        {
            <div class="card-body text-center">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">@GeneralResources.Loading...</span>
                </div>
                <p class="mt-3">@GeneralResources.LoadingSettings</p>
            </div>
        }
        else
        {
            <EditForm Model="@Model" id="systemSettingsForm" OnValidSubmit="SaveSettings">
                <DataAnnotationsValidator />

                <div class="card-body">
                    <!-- Navigation Tabs -->
                    <ul class="nav nav-tabs mb-4" id="systemSettingsTabs" role="tablist">
                        @* <li class="nav-item" role="presentation">
                            <button class="@GetTabClass("tax")" @onclick='() => SetActiveTab("tax")' type="button">
                                <i class="fas fa-file-invoice-dollar me-2"></i>
                                @GeneralResources.TaxSettings
                            </button>
                        </li> *@
                        @* <li class="nav-item" role="presentation">
                            <button class="@GetTabClass("refund")" @onclick='() => SetActiveTab("refund")' type="button">
                                <i class="fas fa-undo me-2"></i>
                                @GeneralResources.Refund
                                @if (PendingRefundsCount > 0)
                                {
                                    <span class="badge bg-danger ms-2">@PendingRefundsCount</span>
                                }
                            </button>
                        </li> *@
                    </ul>

                    <!-- Tab Content -->
                    <div class="">
                        <!-- Tax Settings Tab -->
                        <div class="@($"tab-pane {(ActiveTab == "tax" ? "show active" : "")}")" id="tax">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="card border-0 bg-light">
                                        <div class="card-header bg-transparent">
                                            <h6 class="mb-0">
                                                <i class="fas fa-percentage me-2"></i>
                                                @ECommerceResources.OrderTaxAmount
                                            </h6>
                                        </div>
                                        <div class="card-body">
                                            <div class="form-group mb-3">
                                                <label class="form-label">@ECommerceResources.OrderTaxAmount</label>
                                                <div class="input-group">
                                                    <span class="input-group-text"><i class="fas fa-percentage"></i></span>
                                                    <InputNumber class="form-control" @bind-Value="Model.OrderTaxPercentage" min="0" max="100" step="0.1" />
                                                    <span class="input-group-text">%</span>
                                                </div>
                                                <ValidationMessage For="@(() => Model.OrderTaxPercentage)" />
                                                <small class="form-text text-muted">@GeneralResources.OrderTaxPercentageHelpText</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="card border-0 bg-light">
                                        <div class="card-header bg-transparent">
                                            <h6 class="mb-0">
                                                <i class="fas fa-toggle-on me-2"></i>
                                                @GeneralResources.TaxIncludedInPrice
                                            </h6>
                                        </div>
                                        <div class="card-body">
                                            <div class="form-group mb-3">
                                                <div class="form-check form-switch">
                                                    <InputCheckbox class="form-check-input" @bind-Value="Model.TaxIncludedInPrice" id="taxIncluded" />
                                                    <label class="form-check-label" for="taxIncluded">
                                                        @GeneralResources.TaxIncludedInPrice
                                                    </label>
                                                </div>
                                                <small class="form-text text-muted">@GeneralResources.TaxIncludedHelpText</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Refund Settings Tab -->
                        <div class="@($"tab-pane {(ActiveTab == "refund" ? "show active" : "")}")" id="refund">
                            <!-- Refund Settings Section -->
                            <div class="row mb-4">
                                <div class="col-md-6">
                                    <div class="card border-0 bg-light">
                                        <div class="card-header bg-transparent">
                                            <h6 class="mb-0">
                                                <i class="fas fa-calendar-alt me-2"></i>
                                                Refund Allowed Days
                                            </h6>
                                        </div>
                                        <div class="card-body">
                                            <div class="form-group mb-3">
                                                <label class="form-label">Number of Days</label>
                                                <div class="input-group">
                                                    <span class="input-group-text">
                                                        <i class="fas fa-calendar"></i>
                                                    </span>
                                                    <InputNumber class="form-control" @bind-Value="Model.RefundAllowedDays" min="0" max="365" step="1" />
                                                    <span class="input-group-text">Days</span>
                                                </div>
                                                <ValidationMessage For="@(() => Model.RefundAllowedDays)" />
                                                <small class="form-text text-muted">Maximum number of days after purchase to request a refund</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="card border-0 bg-light">
                                        <div class="card-header bg-transparent">
                                            <h6 class="mb-0">
                                                <i class="fas fa-info-circle me-2"></i>
                                                Refund Policy
                                            </h6>
                                        </div>
                                        <div class="card-body">
                                            <p class="mb-2"><strong>Current Settings:</strong></p>
                                            <ul class="list-unstyled">
                                                <li class="mb-2">
                                                    <i class="fas fa-check-circle text-success me-2"></i>
                                                    Customers can request refunds within <strong>@Model.RefundAllowedDays days</strong>
                                                </li>
                                                <li class="mb-2">
                                                    <i class="fas fa-user-shield text-primary me-2"></i>
                                                    All refund requests require admin approval
                                                </li>
                                                <li>
                                                    <i class="fas fa-bell text-warning me-2"></i>
                                                    Pending requests: <strong>@PendingRefundsCount</strong>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            @* <hr class="my-4" />
                            uiugiuguguiguigigui
                            <!-- Refund Requests Section -->
                            <div class="row">
                                <div class="col-12">
                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <h5 class="mb-0">
                                            <i class="fas fa-list-alt me-2"></i>
                                            Refund Requests Management
                                        </h5>
                                        <button type="button" class="btn btn-sm btn-secondary" @onclick="LoadRefunds">
                                            <i class="fas fa-sync me-2"></i>
                                            Refresh
                                        </button>
                                    </div>

                                    <!-- Filter Section -->
                                    <div class="row mb-3">
                                        <div class="col-md-4">
                                            <label class="form-label">Filter by Status</label>
                                            <select class="form-select form-select-sm" @bind="SelectedRefundStatus" @bind:after="FilterRefunds">
                                                <option value="">All Statuses</option>
                                                <option value="Pending">Pending</option>
                                                <option value="Approved">Approved</option>
                                                <option value="Rejected">Rejected</option>
                                                <option value="Completed">Completed</option>
                                            </select>
                                        </div>
                                        <div class="col-md-4">
                                            <label class="form-label">Search by Order ID</label>
                                            <input type="text" class="form-control form-control-sm" @bind="SearchRefundOrderId" @bind:after="FilterRefunds" placeholder="Enter Order ID..." />
                                        </div>
                                    </div>

                                    @if (IsLoadingRefunds)
                                    {
                                        <div class="text-center py-4">
                                            <div class="spinner-border spinner-border-sm text-primary" role="status">
                                                <span class="visually-hidden">Loading refunds...</span>
                                            </div>
                                            <p class="mt-2">Loading refund requests...</p>
                                        </div>
                                    }
                                    else if (FilteredRefunds == null || !FilteredRefunds.Any())
                                    {
                                        <div class="alert alert-info">
                                            <i class="fas fa-info-circle me-2"></i>
                                            No refund requests found
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="table-responsive">
                                            <table class="table table-hover table-sm">
                                                <thead class="table-light">
                                                    <tr>
                                                        <th>Request ID</th>
                                                        <th>Order ID</th>
                                                        <th>Customer</th>
                                                        <th>Amount</th>
                                                        <th>Reason</th>
                                                        <th>Status</th>
                                                        <th>Request Date</th>
                                                        <th>Actions</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var refund in FilteredRefunds)
                                                    {
                                                        <tr>
                                                            <td>
                                                                <small class="text-muted">@refund.Id.ToString().Substring(0, 8)...</small>
                                                            </td>
                                                            <td>
                                                                <small class="text-muted">@refund.OrderDetailId.ToString().Substring(0, 8)...</small>
                                                            </td>
                                                            <td>refund.CustomerName</td>
                                                            <td>
                                                                <strong>@refund.RefundAmount.ToString("C")</strong>
                                                            </td>
                                                            <td>
                                                                <small>@(refund.RejectionReason?.Length > 30 ? refund.RejectionReason.Substring(0, 30) + "..." : refund.RejectionReason)</small>
                                                            </td>
                                                            <td>
                                                                <span class="badge GetStatusBadgeClass(refund.RefundStatus)">
                                                                    @refund.RefundStatus
                                                                </span>
                                                            </td>
                                                            <td>
                                                                <small>@refund.RefundedDateUTC</small>
                                                            </td>
                                                            <td>
                                                                <div class="btn-group btn-group-sm">
                                                                    <button type="button" class="btn btn-info btn-sm" @onclick="() => ViewRefundDetails(refund)">
                                                                        <i class="fas fa-eye"></i>
                                                                    </button>
                                                                    @* @if (refund.RefundStatus ==1)
                                                                    { 
                                                                        <button type="button" class="btn btn-success btn-sm" @onclick="() => ApproveRefund(refund.Id)">
                                                                            <i class="fas fa-check"></i>
                                                                        </button>
                                                                        <button type="button" class="btn btn-danger btn-sm" @onclick="() => RejectRefund(refund.Id)">
                                                                            <i class="fas fa-times"></i>
                                                                        </button>
                                                                    @* } 
                                                                </div>
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    }
                                </div>
                            </div>
                       *@
                        </div>
                 
                    
                    </div>
                </div>
            </EditForm>
        }
    </div>
</div>

<!-- Refund Details Modal -->
@if (SelectedRefund != null)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">
                        <i class="fas fa-info-circle me-2"></i>
                        Refund Request Details
                    </h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="CloseRefundModal"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="fw-bold">Request ID:</label>
                            <p>@SelectedRefund.Id</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="fw-bold">Order ID:</label>
                            <p>@SelectedRefund.OrderDetailId</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="fw-bold">Customer Name:</label>
                            <p>SelectedRefund.CustomerName</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="fw-bold">Amount:</label>
                            <p class="text-success fs-5">@SelectedRefund.RefundAmount.ToString("C")</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="fw-bold">Status:</label>
                            <p>
                                <span class="badge GetStatusBadgeClass(SelectedRefund.RefundStatus)">
                                    @SelectedRefund.RefundStatus
                                </span>
                            </p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="fw-bold">Request Date:</label>
                            <p>@SelectedRefund.RefundedDateUTC</p>
                        </div>
                        @if (SelectedRefund.RefundedDateUTC.HasValue)
                        {
                            <div class="col-md-6 mb-3">
                                <label class="fw-bold">Processed Date:</label>
                                <p>@SelectedRefund.RefundedDateUTC.Value.ToString("dd/MM/yyyy HH:mm")</p>
                            </div>
                        }
                        <div class="col-12 mb-3">
                            <label class="fw-bold">Reason:</label>
                            <p>@SelectedRefund.RefundReason</p>
                        </div>
                        @if (!string.IsNullOrEmpty(SelectedRefund.AdminNotes))
                        {
                            <div class="col-12 mb-3">
                                <label class="fw-bold">Admin Notes:</label>
                                <p>@SelectedRefund.AdminNotes</p>
                            </div>
                        }
                    </div>
                </div>
                <div class="modal-footer">
                    @* @if (SelectedRefund.RefundStatus == 1 )
                    { *@
                        <button type="button" class="btn btn-success" @onclick="() => ApproveRefund(SelectedRefund.Id)">
                            <i class="fas fa-check me-2"></i>
                            Approve
                        </button>
                        <button type="button" class="btn btn-danger" @onclick="() => RejectRefund(SelectedRefund.Id)">
                            <i class="fas fa-times me-2"></i>
                            Reject
                        </button>
                    @* } *@
                    <button type="button" class="btn btn-secondary" @onclick="CloseRefundModal">Close</button>
                </div>
            </div>
        </div>
    </div>
}

<style>
    .nav-tabs .nav-link {
        border-radius: 0.5rem 0.5rem 0 0;
        border: 1px solid transparent;
        margin-right: 2px;
        position: relative;
    }

        .nav-tabs .nav-link.active {
            background-color: #f8f9fa;
            border-color: #dee2e6 #dee2e6 #f8f9fa;
        }

    .form-check-input:checked {
        background-color: #198754;
        border-color: #198754;
    }

    .card {
        transition: all 0.3s ease;
    }

        .card:hover {
            box-shadow: 0 0.125rem 0.5rem rgba(0, 0, 0, 0.1);
        }

    .table th {
        font-weight: 600;
        font-size: 0.875rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .modal.show {
        display: block;
    }
</style>
