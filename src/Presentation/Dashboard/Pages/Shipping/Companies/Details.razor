@page "/shippingCompany"
@page "/shippingCompany/{id:guid}"

@using Common.Enumerations.User
@attribute [Authorize(Roles = nameof(UserRole.Admin))]

<div class="container-fluid p-0">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary d-flex justify-content-between align-items-center">
            <h5 class="modal-title  text-white">
                @(Model.Id == Guid.Empty ? $"➕ {ActionsResources.Add}" : $"✏️ {ActionsResources.Edit}")  @ECommerceResources.ShippingCompany
            </h5>
        </div>
        <EditForm Model="@Model" OnValidSubmit="Save">
            <DataAnnotationsValidator />
            <div class="card-body p-4">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">@ECommerceResources.Name</label>
                        <InputText class="form-control" @bind-Value="Model.Name"
                                   placeholder="@String.Format(FormResources.Placeholder, ECommerceResources.Name)" />
                        <ValidationMessage For="@(() => Model.Name)" />
                    </div>
                     <div class="col-md-6 mb-3  " style="direction:ltr;">
                        <label class="form-label">@FormResources.PhoneNumber</label>
                        <div class="input-group">
                            <select class="form-select bg-light    text-black  pe-3 ps-2"
                                    style="max-width: 120px;font-size: 13px; "
                                    @bind="Model.PhoneCode">
                                @foreach (var country in countries)
                                {
                                    <option value="@country.PhoneCode" >
                                        @country.Flag @country.PhoneCode @(ResourceManager.CurrentLanguage == Language.Arabic ? country.NameAr : country.NameEn)
                                    </option>
                                }
                            </select>
                            <InputText type="tel"
                                       class="form-control"
                                        style="font-size: "
                                       placeholder="@FormResources.EnterPhoneNumber"
                                       @bind-Value="Model.PhoneNumber"  />
                        </div>
                        <ValidationMessage For="@(() => Model.PhoneCode)" />
                        <ValidationMessage For="@(() => Model.PhoneNumber)" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label bg-light    text-black">@FormResources.Logo</label>
                        <InputFile class="form-control  "
                                   OnChange="HandleSelectedLogo"
                                   accept="image/*" />
                        <ValidationMessage For="@(() => Model.Base64Image)" />

                        @if (!string.IsNullOrEmpty(previewLogoUrl))
                        {
                            <div class="position-relative d-inline-block mt-2">
                                <img src="@previewLogoUrl" class="img-thumbnail" style="max-width: 200px;" />
                                <button type="button" class="btn-close position-absolute top-0 end-0"
                                        style="background-color: white;" @onclick="RemoveSelectedImage"></button>
                            </div>
                        }
                        else if (!string.IsNullOrEmpty(Model.LogoImagePath))
                        {
                            <img src="@baseUrl/@Model.LogoImagePath" class="img-thumbnail mt-2" style="max-width: 200px;" />
                        }

                    </div>
                </div>

                <!-- <div class="row">
                   
                </div>

                <div class="row">
                    
                </div> -->

           <div class="card-footer py-3 d-flex justify-content-end gap-2 card-footer-mobile">
    <!-- زر الإلغاء -->
    <button type="button" class="btn btn-secondary btn-responsive d-flex align-items-center" @onclick="CloseModal">
        <i class="fas fa-times mx-2"></i>
        <span class="btn-text">@ActionsResources.Cancel</span>
    </button>

    <!-- زر الحفظ -->
    <button type="submit" class="btn bg-primary text-white btn-responsive d-flex align-items-center" disabled="@isSaving">
        @if (isSaving)
        {
            <span class="spinner-border spinner-border-sm mx-2" role="status" aria-hidden="true"></span>
            <span class="btn-text">@FormResources.Saving...</span>
        }
        else
        {
            <i class="fas fa-save mx-2"></i>
            <span class="btn-text">@ActionsResources.Save</span>
        }
    </button>
</div>

            </div>
        </EditForm>
    </div>
</div>