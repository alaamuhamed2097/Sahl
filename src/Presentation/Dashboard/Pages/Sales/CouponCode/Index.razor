@page "/couponCodes"

@attribute [Authorize(Roles = nameof(UserRole.Admin))]
@using Common.Enumerations
@using Common.Enumerations.FieldType
@using Common.Enumerations.User
@using Shared.DTOs.ECommerce
@using Shared.DTOs.ECommerce.Item
@using Shared.DTOs.ECommerce.CouponCode
@using Shared.DTOs.User
@inherits BaseListPage<CouponCodeDto>

<PageTitle>@FormResources.PromoCodes</PageTitle>
<div class="container-fluid p-0">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white py-3 d-flex justify-content-between align-items-center">
    <h5 class="mb-0 fw-semibold text-white">🏷️ @FormResources.PromoCodes</h5>
     </div>
<div class="card-body">
      <div class="dt-responsive table-responsive">
       <!-- Filtration start -->
        <ul class="navbar-nav d-flex flex-row align-items-center gap-3 mb-2 px-0 w-100">
        <li class="nav-item col-md-6 w-auto d-flex flex-row align-items-center gap-3">
               <EditForm Model="searchModel" OnSubmit="@Search">
    <!-- Search Box -->
    <div class="input-group rounded search-box">
        <input type="text" @bind="searchModel.SearchTerm"
               id="searchInput"
               class="form-control text-center border-0 @(ResourceManager.CurrentLanguage == Language.Arabic ? "rounded-end" : "rounded-start")"
               placeholder="@ActionsResources.Search" />
        <button type="submit"
                class="btn btn-danger d-flex align-items-center justify-content-center border-0 @(ResourceManager.CurrentLanguage == Language.Arabic ? "rounded-start" : "rounded-end")">
            <i class="fas fa-search text-white m-0"></i>
        </button>
    </div>
</EditForm>

               <!-- Page Size -->
                                                                <div class="d-flex align-items-center gap-2">
                                            <select class="form-select rounded-3 shadow-sm border-light text-primary fw-bold text-center custom-dropdown"
                                                    style="width: 130px; height: 40px; padding-right: 30px;"
                                                    @onchange="OnPageSizeChanged">
                                                <option value="10">10</option>
                                                <option value="15">15</option>
                                                <option value="20">20</option>
                                                <option value="30">30</option>
                                            </select>
                                        </div>
    </li>
             <li class="nav-item ms-auto d-flex flex-row align-items-center gap-2">
     <!-- Export Buttons -->
    <div class="dropdown">
    <button class="btn btn-info" type="button" id="exportDropdown" data-bs-toggle="dropdown" aria-expanded="false">
        <i class="fas fa-file-export mx-1"></i>
      <span class="fw-bold">@ActionsResources.Export</span>
        </button>
    <ul class="dropdown-menu" aria-labelledby="exportDropdown">
      <li><a class="dropdown-item" href="javascript:void(0)" @onclick="ExportToExcel"><i class="far fa-file-excel mx-2"></i>Excel</a></li>
 <li><a class="dropdown-item" href="javascript:void(0)" @onclick="ExportToPrint"><i class="fas fa-print mx-2"></i>Print</a></li>
  </ul>
         </div>

                 <!-- Add Button -->
             <button class="btn btn-success" @onclick="Add">
         <i class="feather icon-plus-circle mx-1"></i>
    <span class="fw-bold">@ActionsResources.Add</span>
       </button>
   </li>
        </ul>
           <div class="d-none d-md-block">
        <table id="simpletable" class="text-center table   nowrap  "  >
        <thead>
     <tr>
 @* <th >@FormResources.Title</th> *@
            <th >@FormResources.Code</th>
  <th class="sorting">@FormResources.StartDate</th>
                    <th class="sorting">@FormResources.EndDate</th>
   @* <th class="sorting">@FormResources.Type</th> *@
            <th class="sorting">@FormResources.Value</th>
        <th class="sorting">@FormResources.UsageLimit</th>
     @* <th class="sorting">@FormResources.UsageCount</th> *@
      <th class="sorting">@FormResources.Status</th>
    <th class="text-center " >@ECommerceResources.Actions</th>
           </tr>
            </thead>
   <tbody class="fs-7 ">
        @if (items != null && items.Count() != 0)
      {
 @foreach (var item in items)
       {
    <tr>
          @* <td class="text-center  p-1">@item.Title</td> *@
           <td class="text-center p-1">@item.Code</td>
      <td class="text-center p-1">@item.StartDate.ToString("yyyy-MM-dd")</td>
 <td class="text-center p-1">@item.EndDate.ToString("yyyy-MM-dd")</td>
       @* <td class="text-center p-1">@item.PromoCodeType</td> *@
                                        <td class="text-center p-1">@(((item.Value - Convert.ToInt32(item.Value)) > 0) ? item.Value : Convert.ToInt32(item.Value))@(item.CouponCodeType == CouponCodeType.Percentage ? "%" : "$")</td>
        <td class="text-center p-3">@(item.UsageLimit?.ToString() ?? "∞")</td>
             @* <td class="text-center p-3">@item.UsageCount</td> *@
       
              @if(item.IsActive == true)
           {
   <td class="text-center p-3 text-success">@FormResources.Active</td>
   }
               else
   {
       <td class="text-center p-3 text-warning">@FormResources.InActive</td>
        }

       <td class="d-flex gap-1 justify-content-center align-items-center">
        <button class="btn btn-primary  align-items-center" @onclick="() => Edit(item)">
        <i class="feather icon-edit me-2 "></i>
        <span class="d-none d-md-inline">@ActionsResources.Edit</span>
    </button>

    <!-- زر الحذف -->
    <button class="btn btn-danger align-items-center"  @onclick="() => Delete(item.Id)">
        <i class="feather icon-trash-2 me-2"></i>
        <span class="d-none d-md-inline">@ActionsResources.Delete</span>
    </button>
  
        </td>
        </tr>
           }
   }
        else
           {
          <tr>
          <td colspan="10" class="p-0">
        <div class="d-flex flex-column justify-content-center align-items-center text-center" style="height: 500px;">
            <!-- أيقونة كبيرة -->
            <i class="fas fa-database text-muted" style="font-size: 60px;  width: 100%;"></i>

            <!-- نص -->
            <p class="text-muted mt-3" style="font-size: 18px;">
                @NotifiAndAlertsResources.NoDataFound
            </p>
        </div>
    </td>
    </tr>
        }
      </tbody>
        </table>
        <!-- Pagination start -->
          <div class="pagination-wrapper d-flex flex-column justify-content-end flex-grow-1">
    <div class="d-flex flex-wrap align-items-center justify-content-between gap-3 mt-4 pagination-container" dir="ltr">

        <!-- النص الإحصائي -->
        <div class="text-muted small">
            @string.Format(
                ActionsResources.ShowingEntries,
                ((currentPage - 1) * searchModel.PageSize + 1),
                Math.Min(currentPage * searchModel.PageSize, totalRecords),
                totalRecords
            )
        </div>

        <!-- الباجينيشن -->
        <nav aria-label="Pagination">
            <ul class="pagination pagination-sm mb-0 shadow-sm rounded-3 overflow-hidden">

                <!-- أول صفحة -->
                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                    <a class="page-link" href="javascript:void(0)" @onclick="async () => GoToPage(1)" title="@ActionsResources.First">
                        <i class="fas fa-angle-double-left"></i>
                    </a>
                </li>

                <!-- السابقة -->
                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                    <a class="page-link" href="javascript:void(0)" @onclick="async () => GoToPage(currentPage - 1)">
                        <i class="fas fa-angle-left"></i>
                    </a>
                </li>

                @* أرقام الصفحات *@
                @{
                    const int maxVisiblePages = 5;
                    int startPage = Math.Max(1, currentPage - 2);
                    int endPage = Math.Min(totalPages, startPage + maxVisiblePages - 1);
                    if (endPage - startPage + 1 < maxVisiblePages)
                    {
                        startPage = Math.Max(1, endPage - maxVisiblePages + 1);
                    }
                }

                @if (startPage > 1)
                {
                    <li class="page-item disabled"><span class="page-link">...</span></li>
                }

                @for (int pag = startPage; pag <= endPage; pag++)
                {
                    int pageNumber = pag;
                    <li class="page-item @(pag == currentPage ? "active" : "")">
                        <a class="page-link fw-bold" href="javascript:void(0)" @onclick="async () => GoToPage(pageNumber)">@pag</a>
                    </li>
                }

                @if (endPage < totalPages)
                {
                    <li class="page-item disabled"><span class="page-link">...</span></li>
                }

                <!-- التالية -->
                <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                    <a class="page-link" href="javascript:void(0)" @onclick="async () => GoToPage(currentPage + 1)">
                        <i class="fas fa-angle-right"></i>
                    </a>
                </li>

                <!-- آخر صفحة -->
                <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                    <a class="page-link" href="javascript:void(0)" @onclick="async () => GoToPage(totalPages)" title="@ActionsResources.Last">
                        <i class="fas fa-angle-double-right"></i>
                    </a>
                </li>

            </ul>
        </nav>
    </div>
</div>
</div>

                <!-- MOBILE VIEW (PromoCodes Cards) -->
                <div class="d-md-none ">

                    @if (items != null && items.Any())
                    {
                        foreach (var item in items)
                        {
                            <div class="card border-0 shadow-sm rounded-3 mb-3">
                                <div class="card-body p-3">

                                    <!-- Header -->
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div>
                                            <h6 class="fw-bold text-primary mb-1">
                                                🏷️ @item.Code
                                            </h6>

                                            <small class="text-muted">
                                                @item.StartDate.ToString("yyyy-MM-dd") → @item.EndDate.ToString("yyyy-MM-dd")
                                            </small>
                                        </div>

                                        <!-- Action Buttons -->
                                        <div class="d-flex gap-1">
                                            <button class="btn btn-primary  btn-sm"
                                                    @onclick="() => Edit(item)">
                                                
                                                 <i class="feather icon-edit "></i>
                                            </button>
                                            <button class="btn btn-danger btn-sm"
                                                    @onclick="() => Delete(item.Id)">
                                               
                                                   <i class="feather icon-trash-2 "></i>
                                            </button>
                                        </div>
                                    </div>

                                    <hr class="my-2" />

                                    <!-- Details -->
                                    <div class="row small">
                                        <div class="col-6 mb-1">
                                            <i class="fas fa-percentage text-info me-1"></i>
                                            <strong>@FormResources.Value:</strong>
                                            @(((item.Value - Convert.ToInt32(item.Value)) > 0)
                                                                                ? item.Value
                                                                                : Convert.ToInt32(item.Value))
                                            @(item.CouponCodeType == CouponCodeType.Percentage ? "%" : "$")
                                        </div>

                                        <div class="col-6 mb-1">
                                            <i class="fas fa-repeat text-secondary me-1"></i>
                                            <strong>@FormResources.UsageLimit:</strong>
                                            @(item.UsageLimit?.ToString() ?? "∞")
                                        </div>

                                        <div class="col-12 mt-1">
                                            @if (item.IsActive)
                                            {
                                                <span class="badge bg-success w-100 py-2">
                                                    @FormResources.Active
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning text-dark w-100 py-2">
                                                    @FormResources.InActive
                                                </span>
                                            }
                                        </div>
                                    </div>

                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <!-- Empty State -->
                        <div class="text-center py-5">
                            <i class="fas fa-tags text-muted" style="font-size: 55px;"></i>
                            <p class="mt-3 text-muted">@NotifiAndAlertsResources.NoDataFound</p>

                            <button class="btn btn-success mt-2" @onclick="Add">
                                <i class="feather icon-plus-circle me-1"></i>@ActionsResources.Add
                            </button>
                        </div>
                    }

                </div>

   <!-- Pagination end -->
          </div>
        </div>
    </div>
</div>
