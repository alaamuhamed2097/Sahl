@page "/sales/orders"
@page "/orders"

@using Common.Enumerations
@using Common.Enumerations.FieldType
@using Common.Enumerations.Order
@using Common.Enumerations.Payment
@using Common.Enumerations.User
@using Shared.DTOs.ECommerce
@using Shared.DTOs.ECommerce.Item
@using Shared.DTOs.User
@attribute [Authorize(Roles = nameof(UserRole.Admin))]
@inherits BaseListPage<OrderDto>

<PageTitle>@ECommerceResources.Orders</PageTitle>

<div class="container-fluid p-0">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white py-3 d-flex justify-content-between align-items-center">
            <h5 class="mb-0 fw-semibold text-white">🛒 @ECommerceResources.Orders</h5>
    </div>
        <div class="card-body">
            <div class="dt-responsive table-responsive">
                <!-- Filtration start -->
                <ul class="navbar-nav d-flex flex-row align-items-center gap-3 mb-2 px-0 w-100">
                    <li class="nav-item col-md-6 w-auto d-flex flex-row align-items-center gap-3">
                        <EditForm Model="searchModel" OnSubmit="@Search">
                            <!-- Search Box -->
                            <div class="input-group rounded" style="width: 170px; height: 38px;">
                                <input type="text" @bind="searchModel.SearchTerm"
                                       id="searchInput"
                                       class="form-control text-center border-0 @(ResourceManager.CurrentLanguage == Language.Arabic ? "rounded-end" : "rounded-start")"
                                       placeholder="@ActionsResources.Search"
                                       style="height: 38px;" />
                                <button type="submit"
                                        class="btn btn-danger d-flex align-items-center justify-content-center border-0 @(ResourceManager.CurrentLanguage == Language.Arabic ? "rounded-start" : "rounded-end")"
                                        style="width: 40px; height: 38px;">
                                    <i class="fas fa-search text-white m-0"></i>
                                </button>
                            </div>
                        </EditForm>

 <!-- Page Size -->
                                                                <div class="d-flex align-items-center gap-2">
                                            <select class="form-select rounded-3 shadow-sm border-light text-primary fw-bold text-center custom-dropdown"
                                                    style="width: 130px; height: 40px; padding-right: 30px;"
                                                    @onchange="OnPageSizeChanged">
                                                <option value="10"selected="@(searchModel.PageSize == 10)">10</option>
                                                <option value="15"selected="@(searchModel.PageSize == 15)">15</option>
                                                <option value="20"selected="@(searchModel.PageSize == 20)">20</option>
                                                <option value="30"selected="@(searchModel.PageSize == 30)">30</option>
                                            </select>
                                        </div>

                        <!-- List Type -->
                        <div class="d-flex align-items-center gap-2">
                            <label class="form-label hidden  fw-semibold mb-0">@ECommerceResources.ListType</label>
                            <select class="form-select rounded-3 shadow-sm border-light text-primary fw-bold text-center"
                                    style="width: 150px; height: 38px; padding-right: 16px;"
                                    onchange="window.location.href = this.value">
                                <option selected value="/orders">@ECommerceResources.Orders</option>
                                <option value="/refunds">@ECommerceResources.Refunds</option>
                            </select>
                        </div>
                    </li>
                    <li class="nav-item ms-auto d-flex flex-row align-items-center gap-2">
                        <!-- Export Buttons -->
                        <div class="dropdown">
                            <button class="btn btn-info" type="button" id="exportDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-file-export me-2"></i>
                                <span class="fw-bold">@ActionsResources.Export</span>
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="exportDropdown">
                                <li><a class="dropdown-item" href="javascript:void(0)" @onclick="ExportToExcel"><i class="far fa-file-excel mx-2"></i>Excel</a></li>
                                <li><a class="dropdown-item" href="javascript:void(0)" @onclick="ExportToPrint"><i class="fas fa-print mx-2"></i>Print</a></li>
                            </ul>
                        </div>
                    </li>
                </ul>
                <!-- Table -->
                <div class="table-responsive dt-responsived table-container border rounded-3">
                    <table id="order-table" class="table table-striped table-hover mb-0 align-text-center ">
                        <thead class="bg-light">
                            <tr>
                                <th class="text-center align-middle">@ECommerceResources.OrderID</th>
                                <th class="text-center align-middle">@ECommerceResources.CustomerName</th>
                                <th class="text-center align-middle">@ECommerceResources.OrderDate</th>
                                <th class="text-center align-middle">@ECommerceResources.OrderStatus</th>
                                <th class="text-center align-middle">@FormResources.Price</th>
                                <th class="text-center align-middle">@ECommerceResources.PaymentStatus</th>
                                <th class="text-center align-middle">@ECommerceResources.Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (items != null && items.Count()!=0)
                            {
                                int i =0;
                                @foreach (var item in items)
                                {
                                    <tr>
                                        <td class="text-center align-middle">@item.Number</td>
                                        <td class="text-center align-middle">@item.FirstName @item.LastName</td>
                                        <td class="text-center align-middle">@item.CreatedDateLocalFormatted</td>
                                        @switch (item.CurrentState)
                                        {
                                            case OrderStatus.Accepted:
                                                <td class="text-warning text-center align-middle">@ECommerceResources.Accepted</td>
                                                break;
                                            case OrderStatus.Rejected:
                                                <td class="text-danger text-center align-middle">@ECommerceResources.Rejected</td>
                                                break;
                                            case OrderStatus.InProgress:
                                                <td class="text-primary text-center align-middle">@ECommerceResources.InProgress</td>
                                                break;
                                            case OrderStatus.Shipping:
                                                <td class="text-info text-center align-middle">@ECommerceResources.Shipping</td>
                                                break;
                                            case OrderStatus.Delivered:
                                                <td class="text-success text-center align-middle">@ECommerceResources.Delivered</td>
                                                break;
                                            case OrderStatus.Pending:
                                                <td class="text-secondary text-center align-middle">@ECommerceResources.Pending</td>
                                                break;
                                            case OrderStatus.Canceled:
                                                <td class="text-dark text-center align-middle">@ECommerceResources.Canceled</td>
                                                break;
                                            case OrderStatus.Returned:
                                                <td class="text-muted text-center align-middle">@ECommerceResources.Returned</td>
                                                break;
                                            default:
                                                <td class="text-secondary text-center align-middle">@item.CurrentState.ToString()</td>
                                                break;
                                        }
                                        <td class="text-center align-middle">$@(item.Price % 1 == 0 ? item.Price.ToString("F0") : item.Price.ToString("F2"))</td>
                                        @switch (item.PaymentStatus)
                                        {
                                            case PaymentStatus.Paid:
                                                <td class="text-success text-center align-middle">@ECommerceResources.Paid</td>
                                                break;
                                            case PaymentStatus.Pending:
                                                <td class="text-primary text-center align-middle">@ECommerceResources.Pending</td>
                                                break;
                                            @* case PaymentStatus.Failed:
                                                <td class="text-danger">@ECommerceResources.Failed</td>
                                                break; *@
                                            default:
                                                <td class="text-secondary text-center align-middle">@item.PaymentStatus.ToString()</td>
                                                break;
                                        }
                                        <td class="d-flex gap-1 justify-content-center align-items-center">
                                            <button class="btn btn-primary btn-sm mx-1" @onclick="() => Edit(item)">
                                                <span class="fas fa-eye"></span>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="7" class=" text-center ">
                                        @NotifiAndAlertsResources.NoDataFound
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                <div class="pagination-wrapper d-flex flex-column justify-content-end flex-grow-1">
    <div class="d-flex flex-wrap align-items-center justify-content-between gap-3 mt-4 pagination-container" dir="ltr">

        <!-- النص الإحصائي -->
        <div class="text-muted small">
            @string.Format(ActionsResources.ShowingEntries,
                ((currentPage - 1) * searchModel.PageSize + 1),
                Math.Min(currentPage * searchModel.PageSize, totalRecords),
                totalRecords)
        </div>

        <!-- الباجينيشن -->
        <nav aria-label="Pagination">
            <ul class="pagination pagination-sm mb-0 shadow-sm rounded-3 overflow-hidden">

                <!-- أول صفحة -->
                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                    <a class="page-link" @onclick="() => GoToPage(1)" title="@ActionsResources.First">
                        <i class="fas fa-angle-double-left"></i>
                    </a>
                </li>

                <!-- السابقة -->
                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                    <a class="page-link" @onclick="() => GoToPage(currentPage - 1)">
                        <i class="fas fa-angle-left"></i>
                    </a>
                </li>

                @* أرقام الصفحات *@
                @{
                    const int maxVisiblePages = 5;
                    int startPage = Math.Max(1, currentPage - 2);
                    int endPage = Math.Min(totalPages, startPage + maxVisiblePages - 1);
                    if (endPage - startPage + 1 < maxVisiblePages)
                    {
                        startPage = Math.Max(1, endPage - maxVisiblePages + 1);
                    }
                }

                @if (startPage > 1)
                {
                    <li class="page-item disabled"><span class="page-link">...</span></li>
                }

                @for (int pag = startPage; pag <= endPage; pag++)
                {
                    int pageNumber = pag;
                    <li class="page-item @(pag == currentPage ? "active" : "")">
                        <a class="page-link fw-bold" @onclick="() => GoToPage(pageNumber)">@pag</a>
                    </li>
                }

                @if (endPage < totalPages)
                {
                    <li class="page-item disabled"><span class="page-link">...</span></li>
                }

                <!-- التالية -->
                <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                    <a class="page-link" @onclick="() => GoToPage(currentPage + 1)">
                        <i class="fas fa-angle-right"></i>
                    </a>
                </li>

                <!-- آخر صفحة -->
                <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                    <a class="page-link" @onclick="() => GoToPage(totalPages)" title="@ActionsResources.Last">
                        <i class="fas fa-angle-double-right"></i>
                    </a>
                </li>

            </ul>
        </nav>
    </div>
</div>

            </div>
        </div>
    </div>
</div>