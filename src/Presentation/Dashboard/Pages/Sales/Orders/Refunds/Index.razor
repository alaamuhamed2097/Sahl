@page "/sales/refunds"
@page "/refunds"
@attribute [Authorize(Roles = nameof(UserType.Admin))]
@using Common.Enumerations.Order
@using Common.Enumerations.User
@using Shared.DTOs.Order.Payment.Refund
@inherits BaseListPage<RefundRequestDto>

<PageTitle>@ECommerceResources.Refunds</PageTitle>

<div class="container-fluid p-0">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white py-3 d-flex justify-content-between align-items-center">
            <h5 class="mb-0 fw-semibold text-white">🛒 @ECommerceResources.Refunds</h5>
        </div>
        <div class="card-body">
            <div class="dt-responsive table-responsive">
                <!-- Filtration start -->
                <ul class="navbar-nav d-flex flex-row align-items-center gap-3 mb-4 px-0 w-100 flex-wrap">
                    <li class="nav-item col-md-5 w-auto d-flex flex-row align-items-center gap-2">
                        <EditForm Model="searchModel" OnSubmit="@(async () => await Search())">
                            <div class="search-container">
                                <div class="input-group search-box">
                                    <input type="text"
                                           @bind="searchModel.SearchTerm"
                                           id="searchInput"
                                           class="form-control search-input"
                                           placeholder="@ActionsResources.Search" />
                                    <button type="submit"
                                            class="btn btn-search">
                                        <i class="fas fa-search"></i>
                                    </button>
                                </div>
                            </div>
                        </EditForm>
                    </li>

                    <!-- Order Status Filter -->
                    <li class="nav-item w-auto">
                        <select class="form-select rounded-3 shadow-sm border-light text-primary fw-bold text-center custom-dropdown"
                                style="width: 140px; height: 40px; padding-right: 30px;"
                                @onchange="OnRefundStatusFilterChanged">
                            <option value="">@ECommerceResources.RefundStatus</option>
                            <option value="@((int)RefundStatus.Open)">@ECommerceResources.Pending</option>
                            <option value="@((int)RefundStatus.UnderReview)">@ECommerceResources.Accepted</option>
                            <option value="@((int)RefundStatus.NeedMoreInfo)">@ECommerceResources.InProgress</option>
                            <option value="@((int)RefundStatus.InfoApproved)">@ECommerceResources.Shipping</option>
                            <option value="@((int)RefundStatus.ItemShippedBack)">@ECommerceResources.Delivered</option>
                            <option value="@((int)RefundStatus.ItemReceived)">@ECommerceResources.Rejected</option>
                            <option value="@((int)RefundStatus.Inspecting)">@ECommerceResources.Canceled</option>
                            <option value="@((int)RefundStatus.Approved)">@ECommerceResources.Returned</option>
                            <option value="@((int)RefundStatus.Rejected)">@ECommerceResources.Returned</option>
                            <option value="@((int)RefundStatus.Refunded)">@ECommerceResources.Returned</option>
                            <option value="@((int)RefundStatus.Closed)">@ECommerceResources.Returned</option>
                        </select>
                    </li>

                    <!-- Page Size Selector -->
                    <li class="nav-item w-auto">
                        <select class="form-select rounded-3 shadow-sm border-light text-primary fw-bold text-center custom-dropdown"
                                style="width: 100px; height: 40px; padding-right: 30px;"
                                @onchange="OnPageSizeChanged">
                            <option value="10">10</option>
                            <option value="15">15</option>
                            <option value="20">20</option>
                            <option value="30">30</option>
                        </select>
                    </li>

                    <!-- Export Button -->
                    <li class="nav-item ms-auto d-flex flex-row align-items-center gap-2">
                        <div class="dropdown">
                            <button class="btn btn-info" type="button" id="exportDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-file-export mx-1"></i>
                                <span class="fw-bold">@ActionsResources.Export</span>
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="exportDropdown">
                                <li><a class="dropdown-item" href="javascript:void(0)" @onclick="ExportToExcel"><i class="far fa-file-excel mx-2"></i>@ActionsResources.Download</a></li>
                                <li><a class="dropdown-item" href="javascript:void(0)" @onclick="ExportToPrint"><i class="fas fa-print mx-2"></i>@ActionsResources.Print</a></li>
                            </ul>
                        </div>
                    </li>
                </ul>

                <!-- Desktop View -->
                <div class="d-none d-md-block">
                    <div style="overflow-x: auto;">
                        <table id="order-table" class="text-center table table-sm table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th style="min-width: 120px; cursor: pointer;" @onclick="() => SortByColumn(nameof(RefundDto.Number))">
                                        @ECommerceResources.RefundNumber
                                        <i class="@GetSortIconClass(nameof(RefundDto.Number))"></i>
                                    </th>
                                    <th style="min-width: 150px; cursor: pointer;" @onclick="() => SortByColumn(nameof(RefundDto.RequestDateLocalFormatted))">
                                        @ECommerceResources.RequestedDate
                                        <i class="@GetSortIconClass(nameof(RefundDto.RequestDateLocalFormatted))"></i>
                                    </th>
                                    <th style="min-width: 130px; cursor: pointer;" @onclick="() => SortByColumn(nameof(RefundDto.ApprovedItemsCount))">
                                        @ECommerceResources.ApprovedItemsCount
                                        <i class="@GetSortIconClass(nameof(RefundDto.ApprovedItemsCount))"></i>
                                    </th>
                                    <th style="min-width: 100px; cursor: pointer;" @onclick="() => SortByColumn(nameof(RefundDto.RefundAmount))">
                                        @FormResources.RefundAmount
                                        <i class="@GetSortIconClass(nameof(RefundDto.RefundAmount))"></i>
                                    </th>
                                    <th style="min-width: 130px; cursor: pointer;" @onclick="() => SortByColumn(nameof(RefundDto.RefundStatus))">
                                        @ECommerceResources.RefundStatus
                                        <i class="@GetSortIconClass(nameof(RefundDto.RefundStatus))"></i>
                                    </th>
                                    <th style="min-width: 100px;" class="text-center">@ActionsResources.Edit</th>
                                </tr>
                            </thead>
                            <tbody class="fs-7">
                                @if (items != null && items.Any())
                                {
                                    @foreach (var item in items)
                                    {
                                        <tr>
                                            <td class="text-center p-1">
                                                <span class="badge bg-primary">@item.Number</span>
                                            </td>
                                            <td class="text-center p-1">
                                                <small>@item.RequestDateLocalFormatted</small>
                                            </td>
                                            <td class="text-center p-1">@item.ApprovedItemsCount</td>
                                            <td class="text-center p-1" dir="ltr">
                                                $@(item.RefundAmount % 1 == 0 ? item.RefundAmount.ToString("F0") : item.RefundAmount.ToString("F2"))
                                            </td>
                                            <td class="text-center p-1">
                                                <span class="@GetRefundStatusClass(item.RefundStatus)">
                                                    @GetRefundStatusText(item.RefundStatus)
                                                </span>
                                            </td>
                                            <td class="text-center p-1">
                                                <div class="d-flex gap-1 justify-content-center">
                                                    <button class="btn btn-primary btn-sm" @onclick="() => Edit(item)" title="@ActionsResources.View">
                                                        <i class="fas fa-eye"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="7" class="p-0">
                                            <div class="d-flex flex-column justify-content-center align-items-center text-center" style="height: 500px;">
                                                <i class="fas fa-database text-muted" style="font-size: 60px;"></i>
                                                <p class="text-muted mt-3" style="font-size: 18px;">
                                                    @NotifiAndAlertsResources.NoDataFound
                                                </p>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Pagination -->
                    <div class="pagination-wrapper d-flex flex-column justify-content-end flex-grow-1">
                        <div class="d-flex flex-wrap align-items-center justify-content-between gap-3 mt-4 pagination-container" dir="ltr">
                            <div class="text-muted small">
                                @string.Format(ActionsResources.ShowingEntries,
                                    ((currentPage - 1) * searchModel.PageSize + 1),
                                    Math.Min(currentPage * searchModel.PageSize, totalRecords),
                                    totalRecords)
                            </div>

                            <nav aria-label="Pagination">
                                <ul class="pagination pagination-sm mb-0 shadow-sm rounded-3 overflow-hidden">
                                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                        <a class="page-link" href="javascript:void(0)" @onclick="() => GoToPage(1)" title="@ActionsResources.First">
                                            <i class="fas fa-angle-double-left"></i>
                                        </a>
                                    </li>
                                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                        <a class="page-link" href="javascript:void(0)" @onclick="() => GoToPage(currentPage - 1)">
                                            <i class="fas fa-angle-left"></i>
                                        </a>
                                    </li>

                                    @{
                                        const int maxVisiblePages = 5;
                                        int startPage = Math.Max(1, currentPage - 2);
                                        int endPage = Math.Min(totalPages, startPage + maxVisiblePages - 1);
                                        if (endPage - startPage + 1 < maxVisiblePages)
                                        {
                                            startPage = Math.Max(1, endPage - maxVisiblePages + 1);
                                        }
                                    }

                                    @if (startPage > 1)
                                    {
                                        <li class="page-item disabled"><span class="page-link">...</span></li>
                                    }

                                    @for (int pag = startPage; pag <= endPage; pag++)
                                    {
                                        int pageNumber = pag;
                                        <li class="page-item @(pag == currentPage ? "active" : "")">
                                            <a class="page-link fw-bold" href="javascript:void(0)" @onclick="() => GoToPage(pageNumber)">@pag</a>
                                        </li>
                                    }

                                    @if (endPage < totalPages)
                                    {
                                        <li class="page-item disabled"><span class="page-link">...</span></li>
                                    }

                                    <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                                        <a class="page-link" href="javascript:void(0)" @onclick="() => GoToPage(currentPage + 1)">
                                            <i class="fas fa-angle-right"></i>
                                        </a>
                                    </li>
                                    <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                                        <a class="page-link" href="javascript:void(0)" @onclick="() => GoToPage(totalPages)" title="@ActionsResources.Last">
                                            <i class="fas fa-angle-double-right"></i>
                                        </a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>

                <!-- MOBILE VIEW -->
                <div class="d-md-none">
                    @if (items != null && items.Any())
                    {
                        @foreach (var item in items)
                        {
                            <div class="card border-0 shadow-sm rounded-3 mb-3">
                                <div class="card-body p-3">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div>
                                            <h6 class="fw-bold text-primary mb-1">🛒 @item.Number</h6>
                                            <p class="text-muted small mb-1">@item.ApprovedItemsCount</p>
                                            <small class="text-muted">
                                                @item.RequestDateLocalFormatted
                                            </small>
                                        </div>
                                        <div>
                                            <button class="btn btn-primary btn-sm" @onclick="() => Edit(item)">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                        </div>
                                    </div>
                                    <hr class="my-2" />
                                    <div class="row small">
                                        <div class="col-6 mb-1">
                                            <i class="fas fa-info-circle text-info me-1"></i>
                                            <strong>@ECommerceResources.RefundStatus:</strong>
                                            <br />
                                            <span class="@GetRefundStatusClass(item.RefundStatus)">
                                                @GetRefundStatusText(item.RefundStatus)
                                            </span>
                                        </div>
                                        <div class="col-12 mt-2">
                                            <i class="fas fa-dollar-sign text-warning me-1"></i>
                                            <strong>@FormResources.RefundAmount:</strong>
                                            <span dir="ltr">$@(item.RefundAmount % 1 == 0 ? item.RefundAmount.ToString("F0") : item.RefundAmount.ToString("F2"))</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="d-flex flex-column justify-content-center align-items-center text-center" style="height: 400px;">
                            <i class="fas fa-database text-muted" style="font-size: 60px;"></i>
                            <p class="text-muted mt-3" style="font-size: 18px;">
                                @NotifiAndAlertsResources.NoDataFound
                            </p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div> 