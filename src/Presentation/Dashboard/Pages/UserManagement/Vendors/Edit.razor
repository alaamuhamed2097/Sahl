@page "/users/vendors/edit/{Id:guid}"

@using Common.Enumerations.User
@using Common.Enumerations.VendorType
@using Common.Enumerations.IdentificationType
@attribute [Authorize(Roles = nameof(UserRole.Admin))]

<PageTitle>@ActionsResources.Edit @ECommerceResources.Vendor</PageTitle>

@if (isLoading)
{
    <div class="d-flex justify-content-center align-items-center" style="min-height: 400px;">
        <div class="spinner-border text-primary" role="status">
            <span class="sr-only">@GeneralResources.LoadingDots</span>
        </div>
    </div>
}
else
{
    <div class="container-fluid p-0">
        <div class="card shadow-sm border-0">
            <div class="card-header d-flex bg-primary justify-content-between align-items-center">
                <h4 class="modal-title text-white">
                    <i class="bi bi-pencil-square fs-3 text-white"></i>
                    ✏️ @ActionsResources.Edit @ECommerceResources.Vendor
                </h4>
            </div>
            <EditForm Model="@Model" OnValidSubmit="Save">
                <DataAnnotationsValidator />

                <div class="card-body p-4">
                    <!-- Personal Information Section -->
                    <div class="mb-4">
                        <h5 class="text-primary mb-3"><i class="fas fa-user me-2"></i>@FormResources.PersonalInformation</h5>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>@FormResources.FirstName <span class="text-danger">*</span></label>
                                    <InputText type="text" placeholder="@($"{FormResources.Write} {FormResources.FirstName}")"
                                               class="form-control" @bind-Value="Model.FirstName" />
                                    <ValidationMessage For="@(() => Model.FirstName)" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>@FormResources.LastName <span class="text-danger">*</span></label>
                                    <InputText type="text" placeholder="@($"{FormResources.Write} {FormResources.LastName}")"
                                               class="form-control" @bind-Value="Model.LastName" />
                                    <ValidationMessage For="@(() => Model.LastName)" />
                                </div>
                            </div>
                        </div>
                        <div class="row g-3 mt-2">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>@FormResources.DateOfBirth <span class="text-danger">*</span></label>
                                    <InputDate class="form-control" @bind-Value="Model.BirthDate" />
                                    <ValidationMessage For="@(() => Model.BirthDate)" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Identification Information Section -->
                    <div class="mb-4">
                        <h5 class="text-primary mb-3"><i class="fas fa-id-card me-2"></i>@FormResources.DocumentVerification</h5>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>@ECommerceResources.IdentificationType <span class="text-danger">*</span></label>
                                    <InputSelect @bind-Value="Model.IdentificationType" class="form-control">
                                        <option value="">@FormResources.Select @ECommerceResources.IdentificationType</option>
                                        @foreach (var item in Enum.GetValues(typeof(IdentificationType)))
                                        {
                                            <option value="@item">@item</option>
                                        }
                                    </InputSelect>
                                    <ValidationMessage For="@(() => Model.IdentificationType)" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>@ECommerceResources.IdentificationNumber <span class="text-danger">*</span></label>
                                    <InputText type="text" placeholder="@($"{FormResources.Write} {ECommerceResources.IdentificationNumber}")"
                                               class="form-control" @bind-Value="Model.IdentificationNumber" />
                                    <ValidationMessage For="@(() => Model.IdentificationNumber)" />
                                </div>
                            </div>
                        </div>
                        <div class="row g-3 mt-2">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>@ECommerceResources.IdentificationImageFront <span class="text-danger">*</span></label>
                                    <InputFile class="form-control" OnChange="@((e) => HandleImageUpload(e, true))" accept="image/*" />
                                    <ValidationMessage For="@(() => Model.IdentificationImageFrontPath)" />
                                    @if (!string.IsNullOrEmpty(Model.IdentificationImageFrontPath))
                                    {
                                        <div class="mt-2">
                                            <img src="@GetImageSourceForDisplay(Model.IdentificationImageFrontPath)" alt="Front ID" class="img-thumbnail" style="max-height: 150px;" />
                                        </div>
                                    }
                                </div>
                            </div>
                            @if (Model.IdentificationType != IdentificationType.Passport)
                            {
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>@ECommerceResources.IdentificationImageBack <span class="text-danger">*</span></label>
                                        <InputFile class="form-control" OnChange="@((e) => HandleImageUpload(e, false))" accept="image/*" />
                                        @if (!string.IsNullOrEmpty(Model.IdentificationImageBackPath))
                                        {
                                            <div class="mt-2">
                                                <img src="@GetImageSourceForDisplay(Model.IdentificationImageBackPath)" alt="Back ID" class="img-thumbnail" style="max-height: 150px;" />
                                            </div>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Business Information Section -->
                    <div class="mb-4">
                        <h5 class="text-primary mb-3"><i class="fas fa-store me-2"></i>@ECommerceResources.BusinessInformation</h5>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>@ECommerceResources.StoreName <span class="text-danger">*</span></label>
                                    <InputText type="text" placeholder="@($"{FormResources.Write} {ECommerceResources.StoreName}")"
                                               class="form-control" @bind-Value="Model.StoreName" />
                                    <ValidationMessage For="@(() => Model.StoreName)" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>@ECommerceResources.VendorType <span class="text-danger">*</span></label>
                                    <InputSelect @bind-Value="Model.VendorType" class="form-control">
                                        @foreach (var item in Enum.GetValues(typeof(VendorType)))
                                        {
                                            <option value="@item">@item</option>
                                        }
                                    </InputSelect>
                                    <ValidationMessage For="@(() => Model.VendorType)" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Location Information Section -->
                    <div class="mb-4">
                        <h5 class="text-primary mb-3"><i class="fas fa-map-marker-alt me-2"></i>@FormResources.LocationInformation</h5>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>@ECommerceResources.Address <span class="text-danger">*</span></label>
                                    <InputText type="text" placeholder="@ECommerceResources.Address"
                                               class="form-control" @bind-Value="Model.Address" />
                                    <ValidationMessage For="@(() => Model.Address)" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>@ECommerceResources.PostalCode <span class="text-danger">*</span></label>
                                    <InputText type="text" placeholder="@($"{FormResources.Write} {ECommerceResources.PostalCode}")"
                                               class="form-control" @bind-Value="Model.PostalCode" />
                                    <ValidationMessage For="@(() => Model.PostalCode)" />
                                </div>
                            </div>
                        </div>
                        <div class="row g-3 mt-2">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>@ECommerceResources.State <span class="text-danger">*</span></label>
                                    <InputSelect @bind-Value="SelectedStateId" class="form-control">
                                        <option value="@Guid.Empty">@FormResources.Select @ECommerceResources.State</option>
                                        @foreach (var state in States)
                                        {
                                            <option value="@state.Id">@state.Title</option>
                                        }
                                    </InputSelect>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>@FormResources.City <span class="text-danger">*</span></label>
                                    <InputSelect @bind-Value="Model.CityId" class="form-control" disabled="@(SelectedStateId == Guid.Empty)">
                                        <option value="@Guid.Empty" selected hidden>@FormResources.SelectCity</option>
                                        @foreach (var city in FilteredCities)
                                        {
                                            <option value="@city.Id">@city.Title</option>
                                        }
                                    </InputSelect>
                                    <ValidationMessage For="@(() => Model.CityId)" />
                                    @if (isLoadingCities)
                                    {
                                        <div class="spinner-border spinner-border-sm text-primary mt-1" role="status">
                                            <span class="sr-only">@GeneralResources.LoadingDots</span>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="row g-3 mt-2">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>@ECommerceResources.IsRealEstateRegistered</label>
                                    <div class="form-check">
                                        <InputCheckbox class="form-check-input" @bind-Value="Model.IsRealEstateRegistered" />
                                        <label class="form-check-label">@ECommerceResources.YesRealEstateRegistered</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="mb-4">
                        <h5 class="text-primary mb-3"><i class="fas fa-sticky-note me-2"></i>@FormResources.Notes</h5>
                        <div class="row g-3">
                            <div class="col-12">
                                <div class="form-group">
                                    <InputTextArea class="form-control" rows="3" @bind-Value="Model.Notes" />
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

                <div class="card-footer bg-light py-3 d-flex justify-content-end gap-2">
                    <button type="button" class="btn btn-responsive btn-secondary px-4" @onclick="CloseModal">
                        <i class="feather icon-x-circle me-2 ms-2"></i> @ActionsResources.Cancel
                    </button>
                    <button type="submit" class="btn btn-primary btn-responsive text-white px-4" disabled="@isSaving">
                        @if (isSaving)
                        {
                            <span class="spinner-border spinner-border-sm me-1" role="status" aria-hidden="true"></span>
                            <span class="sr-only">@GeneralResources.Loading ...</span>
                        }
                        else
                        {
                            <span>
                                <i class="feather icon-save me-1 ms-2"></i>
                                @ActionsResources.Save
                            </span>
                        }
                    </button>
                </div>
            </EditForm>
        </div>
    </div>
}