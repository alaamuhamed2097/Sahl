@page "/users/administrators"

@attribute [Authorize(Roles = nameof(UserRole.Admin))]
@using Common.Enumerations
@using Common.Enumerations.FieldType
@using Common.Enumerations.User
@using Shared.DTOs.ECommerce
@using Shared.DTOs.ECommerce.Item
@using Shared.DTOs.User
@using Shared.DTOs.User.Admin
@inherits BaseListPage<AdminProfileDto>

<PageTitle>@ECommerceResources.Admins</PageTitle> 

<div class="col-sm-12">  
    <div class="card">  
        <div class="card-header bg-primary text-white py-3 d-flex justify-content-between align-items-center">
            <h5 class="mb-0 fw-semibold text-white">🧑‍💼 @GeneralResources.Admins</h5>
        </div>
        <div class="card-body">
            <div class="dt-responsive table-responsive">
                <!-- Filtration start -->
                <ul class="navbar-nav d-flex flex-row align-items-center gap-3 mb-2 px-0 w-100">
                    <li class="nav-item col-md-6 w-auto d-flex flex-row align-items-center gap-3">
                        <EditForm Model="searchModel" OnSubmit="@Search">
                            <!-- Search Box -->
                            <div class="input-group rounded" style="width: 170px; height: 38px;">
                                <input type="text" @bind="searchModel.SearchTerm"
                                       id="searchInput"
                                       class="form-control text-center border-0 @(ResourceManager.CurrentLanguage == Language.Arabic ? "rounded-end" : "rounded-start")"
                                       placeholder="@ActionsResources.Search"
                                       style="height: 38px;" />
                                <button type="submit"
                                        class="btn btn-danger d-flex align-items-center justify-content-center border-0 @(ResourceManager.CurrentLanguage == Language.Arabic ? "rounded-start" : "rounded-end")"
                                        style="width: 40px; height: 38px;">
                                    <i class="fas fa-search text-white m-0"></i>
                                </button>
                            </div>
                        </EditForm>

                        <!-- Page Size -->
                                                                <div class="d-flex align-items-center gap-2">
                                            <select class="form-select rounded-3 shadow-sm border-light text-primary fw-bold text-center custom-dropdown"
                                                    style="width: 130px; height: 40px; padding-right: 30px;"
                                                    @onchange="OnPageSizeChanged">
                                                <option value="10"selected="@(searchModel.PageSize == 10)">10</option>
                                                <option value="15"selected="@(searchModel.PageSize == 15)">15</option>
                                                <option value="20"selected="@(searchModel.PageSize == 20)">20</option>
                                                <option value="30"selected="@(searchModel.PageSize == 30)">30</option>
                                            </select>
                                        </div>
                    </li>
                    <li class="nav-item ms-auto d-flex flex-row align-items-center gap-2">
                        <!-- Export Buttons -->
                        <div class="dropdown">
                            <button class="btn btn-info" type="button" id="exportDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-file-export me-2"></i>
                                <span class="fw-bold">@ActionsResources.Export</span>
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="exportDropdown">
                                <li><a class="dropdown-item" href="javascript:void(0)" @onclick="ExportToExcel"><i class="far fa-file-excel mx-2"></i>@GeneralResources.Excel</a></li>
                                <li><a class="dropdown-item" href="javascript:void(0)" @onclick="ExportToPrint"><i class="fas fa-print mx-2"></i>@ActionsResources.Print</a></li>
                            </ul>
                        </div>

                        <!-- Add Button -->
                        <button class="btn btn-success" @onclick="Add">
                            <i class="feather icon-plus-circle me-2"></i>
                            <span class="fw-bold">@ActionsResources.Add</span>
                        </button>
                    </li>
                </ul>

                <table id="order-table" class="table table-striped table-bordered nowrap">
                    <thead>
                        <tr>
                            <th class="text-center">@ECommerceResources.UserName</th>
                            <th class="text-center">@ECommerceResources.Email</th>
                            <th class="text-center">@ECommerceResources.Name</th>
                            <th class="text-center">@ECommerceResources.UserState</th>
                            <th class="text-center">@ECommerceResources.Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (items != null && items.Count()!=0)
                        {
                            @foreach (var item in items)
                            {
                                <tr>
                                    <td class="text-center align-middle">@item.UserName</td>
                                    <td class="text-center align-middle">@item.Email</td>
                                    <td class="text-center align-middle">@item.FirstName @item.LastName</td>
                                    <td class="text-center align-middle">
                                        @if(item.UserState == UserStateType.Active)
                                        {
                                            <span class="badge bg-success">@UserResources.Active</span>
                                        }
                                        else if (item.UserState == UserStateType.Inactive)
                                        {
                                            <span class="badge bg-secondary">@UserResources.PendingActivation</span>
                                        }
                                        else if (item.UserState == UserStateType.Auto_Locked)
                                        {
                                            <span class="badge bg-warning text-dark">@UserResources.Banned</span>
                                        }
                                        else if (item.UserState == UserStateType.Restricted)
                                        {
                                            <span class="badge bg-dark">@UserResources.Restricted</span>
                                        }
                                        else if (item.UserState == UserStateType.Deleted)
                                        {
                                            <span class="badge bg-danger">@FormResources.Deleted</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-light text-dark">@GeneralResources.Other</span>
                                        }
                                    </td>
                                    <td class="d-flex justify-content-center gap-2 align-content-center">
                                        <button class="btn btn-primary" @onclick="() => Edit(item)">
                                            @ActionsResources.Edit
                                        </button>
                                        <button class="btn btn-danger" @onclick="() => Delete(new Guid(item.Id))">
                                            @ActionsResources.Delete
                                        </button>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class=" text-center">
                                           <div class="text-center p-4">
    <!-- أيقونة كبيرة -->
    <i class="fas fa-database text-muted" style="font-size: 60px;"></i>
    
    <!-- نص -->
    <p class="text-muted mt-3" style="font-size: 18px;">
          @NotifiAndAlertsResources.NoDataFound
    </p>
</div>
                                    
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <!-- Pagination start -->
               <div class="pagination-wrapper d-flex flex-column justify-content-end flex-grow-1">
    <div class="d-flex flex-wrap align-items-center justify-content-between gap-3 mt-4 pagination-container" dir="ltr">

        <!-- النص الإحصائي -->
        <div class="text-muted small">
            @string.Format(
                ActionsResources.ShowingEntries,
                ((currentPage - 1) * searchModel.PageSize + 1),
                Math.Min(currentPage * searchModel.PageSize, totalRecords),
                totalRecords
            )
        </div>

        <!-- الباجينيشن -->
        <nav aria-label="Pagination">
            <ul class="pagination pagination-sm mb-0 shadow-sm rounded-3 overflow-hidden">

                <!-- أول صفحة -->
                <li class="page-item cursor-pointer @(currentPage == 1 ? "disabled" : "")">
                    <a class="page-link" href="javascript:void(0)" @onclick="() => GoToPage(1)" title="@ActionsResources.First">
                        <i class="fas fa-angle-double-left"></i>
                    </a>
                </li>

                <!-- السابقة -->
                <li class="page-item cursor-pointer @(currentPage == 1 ? "disabled" : "")">
                    <a class="page-link" href="javascript:void(0)" @onclick="() => GoToPage(currentPage - 1)">
                        <i class="fas fa-angle-left"></i>
                    </a>
                </li>

                @* أرقام الصفحات *@
                @{
                    const int maxVisiblePages = 5;
                    int startPage = Math.Max(1, currentPage - 2);
                    int endPage = Math.Min(totalPages, startPage + maxVisiblePages - 1);
                    if (endPage - startPage + 1 < maxVisiblePages)
                    {
                        startPage = Math.Max(1, endPage - maxVisiblePages + 1);
                    }
                }

                @if (startPage > 1)
                {
                    <li class="page-item disabled"><span class="page-link">...</span></li>
                }

                @for (int pag = startPage; pag <= endPage; pag++)
                {
                    int pageNumber = pag;
                    <li class="page-item cursor-pointer @(pag == currentPage ? "active" : "")">
                        <a class="page-link fw-bold" href="javascript:void(0)" @onclick="() => GoToPage(pageNumber)">@pag</a>
                    </li>
                }

                @if (endPage < totalPages)
                {
                    <li class="page-item disabled"><span class="page-link">...</span></li>
                }

                <!-- التالية -->
                <li class="page-item cursor-pointer @(currentPage == totalPages ? "disabled" : "")">
                    <a class="page-link" href="javascript:void(0)" @onclick="() => GoToPage(currentPage + 1)">
                        <i class="fas fa-angle-right"></i>
                    </a>
                </li>

                <!-- آخر صفحة -->
                <li class="page-item cursor-pointer @(currentPage == totalPages ? "disabled" : "")">
                    <a class="page-link" href="javascript:void(0)" @onclick="() => GoToPage(totalPages)" title="@ActionsResources.Last">
                        <i class="fas fa-angle-double-right"></i>
                    </a>
                </li>

            </ul>
        </nav>
    </div>
</div>

                <!-- Pagination end -->

            </div> 
        </div> 
    </div> 
</div>