@page "/users/administrators/edit/{id:guid}"

@using Common.Enumerations.User
@attribute [Authorize(Roles = nameof(UserRole.Admin))]

<div class="container-fluid p-0">
    <div class="card shadow-sm border-0">
        <div class="card-header d-flex justify-content-between bg-primary align-items-center">
            <h4 class="modal-title text-white">
              ✏️  @ActionsResources.Edit @ECommerceResources.Admin
            </h4>
        </div>
        <EditForm Model="@Model" OnValidSubmit="Save">
            <DataAnnotationsValidator />

            <div class="card-body p-4">
                <div class="row g-3">
                    <!-- Personal Information -->
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>@FormResources.FirstName</label>
                            <InputText type="text" placeholder="@($"{FormResources.Write} {FormResources.FirstName}")"
                                       class="form-control" @bind-Value="Model.FirstName" />
                            <ValidationMessage For="@(() => Model.FirstName)" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>@FormResources.LastName</label>
                            <InputText type="text" placeholder="@($"{FormResources.Write} {FormResources.LastName}")"
                                       class="form-control" @bind-Value="Model.LastName" />
                            <ValidationMessage For="@(() => Model.LastName)" />
                        </div>
                    </div>
                </div>

                <!-- Optional: Add other editable fields here in the same pattern -->
                @* <div class="row g-3 mt-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>@FormResources.Email</label>
                            <InputText type="email" class="form-control" 
                                      @bind-Value="Model.Email" disabled />
                            <small class="text-muted">@FormResources.EmailCannotBeChanged</small>
                        </div>
                    </div>
                </div> *@
            </div>

            <div class="card-footer bg-light py-3 d-flex justify-content-end gap-2 btn-responsive ">
                <button type="button" class="btn btn-secondary btn-responsive px-4" data-dismiss="modal" @onclick="CloseModal">
                    <i class="feather icon-x-circle me-2"></i>  @ActionsResources.Cancel
                </button>
                <button type="submit" class="btn btn-primary px-4 btn-responsive " disabled="@isSaving">
                    @if (isSaving)
                    {
                        <span class="spinner-border spinner-border-sm me-1" role="status" aria-hidden="true"></span>
                        <span class="sr-only">@GeneralResources.Loading ...</span>
                    }
                    else
                    {
                        <span>
                          <i class="feather icon-save me-2"></i> @ActionsResources.Save</span>
                    }
                </button>
            </div>
        </EditForm>
    </div>
</div>

