@page "/users/customers"

@attribute [Authorize(Roles = nameof(UserRole.Admin))]
@using Common.Enumerations.User
@using Common.Enumerations.VendorType
@using Shared.DTOs.Customer

@inherits BaseListPage<CustomerDto>

<PageTitle>@ECommerceResources.Customers</PageTitle>

<style>
    .cursor-pointer {
        cursor: pointer;
        user-select: none;
    }

        .cursor-pointer:hover {
            background-color: rgba(0, 0, 0, 0.05);
        }

    .status-badge {
        font-size: 0.85rem;
        padding: 0.35rem 0.65rem;
    }
</style>

<div class="col-sm-12">
    <div class="card">
        <!-- Header -->
        <div class="card-header bg-primary text-white py-3 d-flex justify-content-between align-items-center">
            <h5 class="mb-0 fw-semibold text-white">
                üßë‚Äçüíº @ECommerceResources.Customers
            </h5>
        </div>

        <div class="card-body">
            <div class="dt-responsive table-responsive">
                <!-- Search + Page Size + Export + Add -->
                <ul class="navbar-nav d-flex flex-row align-items-center gap-3 mb-3 px-0 w-100">
                    <!-- Search -->
                    <li class="nav-item col-md-6">
                        <EditForm Model="searchModel" OnSubmit="@Search">
                            <div class="search-container">
                                <div class="input-group search-box">
                                    <input type="text"
                                           @bind="searchModel.SearchTerm"
                                           id="searchInput"
                                           class="form-control search-input"
                                           placeholder="@ActionsResources.Search" />
                                    <button type="submit"
                                            class="btn btn-search">
                                        <i class="fas fa-search"></i>
                                    </button>
                                </div>
                            </div>
                        </EditForm>
                    </li>

                    <!-- Page Size -->
                    <li class="nav-item">
                        <div class="d-flex align-items-center gap-2">
                            <select class="form-select rounded-3 shadow-sm border-light text-primary fw-bold text-center custom-dropdown"
                                    style="width: 130px; height: 40px; padding-right: 30px;"
                                    @onchange="OnPageSizeChanged">
                                <option value="10" selected="@(searchModel.PageSize == 10)">10</option>
                                <option value="15" selected="@(searchModel.PageSize == 15)">15</option>
                                <option value="20" selected="@(searchModel.PageSize == 20)">20</option>
                                <option value="30" selected="@(searchModel.PageSize == 30)">30</option>
                            </select>
                        </div>
                    </li>

                    <!-- Page Size -->
                    <li class="nav-item">
                      
                    </li>

                    <!-- Export -->
                    <li class="nav-item ms-auto d-flex flex-row align-items-center gap-2">
                        <div class="dropdown">
                            <button class="btn btn-info" type="button" id="exportDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-file-export mx-1"></i>
                                <span class="fw-bold">@ActionsResources.Export</span>
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="exportDropdown">
                                <li><a class="dropdown-item" href="javascript:void(0)" @onclick="ExportToExcel"><i class="far fa-file-excel mx-2"></i>@GeneralResources.Excel</a></li>
                                <li><a class="dropdown-item" href="javascript:void(0)" @onclick="ExportToPrint"><i class="fas fa-print mx-2"></i>@ActionsResources.Print</a></li>
                            </ul>
                        </div>

                        <!-- Add Button -->
                        <button class="btn btn-success" @onclick="Add">
                            <i class="feather icon-plus-circle mx-1"></i>
                            <span class="fw-bold">@ActionsResources.Add</span>
                        </button>
                    </li>
                </ul>

                <!-- Desktop Table -->
                <div class="d-none d-md-block">
                    <table id="customers-table" class="table table-striped table-bordered nowrap">
                        <thead>
                            <tr>
                                <th class="text-center cursor-pointer" @onclick='() => SortByColumn("FirstName")'>
                                    @ECommerceResources.Name
                                    <i class="@GetSortIconClass("FirstName")"></i>
                                </th>

                                <th class="text-center cursor-pointer" @onclick='() => SortByColumn("Email")'>
                                    @ECommerceResources.Email
                                    <i class="@GetSortIconClass("Email")"></i>
                                </th>

                                <th class="text-center" >
                                    Status
                                </th>

                                <th class="text-center">
                                    Orders
                                </th>

                                <th class="text-center">
                                    Wallet Balance
                                </th>

                                <th class="text-center"  @onclick='() => SortByColumn("LastLogin")'>
                                    Last Login
                                    <i class="@GetSortIconClass("LastLogin")"></i>
                                </th>

                                <th class="text-center">@ECommerceResources.Actions</th>
                            </tr>
                        </thead>

                        <tbody>
                            @if (items != null && items.Count() != 0)
                            {
                                @foreach (var item in items)
                                {
                                    <tr>
                                        <td class="text-center align-middle">@item.FirstName @item.LastName</td>
                                        <td class="text-center align-middle">@item.Email</td>
                                        <td class="text-center align-middle">
                                            <span class="status-badge @GetStatusBadgeClass(item.UserStatus)">
                                                @GetStatusDisplayName(item.UserStatus)
                                            </span>
                                        </td>
                                        <td class="text-center align-middle">
                                            <span class="badge bg-info">@item.OrderCount</span>
                                        </td>
                                        <td class="text-center align-middle">
                                            <span class="text-success fw-bold">@item.WalletBalance.ToString("C")</span>
                                        </td>
                                        <td class="text-center align-middle">
                                            @(item.LastLoginDate?.ToString("g") ?? "Never")
                                        </td>
                                        <td class="text-center m-r-10 align-middle">
                                            <div class="btn-group" role="group">
                                                <!-- View Button -->
                                                <button type="button" class="btn me-2 btn-sm btn-primary" @onclick="() => ViewDetails(item)">
                                                    <i class="fas fa-eye"></i>
                                                </button>

                                                <!-- Edit Button - ÿ¨ÿ±ÿ® Ÿàÿßÿ≠ÿØÿ© ŸÖŸÜ Ÿáÿ∞Ÿá -->
                                                <button type="button" class="btn me-2 btn-sm btn-warning" @onclick="() => Edit(item)">
                                                    <i class="fas fa-pen"></i> <!-- ÿßŸÑÿ≠ŸÑ ÿßŸÑÿ£ŸàŸÑ -->
                                                </button>

                                                <button type="button" class="btn me-2 btn-sm btn-danger" @onclick="() => Delete(item.Id)">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="7" class="text-center">
                                        <div class="p-4">
                                            <i class="fas fa-database text-muted" style="font-size: 60px;"></i>
                                            <p class="text-muted mt-3">@NotifiAndAlertsResources.NoDataFound</p>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Mobile Cards -->
                <div class="d-block d-md-none">
                    @if (items != null && items.Any())
                    {
                        foreach (var item in items)
                        {
                            <div class="card shadow-sm mb-3 border-0">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <div>
                                            <h6 class="mb-1">@item.FirstName @item.LastName</h6>
                                            <small class="text-muted">@item.Email</small>
                                        </div>
                                        <span class="status-badge @GetStatusBadgeClass(item.UserStatus)">
                                            @GetStatusDisplayName(item.UserStatus)
                                        </span>
                                    </div>

                                    <div class="row my-2">
                                        <div class="col-6">
                                            <small class="text-muted">Orders:</small>
                                            <p class="mb-0 fw-bold">@item.OrderCount</p>
                                        </div>
                                        <div class="col-6 text-end">
                                            <small class="text-muted">Wallet:</small>
                                            <p class="mb-0 fw-bold text-success">@item.WalletBalance.ToString("C")</p>
                                        </div>
                                    </div>

                                    <small class="text-muted">Last Login: @(item.LastLoginDate?.ToString("g") ?? "Never")</small>

                                    <div class="d-grid gap-2 mt-3">
                                        <button class="btn btn-sm btn-primary" @onclick="() => ViewDetails(item)">
                                            <i class="fas fa-eye"></i> View Profile
                                        </button>
                                        <button class="btn btn-sm btn-warning" @onclick="() => Edit(item)">
                                            <i class="fas fa-edit"></i> Edit
                                        </button>
                                        <button class="btn btn-sm btn-danger" @onclick="() => Delete(item.Id)">
                                            <i class="fas fa-trash"></i> Delete
                                        </button>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center p-4">
                            <i class="fas fa-database text-muted" style="font-size: 60px;"></i>
                            <p class="text-muted mt-3">@NotifiAndAlertsResources.NoDataFound</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Pagination -->
            @if (totalPages > 1)
            {
                <nav aria-label="Page navigation" class="mt-4">
                    <ul class="pagination justify-content-center">
                        <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                            <button class="page-link" @onclick="() => GoToPage(1)">First</button>
                        </li>
                        <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                            <button class="page-link" @onclick="() => GoToPage(currentPage - 1)">Previous</button>
                        </li>

                        @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                        {
                            <li class="page-item @(i == currentPage ? "active" : "")">
                                <button class="page-link" @onclick="() => GoToPage(i)">@i</button>
                            </li>
                        }

                        <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                            <button class="page-link" @onclick="() => GoToPage(currentPage + 1)">Next</button>
                        </li>
                        <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                            <button class="page-link" @onclick="() => GoToPage(totalPages)">Last</button>
                        </li>
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>

@code {
    private string GetStatusBadgeClass(UserStateType status)
    {
        return status switch
        {
            UserStateType.Active => "bg-success",
            UserStateType.Inactive => "bg-secondary",
            UserStateType.Auto_Locked => "bg-warning",
            UserStateType.Restricted => "bg-danger",
            UserStateType.Suspended => "bg-danger",
            UserStateType.Deleted => "bg-dark",
            _ => "bg-light"
        };
    }

    private string GetStatusDisplayName(UserStateType status)
    {
        return status switch
        {
            UserStateType.Active => "Active",
            UserStateType.Inactive => "Inactive",
            UserStateType.Auto_Locked => "Locked",
            UserStateType.Restricted => "Restricted",
            UserStateType.Suspended => "Suspended",
            UserStateType.Deleted => "Deleted",
            _ => status.ToString()
        };
    }

    private void ViewDetails(CustomerDto customer)
    {
        Navigation.NavigateTo($"/users/customer/details/{customer.Id}");
    }

    private async Task GoToPage(int pageNumber)
    {
        searchModel.PageNumber = pageNumber;
        await Search();
    }
}
