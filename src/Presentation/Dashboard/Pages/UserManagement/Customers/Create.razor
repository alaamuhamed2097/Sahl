@page "/users/customer/create"

@using Common.Enumerations.User
@attribute [Authorize(Roles = nameof(UserRole.Admin))]

<PageTitle>@ECommerceResources.Customer</PageTitle>

<div class="container-fluid p-0">
    <div class="card shadow-sm border-0">
        <div class="card-header d-flex bg-primary justify-content-between align-items-center">
            <h4 class="modal-title text-white">
                <i class="bi bi-plus-circle fs-3 text-white"></i>
                ➕ @ActionsResources.Add @ECommerceResources.Customer
            </h4>
        </div>

        <EditForm Model="@Model" OnValidSubmit="Save">
            <DataAnnotationsValidator />

            <div class="card-body p-4">
                <!-- Personal Information -->
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>@UserResources.FirstName <span class="text-danger">*</span></label>
                            <InputText type="text"
                                       placeholder="@($"{FormResources.Write} {UserResources.FirstName}")"
                                       class="form-control"
                                       @bind-Value="Model.FirstName" />
                            <ValidationMessage For="@(() => Model.FirstName)" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>@UserResources.LastName <span class="text-danger">*</span></label>
                            <InputText type="text"
                                       placeholder="@($"{FormResources.Write} {UserResources.LastName}")"
                                       class="form-control"
                                       @bind-Value="Model.LastName" />
                            <ValidationMessage For="@(() => Model.LastName)" />
                        </div>
                    </div>
                </div>

                <!-- Contact Information -->
                <div class="row g-3 mt-2">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>@UserResources.Email</label>
                            <InputText type="email"
                                       placeholder="@($"{FormResources.Write} {UserResources.Email}")"
                                       class="form-control"
                                       @bind-Value="Model.Email" />
                            <ValidationMessage For="@(() => Model.Email)" />
                            <small class="form-text text-muted">@GeneralResources.Optional</small>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>@UserResources.PhoneCode <span class="text-danger">*</span></label>
                            <InputText type="text"
                                       placeholder="+20"
                                       class="form-control"
                                       @bind-Value="Model.PhoneCode" />
                            <ValidationMessage For="@(() => Model.PhoneCode)" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>@UserResources.PhoneNumber <span class="text-danger">*</span></label>
                            <InputText type="text"
                                       placeholder="1234567890"
                                       class="form-control"
                                       @bind-Value="Model.PhoneNumber" />
                            <ValidationMessage For="@(() => Model.PhoneNumber)" />
                        </div>
                    </div>
                </div>

                <!-- Security Information -->
                <div class="row g-3 mt-2">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>@UserResources.Password <span class="text-danger">*</span></label>
                            <InputText type="password"
                                       placeholder="@($"{FormResources.Write} {UserResources.Password}")"
                                       class="form-control"
                                       @bind-Value="Model.Password" />
                            <ValidationMessage For="@(() => Model.Password)" />
                            <small class="form-text text-muted">@UserResources.PasswordMinLength</small>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>@UserResources.ConfirmPassword <span class="text-danger">*</span></label>
                            <InputText type="password"
                                       placeholder="@($"{FormResources.Write} {UserResources.ConfirmPassword}")"
                                       class="form-control"
                                       @bind-Value="Model.ConfirmPassword" />
                            <ValidationMessage For="@(() => Model.ConfirmPassword)" />
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-footer bg-light py-3 d-flex justify-content-end gap-2">
                <button type="button"
                        class="btn btn-responsive btn-secondary px-4"
                        @onclick="CloseModal"
                        disabled="@isSaving">
                    <i class="feather icon-x-circle me-2"></i>
                    @ActionsResources.Cancel
                </button>
                <button type="submit"
                        class="btn btn-primary btn-responsive text-white px-4"
                        disabled="@isSaving">
                    @if (isSaving)
                    {
                        <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                        <span>@GeneralResources.Loading...</span>
                    }
                    else
                    {
                        <span>
                            <i class="feather icon-save me-2"></i>
                            @ActionsResources.Save
                        </span>
                    }
                </button>
            </div>
        </EditForm>
    </div>
</div>