            </div>

            <div class="card-footer bg-light py-3 d-flex justify-content-between">
                <button type="button" class="btn btn-secondary px-4" @onclick="CloseModal">
                    @ActionsResources.Cancel
                </button>
                <button type="submit" class="btn btn-success px-4" disabled="@isSaving">
                    @if (isSaving)
                    {
                        <span class="spinner-border spinner-border-sm me-1" role="status" aria-hidden="true"></span>
                    }
                    @ActionsResources.Save
                </button>
            </div>
        </EditForm>
    </div>
</div>
