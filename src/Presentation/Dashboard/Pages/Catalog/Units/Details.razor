@page "/catalog/units/{id:guid?}"
@page "/units/{id:guid?}"

@using Common.Enumerations.User
@attribute [Authorize(Roles = nameof(UserRole.Admin))]

<PageTitle>@ECommerceResources.Units</PageTitle>

<div class="container-fluid p-0">
    <div class="card shadow-sm border-0">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h4 class="modal-title">
                @(Model.Id == Guid.Empty ? ActionsResources.Add : ActionsResources.Edit) @ECommerceResources.Unit
            </h4>
        </div>

        <EditForm Model="@Model" OnValidSubmit="Save">
            <DataAnnotationsValidator />

            <div class="card-body p-4">
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>@FormResources.ArabicTitle</label>
                            <InputText type="text" placeholder="@($"{FormResources.Write} {FormResources.ArabicTitle}")" class="form-control" @bind-Value="Model.TitleAr" />
                            <ValidationMessage For="@(() => Model.TitleAr)" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>@FormResources.EnglishTitle</label>
                            <InputText type="text" placeholder="@($"{FormResources.Write} {FormResources.EnglishTitle}")" class="form-control" @bind-Value="Model.TitleEn" />
                            <ValidationMessage For="@(() => Model.TitleEn)" />
                        </div>
                    </div>
                </div>

                <!-- Conversion Units Sections -->
                <div class="row mt-4 g-4">
                    <div class="col-lg-6">
                        <div class="border p-3 rounded-3 h-100">
                            <h6 class="fw-semibold mb-3 text-primary">
                                <i class="feather icon-arrow-down me-2"></i> @ECommerceResources.ConvertFromUnits
                            </h6>

                            @if (Model.ConversionUnitsFrom != null)
                            {
                                @foreach (var (con, index) in Model.ConversionUnitsFrom.Select((item, i) => (item, i)))
                                {
                                    <div class="row g-2 align-items-end mb-3" @key="con.GetHashCode()">
                                        <div class="col-md-5">
                                            <label class="form-label small text-muted mb-1">@ECommerceResources.FromUnit</label>
                                            <InputSelect class="form-select px-3" @bind-Value="con.ConversionUnitId">
                                                <option value="">@ActionsResources.Select</option>
                                                @foreach (var unit in (AvailableUnits ?? Enumerable.Empty<UnitDto>()).Where(u => u.Id != Model.Id))
                                                {
                                                    <option value="@unit.Id">@unit.Title</option>
                                                }
                                            </InputSelect>
                                            <ValidationMessage For="@(() => con.ConversionUnitId)" class="text-danger small" />
                                        </div>

                                        <div class="col-md-5">
                                            <label class="form-label small text-muted mb-1">@ECommerceResources.ConversionFactor</label>
                                            <InputNumber class="form-control py-2" @bind-Value="con.ConversionFactor" min="0.0001" step="0.0001" />
                                            <ValidationMessage For="@(() => con.ConversionFactor)" class="text-danger small" />
                                        </div>

                                        <div class="col-md-2">
                                            <button @onclick="() => RemoveConversionUnitsFrom(index)" type="button" class="btn rounded-2 w-100 btn-danger btn-sm d-flex align-items-center justify-content-center gap-2 py-2 mb-0">
                                                <i class="feather icon-trash-2 m-0"></i>
                                                @ActionsResources.Delete
                                            </button>
                                        </div>
                                    </div>
                                }
                            }

                            <button type="button" @onclick="AddNewConversionUnitFrom"
                                    class="btn btn-outline-primary btn-sm mt-2">
                                <i class="feather icon-plus me-1"></i> @ActionsResources.Add
                            </button>
                        </div>
                    </div>

                    <div class="col-lg-6">
                        <div class="border p-3 rounded-3 h-100">
                            <h6 class="fw-semibold mb-3 text-primary">
                                <i class="feather icon-arrow-up me-2"></i> @ECommerceResources.ConvertToUnits
                            </h6>

                            @if (Model.ConversionUnitsTo != null)
                            {
                                @foreach (var (con, index) in Model.ConversionUnitsTo.Select((item, i) => (item, i)))
                                {
                                    <div class="row g-2 align-items-end mb-3" @key="con.GetHashCode()">
                                        <div class="col-md-5">
                                            <label class="form-label small text-muted mb-1">@ECommerceResources.TargetUnit</label>
                                            <InputSelect class="form-select px-3 py-2" @bind-Value="con.ConversionUnitId">
                                                <option value="">@ActionsResources.Select</option>
                                                @foreach (var unit in (AvailableUnits ?? Enumerable.Empty<UnitDto>()).Where(u => u.Id != Model.Id))
                                                {
                                                    <option value="@unit.Id">@unit.Title</option>
                                                }
                                            </InputSelect>
                                            <ValidationMessage For="@(() => con.ConversionUnitId)" class="text-danger small" />
                                        </div>

                                        <div class="col-md-5">
                                            <label class="form-label small text-muted mb-1">@ECommerceResources.ConversionFactor</label>
                                            <InputNumber class="form-control py-2" @bind-Value="con.ConversionFactor" min="0.0001" step="0.0001" />
                                            <ValidationMessage For="@(() => con.ConversionFactor)" class="text-danger small" />
                                        </div>

                                        <div class="col-md-2">
                                            <button @onclick="() => RemoveConversionUnitsTo(index)" type="button" class="btn rounded-2 w-100 btn-danger btn-sm d-flex align-items-center justify-content-center gap-2 py-2 mb-0">
                                                <i class="feather icon-trash-2 m-0"></i>
                                                @ActionsResources.Delete
                                            </button>
                                        </div>
                                    </div>
                                }
                            }

                            <button type="button" @onclick="AddNewConversionUnitTo"
                                    class="btn btn-outline-primary btn-sm mt-2">
                                <i class="feather icon-plus me-1"></i> @ActionsResources.Add
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-footer bg-light py-3 d-flex justify-content-end gap-2">
                <button type="button" class="btn btn-secondary px-4" @onclick="CloseModal">
                    @ActionsResources.Cancel
                </button>
                <button type="submit" class="btn btn-success px-4" disabled="@isSaving">
                    @if (isSaving)
                    {
                        <span class="spinner-border spinner-border-sm me-1" role="status" aria-hidden="true"></span>
                    }
                    @ActionsResources.Save
                </button>
            </div>
        </EditForm>
    </div>
</div>