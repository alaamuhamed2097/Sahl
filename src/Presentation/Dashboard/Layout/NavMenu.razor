<script>
    // يغلق القائمة في الموبايل عند الضغط على أي رابط
    function closeNavMenu() {
        if (window.innerWidth < 768) {
            const $navbar = $(".pcoded-navbar");
            if ($navbar.hasClass('mob-open')) {
                $navbar.removeClass('mob-open');
                $(".mobile-menu, #mobile-collapse, #mobile-collapse1").removeClass('on');
                hideSidebarOverlay();
            }
        }
    }


    // إظهار overlay عند فتح السايد بار
    function showSidebarOverlay() {
        if (window.innerWidth < 768) {
            document.getElementById("sidebar-overlay").classList.add("show");
        }
    }

    // إخفاء overlay
    function hideSidebarOverlay() {
        const overlay = document.getElementById("sidebar-overlay");
        if (overlay) overlay.classList.remove("show");
    }

    // غلق السايد بار بالضغط على الخلفية
    function closeSidebarOverlay() {
        const $navbar = $(".pcoded-navbar");
        if ($navbar.hasClass('mob-open')) {
            $navbar.removeClass('mob-open');
            $(".mobile-menu, #mobile-collapse, #mobile-collapse1").removeClass('on');
            hideSidebarOverlay();
        }
    }

    // ملاحظة: افتح overlay عند فتح السايد بار
    $(document).on('click', '#mobile-collapse, #mobile-collapse1, .mobile-menu', function () {
        const $navbar = $(".pcoded-navbar");
        setTimeout(() => {
            if ($navbar.hasClass('mob-open')) {
                showSidebarOverlay();
            } else {
                hideSidebarOverlay();
            }
        }, 200);
    });
</script>

